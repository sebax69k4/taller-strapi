{
  "kind": "collectionType",
  "collectionName": "facturas",
  "info": {
    "singularName": "factura",
    "pluralName": "facturas",
    "displayName": "factura"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "numero_factura": {
      "type": "string",
      "unique": true
    },
    "fecha_emision": {
      "type": "date",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "iva": {
      "type": "decimal",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "orden_de_trabajo": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::orden-de-trabajo.orden-de-trabajo",
      "inversedBy": "factura"
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "pendiente",
        "pagado"
      ],
      "default": "pendiente"
    },
    "metodo_pago": {
      "type": "enumeration",
      "enum": [
        "efectivo",
        "tarjeta_debito",
        "tarjeta_credito",
        "transferencia",
        "cheque"
      ]
    },
    "referencia_pago": {
      "type": "string"
    },
    "fecha_pago": {
      "type": "datetime"
    },
    "desglose": {
      "type": "json"
    }
  }
}