{
  "kind": "collectionType",
  "collectionName": "servicios",
  "info": {
    "singularName": "servicio",
    "pluralName": "servicios",
    "displayName": "servicio",
    "description": "Cat√°logo de servicios del taller"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "text"
    },
    "precio_base": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "tiempo_estimado": {
      "type": "integer",
      "default": 60,
      "min": 0
    },
    "categoria": {
      "type": "enumeration",
      "enum": ["mantencion", "reparacion", "diagnostico", "pintura", "electrico", "neumaticos", "otros"],
      "default": "otros"
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "orden_de_trabajos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::orden-de-trabajo.orden-de-trabajo",
      "mappedBy": "servicios"
    },
    "repuestos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::repuesto.repuesto",
      "mappedBy": "servicios"
    }
  }
}
