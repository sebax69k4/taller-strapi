import DashboardLayout from '../layouts/DashboardLayout.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import '../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}
---

<DashboardLayout title="Configuración" role={userRole} currentPath={Astro.url.pathname}>
    <div class="max-w-4xl mx-auto">
        <!-- PageHeading -->
        <div class="flex flex-col gap-2 mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Configuración</h1>
            <p class="text-gray-500 dark:text-gray-400">Administra la configuración del sistema.</p>
        </div>

        <!-- Settings Content -->
        <Card>
            <div class="flex flex-col gap-6">
                <div>
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Configuración General</h2>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">Esta página está en construcción. Pronto podrás configurar las opciones del sistema desde aquí.</p>
                </div>
                <div class="flex gap-4">
                    <Button variant="secondary" icon="arrow_back" onclick="history.back()">Volver</Button>
                </div>
            </div>
        </Card>
    </div>
</DashboardLayout>
