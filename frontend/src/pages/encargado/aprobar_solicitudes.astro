---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { strapiGet, strapiPut } from '../../lib/strapi';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface SolicitudRepuesto {
  id: number;
  documentId: string;
  repuesto: {
    id: number;
    documentId: string;
    nombre: string;
    stock: number;
    sku: string;
  };
  cantidad: number;
  urgencia: string;
  estado: string;
  orden_de_trabajo: {
    id: number;
    documentId: string;
    vehiculo: { marca: string; modelo: string; patente: string };
    mecanico: { nombre: string; apellido: string };
  };
  createdAt: string;
  observaciones?: string;
}

let solicitudes: SolicitudRepuesto[] = [];
let stats = { pendientes: 0, aprobadas: 0, rechazadas: 0 };
let message = '';
let messageType = '';
let error = '';

const urlMessage = Astro.url.searchParams.get('message');
const urlType = Astro.url.searchParams.get('type');
if (urlMessage) {
  message = urlMessage;
  messageType = urlType || 'success';
}

const filtroEstado = Astro.url.searchParams.get('estado') || 'pendiente';

try {
  let endpoint = '/api/solicitud-de-repuestos?populate[repuesto][fields][0]=nombre&populate[repuesto][fields][1]=stock&populate[repuesto][fields][2]=sku&populate[orden_de_trabajo][populate][vehiculo][fields][0]=marca&populate[orden_de_trabajo][populate][vehiculo][fields][1]=modelo&populate[orden_de_trabajo][populate][vehiculo][fields][2]=patente&populate[orden_de_trabajo][populate][mecanico][fields][0]=nombre&populate[orden_de_trabajo][populate][mecanico][fields][1]=apellido&sort=createdAt:desc';
  
  if (filtroEstado !== 'todas') {
    endpoint += `&filters[estado][$eq]=${filtroEstado}`;
  }
  
  const response = await strapiGet(endpoint);
  solicitudes = response.data || [];
  
  // Contar stats
  const allRes = await strapiGet('/api/solicitud-de-repuestos?pagination[limit]=1000');
  const allData = allRes.data || [];
  stats.pendientes = allData.filter((s: any) => s.estado === 'pendiente').length;
  stats.aprobadas = allData.filter((s: any) => s.estado === 'aprobado').length;
  stats.rechazadas = allData.filter((s: any) => s.estado === 'rechazado').length;

  if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    const solicitudId = formData.get('solicitudId');
    const repuestoId = formData.get('repuestoId');
    const cantidad = parseInt(formData.get('cantidad') as string || '0');
    const stockActual = parseInt(formData.get('stockActual') as string || '0');

    if (action === 'aprobar') {
      if (stockActual < cantidad) {
        return Astro.redirect(`/encargado/aprobar_solicitudes?message=${encodeURIComponent('Stock insuficiente para aprobar esta solicitud.')}&type=error`);
      }

      await strapiPut(`/api/solicitud-de-repuestos/${solicitudId}`, { estado: 'aprobado' });
      await strapiPut(`/api/repuestos/${repuestoId}`, { stock: stockActual - cantidad });

      return Astro.redirect(`/encargado/aprobar_solicitudes?message=${encodeURIComponent('Solicitud aprobada. Stock descontado.')}&type=success`);
    } else if (action === 'rechazar') {
      const motivoRechazo = formData.get('motivo_rechazo')?.toString().trim() || 'Sin especificar';
      
      await strapiPut(`/api/solicitud-de-repuestos/${solicitudId}`, {
        estado: 'rechazado',
        observaciones: `Rechazado: ${motivoRechazo}`
      });

      return Astro.redirect(`/encargado/aprobar_solicitudes?message=${encodeURIComponent('Solicitud rechazada.')}&type=warning`);
    }
  }

} catch (e: any) {
  if (e.message?.includes('404') || e.message?.includes('not found')) {
    error = 'El módulo de solicitudes no está configurado.';
  } else {
    error = 'Error al cargar solicitudes';
  }
}

const formatDate = (dateString: string) => new Date(dateString).toLocaleDateString('es-CL', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' });
---

<DashboardLayout title="Solicitudes de Repuesto" role="encargado" currentPath="/encargado/aprobar_solicitudes">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Solicitudes de Repuesto</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">Revisa y aprueba las solicitudes de los mecánicos</p>
      </div>
      <a href="/encargado/inventario" class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 flex items-center gap-2">
        <span class="material-symbols-outlined">inventory_2</span>
        Ver Inventario
      </a>
    </div>

    <!-- Mensajes -->
    {message && (
      <div class={`mb-6 p-4 rounded-xl flex items-center gap-3 ${messageType === 'success' ? 'bg-green-50 border border-green-200 text-green-800' : messageType === 'warning' ? 'bg-amber-50 border border-amber-200 text-amber-800' : 'bg-red-50 border border-red-200 text-red-800'}`}>
        <span class="material-symbols-outlined">{messageType === 'success' ? 'check_circle' : messageType === 'warning' ? 'warning' : 'error'}</span>
        <span class="font-medium">{message}</span>
      </div>
    )}

    {error && (
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-16 text-center">
        <span class="material-symbols-outlined text-5xl text-amber-400 mb-4">info</span>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Módulo no configurado</h3>
        <p class="text-gray-500 mb-4">{error}</p>
        <p class="text-sm text-gray-400">Crea el content-type "solicitud-de-repuesto" en Strapi para habilitar esta función.</p>
      </div>
    )}

    {!error && (
      <>
        <!-- Filtros como Tabs -->
        <div class="flex gap-2 mb-6 bg-white dark:bg-gray-800 rounded-xl p-2 border border-gray-200 dark:border-gray-700">
          <a 
            href="/encargado/aprobar_solicitudes?estado=pendiente"
            class={`flex-1 px-4 py-3 rounded-lg font-medium text-center transition-colors flex items-center justify-center gap-2 ${filtroEstado === 'pendiente' ? 'bg-amber-500 text-white' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700'}`}
          >
            <span class="material-symbols-outlined text-base">pending</span>
            Pendientes
            <span class={`px-2 py-0.5 rounded-full text-xs ${filtroEstado === 'pendiente' ? 'bg-white/20' : 'bg-amber-100 text-amber-700'}`}>{stats.pendientes}</span>
          </a>
          <a 
            href="/encargado/aprobar_solicitudes?estado=aprobado"
            class={`flex-1 px-4 py-3 rounded-lg font-medium text-center transition-colors flex items-center justify-center gap-2 ${filtroEstado === 'aprobado' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700'}`}
          >
            <span class="material-symbols-outlined text-base">check_circle</span>
            Aprobadas
            <span class={`px-2 py-0.5 rounded-full text-xs ${filtroEstado === 'aprobado' ? 'bg-white/20' : 'bg-green-100 text-green-700'}`}>{stats.aprobadas}</span>
          </a>
          <a 
            href="/encargado/aprobar_solicitudes?estado=rechazado"
            class={`flex-1 px-4 py-3 rounded-lg font-medium text-center transition-colors flex items-center justify-center gap-2 ${filtroEstado === 'rechazado' ? 'bg-red-500 text-white' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700'}`}
          >
            <span class="material-symbols-outlined text-base">cancel</span>
            Rechazadas
            <span class={`px-2 py-0.5 rounded-full text-xs ${filtroEstado === 'rechazado' ? 'bg-white/20' : 'bg-red-100 text-red-700'}`}>{stats.rechazadas}</span>
          </a>
        </div>

        <!-- Lista de Solicitudes -->
        {solicitudes.length === 0 ? (
          <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-16 text-center">
            <span class="material-symbols-outlined text-5xl text-gray-300 mb-4">inbox</span>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">No hay solicitudes {filtroEstado !== 'todas' ? filtroEstado + 's' : ''}</h3>
            <p class="text-gray-500">Las solicitudes de repuesto de los mecánicos aparecerán aquí.</p>
          </div>
        ) : (
          <div class="space-y-4">
            {solicitudes.map((solicitud) => {
              const stockSuficiente = (solicitud.repuesto?.stock || 0) >= solicitud.cantidad;
              const urgenciaColor = solicitud.urgencia === 'alta' ? 'bg-red-100 text-red-700' : solicitud.urgencia === 'media' ? 'bg-amber-100 text-amber-700' : 'bg-green-100 text-green-700';
              
              return (
                <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden" x-data="{ showRejectModal: false }">
                  <div class="p-5">
                    <div class="flex flex-col lg:flex-row lg:items-center gap-4">
                      <!-- Info del Repuesto -->
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-3">
                          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary-600">build</span>
                          </div>
                          <div>
                            <div class="flex items-center gap-2 flex-wrap">
                              <h3 class="text-lg font-bold text-gray-900 dark:text-white">{solicitud.repuesto?.nombre || 'Sin repuesto'}</h3>
                              <span class={`px-2 py-0.5 rounded text-xs font-bold ${urgenciaColor}`}>
                                {(solicitud.urgencia || 'media').toUpperCase()}
                              </span>
                            </div>
                            <p class="text-sm text-gray-500">SKU: {solicitud.repuesto?.sku || 'N/A'}</p>
                          </div>
                        </div>
                        
                        <!-- Info de la Orden -->
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 p-3 bg-gray-50 dark:bg-gray-900/50 rounded-lg text-sm">
                          <div>
                            <span class="text-gray-500">Orden</span>
                            <p class="font-medium text-gray-900 dark:text-white">OT-{solicitud.orden_de_trabajo?.id || 'N/A'}</p>
                          </div>
                          <div>
                            <span class="text-gray-500">Vehículo</span>
                            <p class="font-medium text-gray-900 dark:text-white">{solicitud.orden_de_trabajo?.vehiculo?.patente || 'N/A'}</p>
                          </div>
                          <div>
                            <span class="text-gray-500">Mecánico</span>
                            <p class="font-medium text-gray-900 dark:text-white">{solicitud.orden_de_trabajo?.mecanico?.nombre || 'N/A'}</p>
                          </div>
                          <div>
                            <span class="text-gray-500">Fecha</span>
                            <p class="font-medium text-gray-900 dark:text-white">{formatDate(solicitud.createdAt)}</p>
                          </div>
                        </div>

                        {solicitud.observaciones && (
                          <div class="mt-3 p-3 bg-amber-50 dark:bg-amber-900/20 rounded-lg border border-amber-200">
                            <p class="text-sm text-amber-800"><strong>Nota:</strong> {solicitud.observaciones}</p>
                          </div>
                        )}
                      </div>

                      <!-- Cantidad y Stock -->
                      <div class="flex items-center gap-6 p-4 bg-gray-50 dark:bg-gray-900/50 rounded-xl">
                        <div class="text-center">
                          <p class="text-xs text-gray-500 uppercase">Solicitado</p>
                          <p class="text-3xl font-bold text-primary-600">{solicitud.cantidad}</p>
                        </div>
                        <div class="w-px h-12 bg-gray-200"></div>
                        <div class="text-center">
                          <p class="text-xs text-gray-500 uppercase">Stock</p>
                          <p class={`text-3xl font-bold ${stockSuficiente ? 'text-green-600' : 'text-red-600'}`}>{solicitud.repuesto?.stock || 0}</p>
                        </div>
                      </div>

                      <!-- Acciones -->
                      {solicitud.estado === 'pendiente' && (
                        <div class="flex flex-col gap-2 min-w-[140px]">
                          <form method="POST">
                            <input type="hidden" name="action" value="aprobar" />
                            <input type="hidden" name="solicitudId" value={solicitud.documentId} />
                            <input type="hidden" name="repuestoId" value={solicitud.repuesto?.documentId} />
                            <input type="hidden" name="cantidad" value={solicitud.cantidad} />
                            <input type="hidden" name="stockActual" value={solicitud.repuesto?.stock || 0} />
                            <button 
                              type="submit"
                              disabled={!stockSuficiente}
                              class={`w-full px-4 py-2.5 rounded-lg font-medium flex items-center justify-center gap-2 ${stockSuficiente ? 'bg-green-600 text-white hover:bg-green-700' : 'bg-gray-200 text-gray-400 cursor-not-allowed'}`}
                            >
                              <span class="material-symbols-outlined text-base">check</span>
                              Aprobar
                            </button>
                          </form>
                          <button 
                            @click="showRejectModal = true"
                            class="w-full px-4 py-2.5 bg-red-100 text-red-700 rounded-lg font-medium flex items-center justify-center gap-2 hover:bg-red-200"
                          >
                            <span class="material-symbols-outlined text-base">close</span>
                            Rechazar
                          </button>
                        </div>
                      )}

                      {solicitud.estado !== 'pendiente' && (
                        <div class={`px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 ${solicitud.estado === 'aprobado' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}`}>
                          <span class="material-symbols-outlined text-base">{solicitud.estado === 'aprobado' ? 'check_circle' : 'cancel'}</span>
                          {solicitud.estado === 'aprobado' ? 'Aprobada' : 'Rechazada'}
                        </div>
                      )}
                    </div>
                  </div>

                  <!-- Modal Rechazar -->
                  <div x-show="showRejectModal" x-cloak class="fixed inset-0 bg-black/50 flex items-center justify-center z-50" @click.self="showRejectModal = false">
                    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 max-w-md w-full mx-4 shadow-2xl">
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Rechazar Solicitud</h3>
                      <form method="POST">
                        <input type="hidden" name="action" value="rechazar" />
                        <input type="hidden" name="solicitudId" value={solicitud.documentId} />
                        <textarea 
                          name="motivo_rechazo"
                          rows="3"
                          placeholder="Motivo del rechazo..."
                          class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white mb-4"
                        ></textarea>
                        <div class="flex gap-3">
                          <button type="button" @click="showRejectModal = false" class="flex-1 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg">Cancelar</button>
                          <button type="submit" class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Confirmar</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        )}
      </>
    )}
  </div>

  <style>
    [x-cloak] { display: none !important; }
  </style>
</DashboardLayout>
