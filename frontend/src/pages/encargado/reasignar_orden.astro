---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { strapiGet, strapiPut, strapiPost } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

const ordenId = Astro.url.searchParams.get('orden');
let orden: any = null;
let mecanicos: any[] = [];
let ordenesAsignadas: any[] = [];
let error = '';
let successMessage = '';

// Cargar mecánicos con carga de trabajo
try {
  const mecResponse = await strapiGet('/api/mecenicos?populate[orden_de_trabajos][filters][estado][$notIn][0]=entregado&populate[orden_de_trabajos][filters][estado][$notIn][1]=facturado');
  mecanicos = (mecResponse.data || []).map((m: any) => ({
    ...m,
    cargaTrabajo: m.orden_de_trabajos?.length || 0
  })).sort((a: any, b: any) => a.cargaTrabajo - b.cargaTrabajo);
} catch (e: any) {
  error = e.message;
}

// Cargar órdenes asignadas para búsqueda
try {
  const ordenesRes = await strapiGet('/api/orden-de-trabajos?filters[estado][$in][0]=en_diagnostico&filters[estado][$in][1]=en_reparacion&populate[vehiculo][populate]=cliente&populate=mecanico&sort=updatedAt:desc&pagination[limit]=20');
  ordenesAsignadas = ordenesRes.data || [];
} catch (e: any) {
  console.error('Error loading orders:', e);
}

// Cargar orden específica si hay ID
if (ordenId) {
  try {
    const response = await strapiGet(`/api/orden-de-trabajos/${ordenId}?populate[vehiculo][populate]=cliente&populate=mecanico&populate=zona`);
    orden = response.data;
  } catch (e: any) {
    error = 'No se encontró la orden especificada';
  }
}

// Procesar reasignación
if (Astro.request.method === 'POST' && orden) {
  try {
    const formData = await Astro.request.formData();
    const nuevoMecanicoId = formData.get('mecanico_id') as string;
    const motivo = formData.get('motivo') as string;
    
    if (!nuevoMecanicoId) {
      error = 'Debe seleccionar un mecánico';
    } else if (!motivo) {
      error = 'Debe indicar el motivo de la reasignación';
    } else {
      const mecanicoAnterior = orden.mecanico ? `${orden.mecanico.nombre} ${orden.mecanico.apellido || ''}` : 'Sin asignar';
      const nuevoMecanico = mecanicos.find(m => String(m.id) === nuevoMecanicoId);
      
      // Actualizar orden con nuevo mecánico
      await strapiPut(`/api/orden-de-trabajos/${ordenId}`, {
        mecanico: nuevoMecanicoId
      });
      
      // Registrar en bitácora
      try {
        await strapiPost('/api/bitacoras', {
          descripcion: `Orden reasignada de ${mecanicoAnterior} a ${nuevoMecanico?.nombre} ${nuevoMecanico?.apellido || ''}. Motivo: ${motivo}`,
          tipo: 'reasignacion',
          orden_de_trabajo: orden.id
        });
      } catch (e) {
        console.log('Bitácora no registrada');
      }
      
      return Astro.redirect(`/encargado/reasignar_orden?orden=${ordenId}&success=true`);
    }
  } catch (e: any) {
    error = e.message;
  }
}

// Check success
if (Astro.url.searchParams.get('success') === 'true') {
  successMessage = 'Orden reasignada exitosamente';
  // Recargar orden
  if (ordenId) {
    try {
      const response = await strapiGet(`/api/orden-de-trabajos/${ordenId}?populate[vehiculo][populate]=cliente&populate=mecanico&populate=zona`);
      orden = response.data;
    } catch (e) {}
  }
}

const formatStatus = (status: string) => {
  const map: Record<string, string> = {
    en_diagnostico: 'En Diagnóstico',
    en_reparacion: 'En Reparación',
    finalizado: 'Finalizado'
  };
  return map[status] || status;
};

const getStatusColor = (status: string) => {
  switch (status) {
    case 'en_diagnostico': return 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300';
    case 'en_reparacion': return 'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300';
    default: return 'bg-gray-100 text-gray-700';
  }
};
---

<DashboardLayout title="Reasignar Orden" role="encargado" currentPath="/encargado/reasignar_orden">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Reasignar Orden</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">Cambiar el mecánico asignado a una orden de trabajo</p>
      </div>
      <a href="/encargado/asig_orden" class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 transition-colors flex items-center gap-2">
        <span class="material-symbols-outlined">arrow_back</span>
        Volver a Asignar
      </a>
    </div>

    <!-- Mensajes -->
    {successMessage && (
      <div class="p-4 mb-6 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl text-green-800 dark:text-green-200 flex items-center gap-3">
        <span class="material-symbols-outlined">check_circle</span>
        <span class="font-medium">{successMessage}</span>
        <a href="/encargado/trabajos_en_curso" class="ml-auto text-sm underline">Ver en curso →</a>
      </div>
    )}
    {error && (
      <div class="p-4 mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-red-800 dark:text-red-200 flex items-center gap-2">
        <span class="material-symbols-outlined">error</span>
        <span>{error}</span>
      </div>
    )}

    {!ordenId ? (
      <!-- Selección de orden -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Búsqueda -->
        <Card class="lg:col-span-1">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-500">search</span>
            Buscar Orden
          </h2>
          <form class="space-y-4" x-data="{ orderId: '' }">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">ID de la Orden</label>
              <div class="flex gap-2">
                <input 
                  type="text" 
                  name="orden"
                  x-model="orderId"
                  placeholder="Ej: abc123..."
                  class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500"
                />
                <button type="submit" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
                  <span class="material-symbols-outlined">search</span>
                </button>
              </div>
            </div>
          </form>
          <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
            <p class="text-xs text-gray-500">O selecciona una orden de la lista</p>
          </div>
        </Card>

        <!-- Lista de órdenes asignadas -->
        <div class="lg:col-span-2">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-500">list_alt</span>
            Órdenes en Proceso ({ordenesAsignadas.length})
          </h2>
          <div class="space-y-3 max-h-[600px] overflow-y-auto">
            {ordenesAsignadas.length > 0 ? ordenesAsignadas.map((o: any) => (
              <a 
                href={`/encargado/reasignar_orden?orden=${o.documentId}`}
                class="block bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 hover:border-primary-500 hover:shadow-lg transition-all"
              >
                <div class="flex justify-between items-start">
                  <div>
                    <div class="flex items-center gap-2 mb-1">
                      <h3 class="font-bold text-gray-900 dark:text-white">OT-{o.id}</h3>
                      <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${getStatusColor(o.estado)}`}>
                        {formatStatus(o.estado)}
                      </span>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      {o.vehiculo ? `${o.vehiculo.marca} ${o.vehiculo.modelo} - ${o.vehiculo.patente}` : 'Sin vehículo'}
                    </p>
                    {o.vehiculo?.cliente && (
                      <p class="text-sm text-gray-500 mt-1">
                        Cliente: {o.vehiculo.cliente.nombre} {o.vehiculo.cliente.apellido}
                      </p>
                    )}
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      {o.mecanico ? `${o.mecanico.nombre} ${o.mecanico.apellido || ''}` : 'Sin asignar'}
                    </p>
                    <p class="text-xs text-gray-500">Mecánico actual</p>
                  </div>
                </div>
              </a>
            )) : (
              <div class="text-center py-12 bg-gray-50 dark:bg-gray-800/50 rounded-xl">
                <span class="material-symbols-outlined text-5xl text-gray-300 mb-3">inbox</span>
                <p class="text-gray-500">No hay órdenes en proceso</p>
              </div>
            )}
          </div>
        </div>
      </div>
    ) : orden && (
      <!-- Formulario de reasignación -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Info de la orden -->
        <Card class="lg:col-span-1">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white">Orden #{orden.id}</h2>
            <span class={`px-3 py-1 rounded-full text-xs font-bold ${getStatusColor(orden.estado)}`}>
              {formatStatus(orden.estado)}
            </span>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-blue-600">directions_car</span>
              </div>
              <div>
                <p class="text-sm text-gray-500">Vehículo</p>
                <p class="font-bold text-gray-900 dark:text-white">{orden.vehiculo?.patente}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">{orden.vehiculo?.marca} {orden.vehiculo?.modelo}</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-green-600">person</span>
              </div>
              <div>
                <p class="text-sm text-gray-500">Cliente</p>
                <p class="font-bold text-gray-900 dark:text-white">
                  {orden.vehiculo?.cliente?.nombre} {orden.vehiculo?.cliente?.apellido}
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-purple-600">engineering</span>
              </div>
              <div>
                <p class="text-sm text-gray-500">Mecánico Actual</p>
                <p class="font-bold text-gray-900 dark:text-white">
                  {orden.mecanico ? `${orden.mecanico.nombre} ${orden.mecanico.apellido || ''}` : 'Sin asignar'}
                </p>
              </div>
            </div>
            
            {orden.zona && (
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                  <span class="material-symbols-outlined text-amber-600">location_on</span>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Zona</p>
                  <p class="font-bold text-gray-900 dark:text-white">{orden.zona.nombre}</p>
                </div>
              </div>
            )}
          </div>
          
          <a 
            href={`/encargado/detalles_de_orden?id=${orden.documentId}`}
            class="mt-6 block text-center text-sm text-primary-600 hover:underline"
          >
            Ver detalles completos →
          </a>
        </Card>

        <!-- Selección de nuevo mecánico -->
        <Card class="lg:col-span-2">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-500">swap_horiz</span>
            Seleccionar Nuevo Mecánico
          </h2>
          
          <form method="POST" x-data="{ selectedMechanic: '', selectedMotivo: '' }">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-6">
              {mecanicos.map((mec: any) => {
                const esActual = orden.mecanico?.id === mec.id;
                return (
                  <label class={`relative flex items-center p-4 rounded-xl border-2 cursor-pointer transition-all ${
                    esActual 
                      ? 'border-gray-200 bg-gray-50 dark:bg-gray-900/50 opacity-50 cursor-not-allowed' 
                      : 'border-gray-200 dark:border-gray-700 hover:border-primary-500 hover:bg-primary-50 dark:hover:bg-primary-900/20'
                  }`}>
                    <input 
                      type="radio" 
                      name="mecanico_id"
                      value={mec.id}
                      disabled={esActual}
                      x-model="selectedMechanic"
                      class="sr-only"
                    />
                    <div class={`w-12 h-12 rounded-full flex items-center justify-center text-white font-bold mr-4 ${
                      esActual ? 'bg-gray-400' :
                      mec.cargaTrabajo === 0 ? 'bg-green-500' :
                      mec.cargaTrabajo <= 2 ? 'bg-blue-500' : 'bg-amber-500'
                    }`}>
                      {mec.nombre?.charAt(0)}{mec.apellido?.charAt(0) || ''}
                    </div>
                    <div class="flex-1">
                      <p class="font-bold text-gray-900 dark:text-white">
                        {mec.nombre} {mec.apellido || ''}
                        {esActual && <span class="text-xs ml-2 text-gray-500">(actual)</span>}
                      </p>
                      <p class="text-sm text-gray-500">{mec.especialidad || 'General'}</p>
                    </div>
                    <div class="text-right">
                      <span class={`px-2 py-1 rounded-full text-xs font-bold ${
                        mec.cargaTrabajo === 0 ? 'bg-green-100 text-green-700' :
                        mec.cargaTrabajo <= 2 ? 'bg-blue-100 text-blue-700' :
                        'bg-amber-100 text-amber-700'
                      }`}>
                        {mec.cargaTrabajo} orden{mec.cargaTrabajo !== 1 ? 'es' : ''}
                      </span>
                    </div>
                    <div class="absolute top-2 right-2" x-show={`selectedMechanic === '${mec.id}'`}>
                      <span class="material-symbols-outlined text-primary-500">check_circle</span>
                    </div>
                  </label>
                );
              })}
            </div>

            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Motivo de la reasignación <span class="text-red-500">*</span>
              </label>
              <select 
                name="motivo" 
                required
                x-model="selectedMotivo"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500"
              >
                <option value="">Seleccione un motivo...</option>
                <option value="Sobrecarga de trabajo">Sobrecarga de trabajo</option>
                <option value="Ausencia del mecánico">Ausencia del mecánico</option>
                <option value="Cambio de especialidad requerida">Cambio de especialidad requerida</option>
                <option value="Solicitud del cliente">Solicitud del cliente</option>
                <option value="Redistribución de tareas">Redistribución de tareas</option>
                <option value="Urgencia del trabajo">Urgencia del trabajo</option>
                <option value="Otro">Otro motivo</option>
              </select>
            </div>

            <div class="flex gap-4">
              <button 
                type="submit" 
                class="flex-1 px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-colors flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                :disabled="!selectedMechanic || !selectedMotivo"
              >
                <span class="material-symbols-outlined">swap_horiz</span>
                Confirmar Reasignación
              </button>
              <a href="/encargado/trabajos_en_curso" class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-xl font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                Cancelar
              </a>
            </div>
          </form>
        </Card>
      </div>
    )}
  </div>
</DashboardLayout>
