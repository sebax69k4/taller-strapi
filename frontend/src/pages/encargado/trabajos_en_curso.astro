---
export const prerender = false;
import { fetchStrapi, strapiGet, strapiPost, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

const jwt = Astro.cookies.get('jwt')?.value;
let activeOrders = [];

if (jwt) {
  try {
    const res = await fetchStrapi('/api/orden-de-trabajos?filters[estado][$ne]=Entregado&populate=cliente&populate=vehiculo&populate=mecanico&sort[0]=updatedAt:desc');
    const data = await res.json();
    activeOrders = data.data || [];
  } catch (e) {
    console.error('Error fetching active orders:', e);
  }
} else {
  return Astro.redirect('/login');
}

const getProgress = (status: string) => {
  switch(status) {
    case 'Pendiente': return 10;
    case 'En Proceso': return 50;
    case 'Esperando Repuestos': return 30; // If this status exists
    case 'Finalizado': return 90;
    case 'Entregado': return 100;
    default: return 0;
  }
};

const getStatusColor = (status: string) => {
    switch(status) {
        case 'Pendiente': return 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300';
        case 'En Proceso': return 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300';
        case 'Finalizado': return 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300';
        default: return 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300';
    }
};
