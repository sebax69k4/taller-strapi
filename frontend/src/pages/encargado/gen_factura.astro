---
export const prerender = false;
import { fetchStrapi, strapiGet, strapiPost, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

interface InvoiceItem {
  description: string;
  quantity: number;
  unitPrice: number;
  total: number;
}

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

let completedOrders = [];
let selectedOrder = null;
let invoiceData = {
  number: `FACT-${new Date().getFullYear()}-${Math.floor(Math.random() * 10000)}`,
  date: new Date().toISOString().split('T')[0],
  clientName: '',
  clientAddress: '',
  clientPhone: '',
  vehicle: '',
  items: [] as InvoiceItem[],
  subtotal: 0,
  tax: 0,
  total: 0,
  notes: 'Pago requerido a la recepción de la factura. Gracias por su confianza.'
};

try {
  // Fetch completed orders (Entregado)
  const response = await fetchStrapi('/api/orden-de-trabajos?filters[estado][$eq]=Entregado&populate=vehiculo.cliente');
  const data = await response.json();
  completedOrders = data.data || [];

  // Check for selected order
  const url = new URL(Astro.request.url);
  const selectedId = url.searchParams.get('id');

  if (selectedId) {
    const orderResponse = await fetch(`http://localhost:1337/api/orden-de-trabajos/${selectedId}?populate=vehiculo.cliente,repuestos,presupuesto`, {
      headers: {}
    });
    const orderData = await orderResponse.json();
    selectedOrder = orderData.data;

    if (selectedOrder) {
      const client = selectedOrder.vehiculo?.cliente;
      const vehicle = selectedOrder.vehiculo;
      const repuestos = selectedOrder.repuestos || [];
      const presupuesto = selectedOrder.presupuesto;

      invoiceData.clientName = client?.nombre || 'Cliente Desconocido';
      invoiceData.clientAddress = client?.direccion || 'Dirección no disponible'; // Assuming address exists or using placeholder
      invoiceData.clientPhone = client?.telefono || 'Sin teléfono';
      invoiceData.vehicle = `${vehicle?.marca} ${vehicle?.modelo} (${vehicle?.anio}) - ${vehicle?.patente}`;

      // Build items from repuestos
      let items = repuestos.map((r: any) => ({
        description: r.nombre,
        quantity: 1, // Assuming 1 for now as relation is many-to-many without quantity field in pivot
        unitPrice: r.precio || 0,
        total: r.precio || 0
      }));

      // Add labor/service item if budget exists
      if (presupuesto && presupuesto.monto_total) {
        const partsTotal = items.reduce((sum: number, item: any) => sum + item.total, 0);
        const labor = parseFloat(presupuesto.monto_total) - partsTotal;
        if (labor > 0) {
          items.push({
            description: 'Mano de Obra / Servicios',
            quantity: 1,
            unitPrice: labor,
            total: labor
          });
        }
      } else if (items.length === 0) {
          // Fallback if no parts and no budget
          items.push({
              description: 'Servicio de Taller (Detalles en Orden)',
              quantity: 1,
              unitPrice: 0,
              total: 0
          });
      }

      invoiceData.items = items;
      invoiceData.subtotal = items.reduce((sum: number, item: any) => sum + item.total, 0);
      invoiceData.tax = invoiceData.subtotal * 0.21; // 21% IVA
      invoiceData.total = invoiceData.subtotal + invoiceData.tax;
    }
  }

} catch (error) {
  console.error('Error fetching data:', error);
}

// Format currency
const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(amount);
};
