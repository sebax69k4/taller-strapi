---
export const prerender = false;
import { strapiGet, strapiPut } from '../../lib/strapi';
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const userRole = Astro.cookies.get('user_role')?.value as 'recepcionista' | 'encargado' | 'mecanico' | undefined;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  cliente: { nombre: string; apellido: string };
  vehiculo: { marca: string; modelo: string };
}

let activeOrders: Order[] = [];
let successMessage = '';
let errorMessage = '';

try {
  // Handle POST request to mark as delivered
  if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const orderId = formData.get('orderId');
    
    if (orderId) {
        await strapiPut(`/api/orden-de-trabajos/${orderId}`, {
            estado: 'entregado'
        });
        successMessage = 'Orden marcada como entregada correctamente.';
    }
  }

  // Get orders that are finalized or invoiced but not delivered yet
  const data = await strapiGet('/api/orden-de-trabajos?filters[estado][$in][0]=finalizado&filters[estado][$in][1]=facturado&populate[0]=cliente&populate[1]=vehiculo&sort[0]=updatedAt:desc');
  activeOrders = data.data || [];
} catch (e: any) {
  console.error('Error:', e);
  errorMessage = 'Error al procesar la solicitud.';
}
---

<DashboardLayout title="Marcar Orden como Entregada" role={userRole} currentPath="/encargado/marc_orden">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Marcar Orden como Entregada</h1>
        
        {successMessage && <div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">{successMessage}</div>}
        {errorMessage && <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">{errorMessage}</div>}

        <div class="grid gap-6">
            {activeOrders.map((order: Order) => (
                <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row justify-between items-center gap-4">
                    <div>
                        <div class="flex items-center gap-3 mb-1">
                            <h3 class="font-bold text-lg text-gray-900 dark:text-white">Orden #{order.documentId.slice(0, 6)}</h3>
                            <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                                order.estado === 'finalizado' ? 'bg-green-100 text-green-800' : 
                                order.estado === 'facturado' ? 'bg-purple-100 text-purple-800' :
                                order.estado === 'en_reparacion' ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800'
                            }`}>
                                {order.estado === 'finalizado' ? 'Finalizado' :
                                 order.estado === 'facturado' ? 'Facturado' :
                                 order.estado === 'en_reparacion' ? 'En Reparación' :
                                 order.estado === 'en_diagnostico' ? 'En Diagnóstico' :
                                 order.estado === 'ingresado' ? 'Ingresado' : order.estado}
                            </span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400">{order.cliente.nombre} {order.cliente.apellido} - {order.vehiculo.marca} {order.vehiculo.modelo}</p>
                    </div>
                    <form method="POST" onsubmit="return confirm('¿Está seguro de marcar esta orden como Entregada?');">
                        <input type="hidden" name="orderId" value={order.documentId} />
                        <button 
                            type="submit"
                            class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center gap-2"
                        >
                            <span class="material-symbols-outlined">check_circle</span>
                            Entregar Vehículo
                        </button>
                    </form>
                </div>
            ))}
            {activeOrders.length === 0 && (
                <div class="text-center py-12 text-gray-500 dark:text-gray-400 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
                    <span class="material-symbols-outlined text-4xl mb-2 opacity-50">task_alt</span>
                    <p>No hay órdenes pendientes de entrega.</p>
                </div>
            )}
        </div>
    </div>
</DashboardLayout>