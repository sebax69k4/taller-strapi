<div class="flex-1 p-4 overflow-y-auto space-y-3" id="pending-orders-list">
{pendingOrders.map((order: any) => (
  <div 
    draggable="true" 
    ondragstart={`event.dataTransfer.setData('text/plain', '${order.documentId}')`}
    class="cursor-grab active:cursor-grabbing p-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-800 rounded-lg shadow-sm hover:shadow-md hover:border-primary/50 transition-all"
