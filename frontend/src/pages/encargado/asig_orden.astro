            <div class="flex justify-between mb-1">
              <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Carga de Trabajo: {activeOrders}/5 Órdenes</span>
              <span class="text-xs font-medium text-gray-700 dark:text-gray-300">{workloadPercentage}%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5">
              <div class={`h-1.5 rounded-full ${workloadPercentage > 80 ? 'bg-red-500' : workloadPercentage > 50 ? 'bg-yellow-500' : 'bg-green-500'}`} style={`width: ${workloadPercentage}%`}></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
})}
