---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

let mechanics = [];
let availableCount = 0;
let totalCapacity = 0; // Assuming 5 orders per mechanic max

try {
  const data = await strapiGet('/api/mecenicos?populate[orden_de_trabajos][populate][0]=vehiculo');
  mechanics = data.data || [];

  mechanics.forEach((m: any) => {
    const activeOrders = m.orden_de_trabajos ? m.orden_de_trabajos.filter((o: any) => !['entregado', 'finalizado', 'facturado', 'Entregado', 'Finalizado', 'Facturado'].includes(o.estado)) : [];
    m.activeOrders = activeOrders;
    m.status = activeOrders.length > 0 ? 'Ocupado' : 'Disponible';
    if (m.status === 'Disponible') availableCount++;
  });

  totalCapacity = mechanics.length * 5; // Mock capacity
} catch (e) {
  console.error('Error fetching mechanics:', e);
}
---
<DashboardLayout title="Disponibilidad de Mecánicos" role="encargado" currentPath="/encargado/disp_mec">
    <div class="mx-auto max-w-7xl">
        <!-- PageHeading -->
        <div class="flex flex-wrap justify-between gap-4 items-center mb-6">
            <div class="flex min-w-72 flex-col gap-1">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Carga de Trabajo y Disponibilidad</h1>
                <p class="text-gray-500 dark:text-gray-400 text-base">Gestiona y asigna tareas a tu equipo en tiempo real.</p>
            </div>
            <a href="/encargado/asig_orden" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 gap-2">
                <span class="material-symbols-outlined text-lg">add</span>
                Asignar Trabajo
