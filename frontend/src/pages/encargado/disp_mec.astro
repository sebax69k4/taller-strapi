---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Mechanic {
  id: number;
  documentId: string;
  nombre: string;
  apellido?: string;
  especialidad?: string;
  estado?: string;
  telefono?: string;
  email?: string;
  orden_de_trabajos?: any[];
}

let mechanics: any[] = [];
let totalMecanicos = 0;
let disponibles = 0;
let ocupados = 0;
let ordenesActivas = 0;
let capacidadUtilizada = 0;

try {
  const data = await strapiGet('/api/mecenicos?populate[orden_de_trabajos][populate]=vehiculo&populate[orden_de_trabajos][filters][estado][$notIn][0]=entregado&populate[orden_de_trabajos][filters][estado][$notIn][1]=facturado');
  
  mechanics = (data.data || []).map((m: any) => {
    const activeOrders = m.orden_de_trabajos || [];
    const ordenesCount = activeOrders.length;
    const maxCapacity = 5;
    const cargaPercent = Math.min((ordenesCount / maxCapacity) * 100, 100);
    
    return {
      ...m,
      activeOrders,
      ordenesCount,
      cargaPercent,
      status: ordenesCount === 0 ? 'Disponible' : ordenesCount >= maxCapacity ? 'Saturado' : 'Ocupado'
    };
  }).sort((a: any, b: any) => a.ordenesCount - b.ordenesCount);

  totalMecanicos = mechanics.length;
  disponibles = mechanics.filter(m => m.status === 'Disponible').length;
  ocupados = mechanics.filter(m => m.status === 'Ocupado').length;
  ordenesActivas = mechanics.reduce((sum, m) => sum + m.ordenesCount, 0);
  capacidadUtilizada = totalMecanicos > 0 ? Math.round((ordenesActivas / (totalMecanicos * 5)) * 100) : 0;

} catch (e) {
  console.error('Error fetching mechanics:', e);
}

const getStatusColor = (status: string) => {
  switch (status) {
    case 'Disponible': return 'bg-green-500';
    case 'Ocupado': return 'bg-blue-500';
    case 'Saturado': return 'bg-red-500';
    default: return 'bg-gray-500';
  }
};

const getStatusBadge = (status: string) => {
  switch (status) {
    case 'Disponible': return 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300';
    case 'Ocupado': return 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300';
    case 'Saturado': return 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300';
    default: return 'bg-gray-100 text-gray-700';
  }
};

const formatEstado = (estado: string) => {
  const map: Record<string, string> = {
    en_diagnostico: 'Diagnóstico',
    en_reparacion: 'Reparación',
    ingresado: 'Ingresado',
    finalizado: 'Finalizado'
  };
  return map[estado] || estado;
};
---

<DashboardLayout title="Mecánicos" role="encargado" currentPath="/encargado/disp_mec">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Equipo de Mecánicos</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">Gestiona y visualiza la carga de trabajo de tu equipo</p>
      </div>
      <div class="flex gap-2">
        <a href="/encargado/asig_orden" class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 transition-colors flex items-center gap-2">
          <span class="material-symbols-outlined">assignment_ind</span>
          Asignar Orden
        </a>
        <a href="/encargado/gestion_mecanicos" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors flex items-center gap-2">
          <span class="material-symbols-outlined">settings</span>
          Gestionar
        </a>
      </div>
    </div>

    <!-- KPIs -->
    <div class="grid grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
      <div class="bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl p-5 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-blue-100 text-xs uppercase tracking-wide">Total</p>
            <p class="text-3xl font-bold mt-1">{totalMecanicos}</p>
            <p class="text-blue-200 text-xs">mecánicos</p>
          </div>
          <span class="material-symbols-outlined text-blue-200 text-2xl">groups</span>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl p-5 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-green-100 text-xs uppercase tracking-wide">Disponibles</p>
            <p class="text-3xl font-bold mt-1">{disponibles}</p>
            <p class="text-green-200 text-xs">sin órdenes</p>
          </div>
          <span class="material-symbols-outlined text-green-200 text-2xl">check_circle</span>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-amber-500 to-orange-500 rounded-2xl p-5 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-amber-100 text-xs uppercase tracking-wide">Ocupados</p>
            <p class="text-3xl font-bold mt-1">{ocupados}</p>
            <p class="text-amber-200 text-xs">trabajando</p>
          </div>
          <span class="material-symbols-outlined text-amber-200 text-2xl">engineering</span>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl p-5 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-purple-100 text-xs uppercase tracking-wide">Órdenes Activas</p>
            <p class="text-3xl font-bold mt-1">{ordenesActivas}</p>
            <p class="text-purple-200 text-xs">en proceso</p>
          </div>
          <span class="material-symbols-outlined text-purple-200 text-2xl">build</span>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-teal-500 to-cyan-600 rounded-2xl p-5 text-white">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-teal-100 text-xs uppercase tracking-wide">Capacidad</p>
            <p class="text-3xl font-bold mt-1">{capacidadUtilizada}%</p>
            <p class="text-teal-200 text-xs">utilizada</p>
          </div>
          <span class="material-symbols-outlined text-teal-200 text-2xl">speed</span>
        </div>
      </div>
    </div>

    <!-- Lista de mecánicos -->
    <div class="space-y-4">
      {mechanics.length > 0 ? mechanics.map((mechanic: any) => (
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden">
          <div class="p-6">
            <div class="flex flex-col lg:flex-row gap-6">
              <!-- Info del mecánico -->
              <div class="lg:w-72 flex-shrink-0">
                <div class="flex items-center gap-4">
                  <div class={`w-16 h-16 rounded-2xl flex items-center justify-center text-white text-xl font-bold ${getStatusColor(mechanic.status)}`}>
                    {mechanic.nombre?.charAt(0)}{mechanic.apellido?.charAt(0) || ''}
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">{mechanic.nombre} {mechanic.apellido || ''}</h3>
                    <p class="text-sm text-gray-500">{mechanic.especialidad || 'Mecánico General'}</p>
                    <div class="flex items-center gap-2 mt-1">
                      <span class={`w-2 h-2 rounded-full ${getStatusColor(mechanic.status)}`}></span>
                      <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${getStatusBadge(mechanic.status)}`}>
                        {mechanic.status}
                      </span>
                    </div>
                  </div>
                </div>
                
                <!-- Barra de carga -->
                <div class="mt-4">
                  <div class="flex justify-between text-xs mb-1">
                    <span class="text-gray-500">Carga de trabajo</span>
                    <span class="font-medium text-gray-700 dark:text-gray-300">{mechanic.ordenesCount}/5 órdenes</span>
                  </div>
                  <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 overflow-hidden">
                    <div 
                      class={`h-2 rounded-full transition-all ${
                        mechanic.cargaPercent >= 100 ? 'bg-red-500' :
                        mechanic.cargaPercent > 60 ? 'bg-amber-500' : 'bg-green-500'
                      }`}
                      style={`width: ${mechanic.cargaPercent}%`}
                    ></div>
                  </div>
                </div>

                <!-- Contacto -->
                {(mechanic.telefono || mechanic.email) && (
                  <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
                    {mechanic.telefono && (
                      <a href={`tel:${mechanic.telefono}`} class="flex items-center gap-2 text-sm text-gray-500 hover:text-primary-600">
                        <span class="material-symbols-outlined text-base">phone</span>
                        {mechanic.telefono}
                      </a>
                    )}
                    {mechanic.email && (
                      <a href={`mailto:${mechanic.email}`} class="flex items-center gap-2 text-sm text-gray-500 hover:text-primary-600 mt-1">
                        <span class="material-symbols-outlined text-base">email</span>
                        {mechanic.email}
                      </a>
                    )}
                  </div>
                )}
              </div>

              <!-- Órdenes actuales -->
              <div class="flex-1">
                {mechanic.ordenesCount > 0 ? (
                  <div>
                    <h4 class="text-sm font-bold text-gray-700 dark:text-gray-300 mb-3 flex items-center gap-2">
                      <span class="material-symbols-outlined text-base">assignment</span>
                      Órdenes Asignadas ({mechanic.ordenesCount})
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      {mechanic.activeOrders.slice(0, 4).map((order: any) => (
                        <a 
                          href={`/encargado/detalles_de_orden?id=${order.documentId}`}
                          class="block p-3 bg-gray-50 dark:bg-gray-900/50 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-primary-500 transition-colors"
                        >
                          <div class="flex justify-between items-start">
                            <div>
                              <p class="font-bold text-gray-900 dark:text-white">OT-{order.id}</p>
                              <p class="text-sm text-gray-500">
                                {order.vehiculo ? `${order.vehiculo.marca} ${order.vehiculo.modelo}` : 'N/A'}
                              </p>
                            </div>
                            <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${
                              order.estado === 'en_reparacion' ? 'bg-amber-100 text-amber-700' :
                              order.estado === 'en_diagnostico' ? 'bg-purple-100 text-purple-700' :
                              'bg-gray-100 text-gray-700'
                            }`}>
                              {formatEstado(order.estado)}
                            </span>
                          </div>
                        </a>
                      ))}
                    </div>
                    {mechanic.ordenesCount > 4 && (
                      <p class="text-xs text-gray-500 mt-2">+{mechanic.ordenesCount - 4} más...</p>
                    )}
                  </div>
                ) : (
                  <div class="h-full flex items-center justify-center bg-green-50 dark:bg-green-900/20 rounded-xl border-2 border-dashed border-green-200 dark:border-green-800">
                    <div class="text-center py-8">
                      <span class="material-symbols-outlined text-4xl text-green-500 mb-2">event_available</span>
                      <p class="font-medium text-green-700 dark:text-green-300">Disponible para asignación</p>
                      <a href="/encargado/asig_orden" class="text-sm text-green-600 hover:underline mt-1 inline-flex items-center gap-1">
                        <span class="material-symbols-outlined text-sm">add_circle</span>
                        Asignar orden
                      </a>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
          
          <!-- Footer con acciones -->
          <div class="px-6 py-3 bg-gray-50 dark:bg-gray-900/50 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center">
            <div class="flex items-center gap-4 text-sm text-gray-500">
              <span class="flex items-center gap-1">
                <span class="material-symbols-outlined text-base">badge</span>
                ID: {mechanic.id}
              </span>
            </div>
            <div class="flex gap-2">
              <a 
                href={`/encargado/reasignar_orden`}
                class="px-3 py-1.5 text-sm text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors flex items-center gap-1"
              >
                <span class="material-symbols-outlined text-base">swap_horiz</span>
                Reasignar
              </a>
            </div>
          </div>
        </div>
      )) : (
        <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700">
          <span class="material-symbols-outlined text-6xl text-gray-300 mb-4">person_off</span>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">No hay mecánicos registrados</h3>
          <p class="text-gray-500 mt-2">Agrega mecánicos para comenzar a asignar órdenes</p>
          <a href="/encargado/crear_mecanico" class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
            <span class="material-symbols-outlined">person_add</span>
            Agregar Mecánico
          </a>
        </div>
      )}
    </div>

    <!-- Leyenda -->
    <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-800/50 rounded-xl flex flex-wrap gap-6 justify-center">
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 rounded-full bg-green-500"></span>
        <span class="text-sm text-gray-600 dark:text-gray-400">Disponible (0 órdenes)</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 rounded-full bg-blue-500"></span>
        <span class="text-sm text-gray-600 dark:text-gray-400">Ocupado (1-4 órdenes)</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 rounded-full bg-red-500"></span>
        <span class="text-sm text-gray-600 dark:text-gray-400">Saturado (5+ órdenes)</span>
      </div>
    </div>
  </div>
</DashboardLayout>