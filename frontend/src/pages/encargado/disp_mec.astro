            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Mecánicos Disponibles</p>
                <div class="mt-2 flex items-baseline gap-2">
                    <p class="text-3xl font-bold text-gray-900 dark:text-white">{availableCount}</p>
                    <p class="text-sm font-medium text-green-600 dark:text-green-400">de {mechanics.length}</p>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Órdenes en Curso</p>
                <div class="mt-2 flex items-baseline gap-2">
                    <p class="text-3xl font-bold text-gray-900 dark:text-white">
                        {mechanics.reduce((acc: number, m: any) => acc + m.activeOrders.length, 0)}
                    </p>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Capacidad del Taller</p>
                <div class="mt-2 flex items-baseline gap-2">
                    <p class="text-3xl font-bold text-gray-900 dark:text-white">
                        {Math.round((mechanics.reduce((acc: number, m: any) => acc + m.activeOrders.length, 0) / (mechanics.length * 5 || 1)) * 100)}%
                    </p>
                </div>
            </div>
        </div>

        <!-- Mechanic Workload Grid -->
        <div class="grid grid-cols-1 gap-6">
            {mechanics.map((mechanic: any) => (
                <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
                    <div class="flex flex-col md:flex-row gap-6">
                        <!-- Mechanic Info -->
                        <div class="w-full md:w-64 flex-shrink-0">
                            <div class="flex items-center gap-4">
                                <div class="h-12 w-12 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-xl font-bold text-gray-500 dark:text-gray-400 border border-gray-200 dark:border-gray-600">
                                    {mechanic.nombre.charAt(0)}
                                </div>
                                <div>
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">{mechanic.nombre}</h3>
                                    <div class={`flex items-center gap-2 text-sm font-medium mt-1 ${mechanic.status === 'Ocupado' ? 'text-blue-600 dark:text-blue-400' : 'text-green-600 dark:text-green-400'}`}>
                                        <span class={`h-2 w-2 rounded-full ${mechanic.status === 'Ocupado' ? 'bg-blue-500' : 'bg-green-500'}`}></span>
                                        {mechanic.status}
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                                    {mechanic.especialidad || 'General'}
                                </span>
                            </div>
                        </div>

                        <!-- Current Task / Availability -->
                        <div class="flex-1">
                            {mechanic.status === 'Ocupado' ? (
                                <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-100 dark:border-blue-800 h-full">
                                    <div class="flex items-start justify-between">
                                        <div>
                                            <h4 class="text-sm font-bold text-blue-900 dark:text-blue-100">Trabajo Actual</h4>
                                            <p class="mt-1 text-base font-medium text-blue-800 dark:text-blue-200">
                                                {mechanic.activeOrders[0].vehiculo ? `${mechanic.activeOrders[0].vehiculo.marca} ${mechanic.activeOrders[0].vehiculo.modelo}` : 'Vehículo Desconocido'}
                                            </p>
                                            <p class="text-sm text-blue-600 dark:text-blue-300 mt-1">{mechanic.activeOrders[0].descripcion}</p>
                                        </div>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-200">
                                            {mechanic.activeOrders[0].estado}
                                        </span>
                                    </div>
                                </div>
                            ) : (
                                <div class="flex items-center justify-center h-full min-h-[100px] bg-gray-50 dark:bg-gray-900/50 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-colors group">
                                    <a href="/encargado/asig_orden" class="text-sm font-medium text-gray-500 dark:text-gray-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 flex items-center gap-2">
                                        <span class="material-symbols-outlined">add_circle</span>
                                        Asignar nueva tarea
                                    </a>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</DashboardLayout>
