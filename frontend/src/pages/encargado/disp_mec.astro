---
import '../../styles/global.css';

const jwt = Astro.cookies.get('jwt')?.value;
let mechanics = [];
let availableCount = 0;
let totalCapacity = 0; // Assuming 5 orders per mechanic max

if (jwt) {
  try {
    const response = await fetch('http://localhost:1337/api/mecanicos?populate[orden_de_trabajos][populate]=vehiculo', {
      headers: { 'Authorization': `Bearer ${jwt}` }
    });
    const data = await response.json();
    mechanics = data.data || [];

    mechanics.forEach((m: any) => {
      const activeOrders = m.orden_de_trabajos ? m.orden_de_trabajos.filter((o: any) => o.estado !== 'Entregado') : [];
      m.activeOrders = activeOrders;
      m.status = activeOrders.length > 0 ? 'Ocupado' : 'Disponible';
      if (m.status === 'Disponible') availableCount++;
    });

    totalCapacity = mechanics.length * 5; // Mock capacity
  } catch (e) {
    console.error('Error fetching mechanics:', e);
  }
} else {
  return Astro.redirect('/login');
}
