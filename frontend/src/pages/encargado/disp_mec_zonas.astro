---
import '../../styles/global.css';

const jwt = Astro.cookies.get('jwt')?.value;
let mechanics = [];
let zones = [];

if (jwt) {
  try {
    // Fetch Mechanics
    const mecRes = await fetch('http://localhost:1337/api/mecenicos?populate=orden_de_trabajos', {
      headers: { 'Authorization': `Bearer ${jwt}` }
    });
    const mecData = await mecRes.json();
    mechanics = mecData.data || [];

    // Fetch Zones with active orders
    // Note: Deep filtering in populate is supported in Strapi v4
    const zoneRes = await fetch('http://localhost:1337/api/zonas?populate[orden_de_trabajos][filters][estado][$ne]=Entregado&populate[orden_de_trabajos][populate]=vehiculo', {
      headers: { 'Authorization': `Bearer ${jwt}` }
    });
    const zoneData = await zoneRes.json();
    zones = zoneData.data || [];

  } catch (e) {
    console.error('Error fetching data:', e);
  }
} else {
  return Astro.redirect('/login');
}

const getWorkload = (orders: any) => {
    if (!orders) return 0;
    const active = orders.filter((o: any) => o.estado !== 'Entregado').length;
    return Math.min((active / 5) * 100, 100); // Cap at 100% (5 orders max)
};

const getActiveOrdersCount = (orders: any) => {
    if (!orders) return 0;
    return orders.filter((o: any) => o.estado !== 'Entregado').length;
};
