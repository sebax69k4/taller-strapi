---
export const prerender = false;
import { fetchStrapi, strapiGet, strapiPost, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

const jwt = Astro.cookies.get('jwt')?.value;
let lowStockItems = [];
let totalCritical = 0;
let pendingOrders = 0; // Placeholder or fetch if possible

if (jwt) {
  try {
    // Handle Restock POST
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const repuestoId = formData.get('repuestoId');
      const addAmount = parseInt(formData.get('amount')?.toString() || '0');

      if (repuestoId && addAmount > 0) {
        // 1. Get current stock
        const currentRes = await fetch(`http://localhost:1337/api/repuestos/${repuestoId}`, {
          headers: {}
        });
        
        if (currentRes.ok) {
            const currentData = await currentRes.json();
            const currentStock = currentData.data.attributes.stock || 0;
            const newStock = currentStock + addAmount;

            // 2. Update stock
            await fetch(`http://localhost:1337/api/repuestos/${repuestoId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                data: { stock: newStock }
            })
            });
        }
      }
    }

    // Fetch Repuestos (fetching all to filter by stock_minimo correctly in JS)
    // Optimization: Filter by a safe upper bound on server side first, e.g., stock <= 50
    const res = await fetchStrapi('/api/repuestos?filters[stock][$lte]=50&pagination[limit]=100');
    const data = await res.json();
    const allRepuestos = data.data || [];

    // Filter strictly where stock <= stock_minimo
    lowStockItems = allRepuestos.filter((item: any) => {
        const stock = item.attributes.stock || 0;
        const min = item.attributes.stock_minimo || 5; // Default to 5 if not set
        return stock <= min;
    }).map((item: any) => ({
        id: item.id,
        ...item.attributes
    }));

    totalCritical = lowStockItems.length;

  } catch (e) {
    console.error('Error fetching stock alerts:', e);
  }
} else {
  return Astro.redirect('/login');
}
