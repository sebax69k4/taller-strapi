---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { strapiGet, strapiPut, strapiPost } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

const orderId = Astro.url.searchParams.get('id');
let order: any = null;
let successMessage = '';
let error = '';

if (!orderId) {
  return Astro.redirect('/encargado/trabajos_en_curso');
}

// Handle POST actions
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    
    if (action === 'cambiar_estado') {
      const nuevoEstado = formData.get('nuevo_estado') as string;
      await strapiPut(`/api/orden-de-trabajos/${orderId}`, { estado: nuevoEstado });
      successMessage = 'Estado actualizado correctamente';
    }
    
    if (action === 'agregar_nota') {
      const procedimientos = formData.get('procedimientos') as string;
      const observaciones = formData.get('observaciones') as string;
      
      // Usar directamente orderId que ya es el documentId (corrección Strapi v5)
      await strapiPost('/api/bitacoras', {
        procedimientos,
        observaciones,
        fecha: new Date().toISOString().split('T')[0],
        orden_de_trabajo: orderId
      });
      successMessage = 'Nota agregada a la bitácora';
    }
  } catch (e: any) {
    error = e.message || 'Error al procesar la acción';
  }
}

try {
  const data = await strapiGet(`/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][cliente]=*&populate=mecanico&populate=repuestos&populate[bitacoras][populate]=mecanico&populate=presupuesto&populate=zona&populate[servicios]=*&populate=factura`);
  order = data.data;
  if (order?.vehiculo?.cliente) {
    order.cliente = order.vehiculo.cliente;
  }
} catch (e) {
  console.error('Error fetching order:', e);
}

if (!order) {
  return Astro.redirect('/encargado/trabajos_en_curso');
}

const formatDate = (dateString: string) => {
  if (!dateString) return 'N/A';
  return new Date(dateString).toLocaleDateString('es-CL', {
    year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit'
  });
};

const formatCurrency = (amount: number) => new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(amount);

// Estados config
const estadoConfig = {
  ingresado: { label: 'Ingresado', icon: 'inbox', index: 0 },
  en_diagnostico: { label: 'Diagnóstico', icon: 'search', index: 1 },
  en_reparacion: { label: 'Reparación', icon: 'build', index: 2 },
  finalizado: { label: 'Finalizado', icon: 'check_circle', index: 3 },
  facturado: { label: 'Facturado', icon: 'receipt', index: 4 },
  entregado: { label: 'Entregado', icon: 'local_shipping', index: 5 }
} as const;

type EstadoKey = keyof typeof estadoConfig;
const currentConfig = estadoConfig[order.estado as EstadoKey] || estadoConfig.ingresado;
const currentIndex = currentConfig.index;

// Next estado
const estadosOrden: EstadoKey[] = ['ingresado', 'en_diagnostico', 'en_reparacion', 'finalizado', 'facturado', 'entregado'];
const nextEstado = estadosOrden[currentIndex + 1] || null;

const getStatusColor = (status: string) => {
  const colors: Record<string, string> = {
    ingresado: 'bg-red-100 text-red-700',
    en_diagnostico: 'bg-purple-100 text-purple-700',
    en_reparacion: 'bg-amber-100 text-amber-700',
    finalizado: 'bg-green-100 text-green-700',
    facturado: 'bg-blue-100 text-blue-700',
    entregado: 'bg-emerald-100 text-emerald-700'
  };
  return colors[status] || 'bg-gray-100 text-gray-700';
};

// Calculate totals
const partsTotal = order.repuestos?.reduce((acc: number, part: any) => acc + (part.precio || 0), 0) || 0;
const servicesTotal = order.servicios?.reduce((acc: number, s: any) => acc + (s.precio || 0), 0) || 0;
const subtotal = partsTotal + servicesTotal;
const iva = subtotal * 0.19;
const grandTotal = subtotal + iva;
---

<DashboardLayout title="Detalle de Orden" role="encargado" currentPath="/encargado/detalles_de_orden">
  <div class="max-w-6xl mx-auto" x-data="{ showNoteModal: false, showStatusModal: false }">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
      <div>
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
          <a href="/encargado/trabajos_en_curso" class="hover:text-primary-600">Órdenes</a>
          <span>/</span>
          <span class="text-gray-900 dark:text-white">OT-{order.id}</span>
        </div>
        <div class="flex items-center gap-4 flex-wrap">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Orden #{order.id}</h1>
          <span class={`px-3 py-1.5 rounded-full text-sm font-bold ${getStatusColor(order.estado)}`}>
            {currentConfig.label}
          </span>
          {order.prioridad === 'urgente' && (
            <span class="px-3 py-1.5 bg-red-500 text-white rounded-full text-sm font-bold">URGENTE</span>
          )}
        </div>
      </div>
      <div class="flex gap-2 flex-wrap">
        <button @click="showNoteModal = true" class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 flex items-center gap-2">
          <span class="material-symbols-outlined">note_add</span>
          Agregar Nota
        </button>
        <button onclick="window.print()" class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 flex items-center gap-2">
          <span class="material-symbols-outlined">print</span>
        </button>
        {nextEstado && (
          <button @click="showStatusModal = true" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 flex items-center gap-2">
            <span class="material-symbols-outlined">arrow_forward</span>
            Avanzar a {estadoConfig[nextEstado].label}
          </button>
        )}
      </div>
    </div>

    <!-- Mensajes -->
    {successMessage && (
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-xl text-green-800 flex items-center gap-3">
        <span class="material-symbols-outlined">check_circle</span>
        <span class="font-medium">{successMessage}</span>
      </div>
    )}
    {error && (
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-800 flex items-center gap-3">
        <span class="material-symbols-outlined">error</span>
        <span>{error}</span>
      </div>
    )}

    <!-- Timeline de Estado -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-4 mb-6 overflow-x-auto">
      <div class="flex items-center min-w-max">
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${0 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'ingresado' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${0 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>inbox</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'ingresado' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Ingresado</span>
        </div>
        <div class={`w-8 h-1 rounded ${0 < currentIndex ? 'bg-primary-500' : 'bg-gray-200'}`}></div>
        
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${1 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'en_diagnostico' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${1 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>search</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'en_diagnostico' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Diagnóstico</span>
        </div>
        <div class={`w-8 h-1 rounded ${1 < currentIndex ? 'bg-primary-500' : 'bg-gray-200'}`}></div>
        
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${2 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'en_reparacion' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${2 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>build</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'en_reparacion' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Reparación</span>
        </div>
        <div class={`w-8 h-1 rounded ${2 < currentIndex ? 'bg-primary-500' : 'bg-gray-200'}`}></div>
        
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${3 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'finalizado' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${3 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>check_circle</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'finalizado' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Finalizado</span>
        </div>
        <div class={`w-8 h-1 rounded ${3 < currentIndex ? 'bg-primary-500' : 'bg-gray-200'}`}></div>
        
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${4 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'facturado' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${4 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>receipt</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'facturado' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Facturado</span>
        </div>
        <div class={`w-8 h-1 rounded ${4 < currentIndex ? 'bg-primary-500' : 'bg-gray-200'}`}></div>
        
        <div class="flex flex-col items-center px-3">
          <div class={`w-10 h-10 rounded-full flex items-center justify-center ${5 <= currentIndex ? 'bg-primary-500' : 'bg-gray-200'} ${order.estado === 'entregado' ? 'ring-4 ring-primary-200' : ''}`}>
            <span class={`material-symbols-outlined ${5 <= currentIndex ? 'text-white' : 'text-gray-400'}`}>local_shipping</span>
          </div>
          <span class={`text-xs mt-2 ${order.estado === 'entregado' ? 'font-bold text-gray-900' : 'text-gray-500'}`}>Entregado</span>
        </div>
      </div>
    </div>

    <!-- Grid principal -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Columna izquierda -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Cliente y Vehículo -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-500">info</span>
            Información Principal
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="p-4 bg-gray-50 dark:bg-gray-900/50 rounded-xl">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 rounded-full bg-blue-500 flex items-center justify-center text-white text-lg font-bold">
                  {(order.cliente?.nombre || 'C').charAt(0)}{(order.cliente?.apellido || '').charAt(0)}
                </div>
                <div>
                  <p class="font-bold text-gray-900 dark:text-white text-lg">{order.cliente?.nombre} {order.cliente?.apellido}</p>
                  <p class="text-sm text-gray-500">Cliente</p>
                </div>
              </div>
              <div class="space-y-2 text-sm">
                {order.cliente?.email && (
                  <div class="flex items-center gap-2 text-gray-600">
                    <span class="material-symbols-outlined text-base">email</span>
                    <span>{order.cliente.email}</span>
                  </div>
                )}
                {order.cliente?.telefono && (
                  <div class="flex items-center gap-2 text-gray-600">
                    <span class="material-symbols-outlined text-base">phone</span>
                    <span>{order.cliente.telefono}</span>
                  </div>
                )}
              </div>
            </div>
            
            <div class="p-4 bg-gray-50 dark:bg-gray-900/50 rounded-xl">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 rounded-full bg-amber-500 flex items-center justify-center text-white">
                  <span class="material-symbols-outlined">directions_car</span>
                </div>
                <div>
                  <p class="font-bold text-gray-900 dark:text-white text-lg">{order.vehiculo?.marca} {order.vehiculo?.modelo}</p>
                  <p class="text-sm text-gray-500">{order.vehiculo?.ano || ''}</p>
                </div>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex items-center gap-2 text-gray-600">
                  <span class="material-symbols-outlined text-base">pin</span>
                  <span class="font-mono font-bold">{order.vehiculo?.patente}</span>
                </div>
                {order.vehiculo?.vin && (
                  <div class="flex items-center gap-2 text-gray-600">
                    <span class="material-symbols-outlined text-base">fingerprint</span>
                    <span class="font-mono text-xs">{order.vehiculo.vin}</span>
                  </div>
                )}
              </div>
            </div>
          </div>
          
          <div class="mt-6 p-4 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 rounded-xl">
            <h3 class="font-bold text-amber-800 mb-2 flex items-center gap-2">
              <span class="material-symbols-outlined">report_problem</span>
              Descripción del Problema
            </h3>
            <p class="text-amber-700">{order.descripcion || 'Sin descripción'}</p>
          </div>
        </div>

        <!-- Repuestos y Servicios -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-500">build</span>
            Repuestos y Servicios
          </h2>
          
          <table class="w-full text-left">
            <thead>
              <tr class="text-sm text-gray-500 border-b border-gray-200">
                <th class="py-3 font-medium">Descripción</th>
                <th class="py-3 font-medium text-center">Cant.</th>
                <th class="py-3 font-medium text-right">Precio</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {order.repuestos?.map((part: any) => (
                <tr>
                  <td class="py-3 text-gray-900">{part.nombre}</td>
                  <td class="py-3 text-center text-gray-600">1</td>
                  <td class="py-3 text-right font-medium">{formatCurrency(part.precio || 0)}</td>
                </tr>
              ))}
              {order.servicios?.map((s: any) => (
                <tr>
                  <td class="py-3 text-gray-900">{s.nombre} <span class="text-xs bg-blue-100 text-blue-700 px-2 py-0.5 rounded ml-2">Servicio</span></td>
                  <td class="py-3 text-center text-gray-600">1</td>
                  <td class="py-3 text-right font-medium">{formatCurrency(s.precio || 0)}</td>
                </tr>
              ))}
            </tbody>
            {(partsTotal > 0 || servicesTotal > 0) && (
              <tfoot class="border-t-2 border-gray-200">
                <tr><td colspan="2" class="pt-4 text-right font-medium text-gray-600">Subtotal</td><td class="pt-4 text-right font-medium">{formatCurrency(subtotal)}</td></tr>
                <tr><td colspan="2" class="py-1 text-right font-medium text-gray-600">IVA (19%)</td><td class="py-1 text-right font-medium">{formatCurrency(iva)}</td></tr>
                <tr><td colspan="2" class="pt-2 text-right text-lg font-bold">Total</td><td class="pt-2 text-right text-lg font-bold text-primary-600">{formatCurrency(grandTotal)}</td></tr>
              </tfoot>
            )}
          </table>
          {(!order.repuestos?.length && !order.servicios?.length) && (
            <p class="py-8 text-center text-gray-500">No hay repuestos ni servicios registrados</p>
          )}
        </div>
      </div>

      <!-- Columna derecha -->
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Resumen</h2>
          <div class="space-y-4 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-500">Fecha de Ingreso</span>
              <span class="font-medium text-gray-900">{formatDate(order.fecha_ingreso)}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-500">Mecánico</span>
              <span class="font-medium text-gray-900">
                {order.mecanico ? `${order.mecanico.nombre} ${order.mecanico.apellido || ''}` : 'Sin asignar'}
              </span>
            </div>
            {order.zona && (
              <div class="flex justify-between">
                <span class="text-gray-500">Zona</span>
                <span class="font-medium text-gray-900">{order.zona.nombre}</span>
              </div>
            )}
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-100 space-y-2">
            <a href={`/encargado/reasignar_orden?orden=${order.documentId}`} class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 flex items-center justify-center gap-2">
              <span class="material-symbols-outlined text-base">swap_horiz</span>
              Reasignar Mecánico
            </a>
            {order.estado === 'finalizado' && !order.factura && (
              <a href={`/encargado/gen_factura?orden=${order.documentId}`} class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 flex items-center justify-center gap-2">
                <span class="material-symbols-outlined text-base">receipt_long</span>
                Generar Factura
              </a>
            )}
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white">Bitácora</h2>
            <button @click="showNoteModal = true" class="text-sm text-primary-600 hover:underline">+ Agregar</button>
          </div>
          
          <div class="space-y-4">
            {order.bitacoras?.slice().reverse().map((bitacora: any) => (
              <div class="flex gap-3 border-l-2 border-blue-500 pl-3">
                <div class="flex-1">
                  <p class="font-medium text-gray-900 text-sm">{bitacora.procedimientos}</p>
                  <p class="text-xs text-gray-500">{formatDate(bitacora.fecha)}</p>
                  {bitacora.observaciones && (
                    <p class="text-sm text-gray-600 bg-gray-50 p-2 rounded mt-1">{bitacora.observaciones}</p>
                  )}
                </div>
              </div>
            ))}
            <div class="flex gap-3 border-l-2 border-green-500 pl-3">
              <div>
                <p class="font-medium text-gray-900 text-sm">Orden Creada</p>
                <p class="text-xs text-gray-500">{formatDate(order.createdAt)}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal: Cambiar Estado -->
    <div x-show="showStatusModal" x-cloak class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50">
      <div class="bg-white rounded-2xl p-6 max-w-md w-full shadow-2xl" @click.outside="showStatusModal = false">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Cambiar Estado</h3>
        <p class="text-gray-600 mb-6">¿Confirma avanzar la orden al siguiente estado?</p>
        <form method="POST" class="flex gap-3">
          <input type="hidden" name="action" value="cambiar_estado" />
          <input type="hidden" name="nuevo_estado" value={nextEstado || ''} />
          <button type="button" @click="showStatusModal = false" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancelar</button>
          <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Confirmar</button>
        </form>
      </div>
    </div>

    <!-- Modal: Agregar Nota -->
    <div x-show="showNoteModal" x-cloak class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50">
      <div class="bg-white rounded-2xl p-6 max-w-lg w-full shadow-2xl" @click.outside="showNoteModal = false">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Agregar Nota</h3>
        <form method="POST" class="space-y-4">
          <input type="hidden" name="action" value="agregar_nota" />
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Procedimiento</label>
            <input type="text" name="procedimientos" required placeholder="Ej: Revisión de frenos" class="w-full px-4 py-2 border border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Observaciones</label>
            <textarea name="observaciones" rows="3" placeholder="Detalles..." class="w-full px-4 py-2 border border-gray-300 rounded-lg"></textarea>
          </div>
          <div class="flex gap-3">
            <button type="button" @click="showNoteModal = false" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancelar</button>
            <button type="submit" class="flex-1 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
    [x-cloak] { display: none !important; }
  </style>
</DashboardLayout>