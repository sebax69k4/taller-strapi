export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

// Handle Export Actions
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const reportType = formData.get('type');
    
    let data: any[] = [];
    let filename = '';
    let headers: string[] = [];

    if (reportType === 'ventas') {
      const res = await strapiGet('/api/facturas?populate[orden_de_trabajo][populate][vehiculo][populate]=cliente&pagination[limit]=1000');
      data = (res.data || []).map((f: any) => ({
        id: f.id,
        numero: f.numero_factura || `F-${f.id}`,
        fecha: f.fecha_emision,
        cliente: f.orden_de_trabajo?.vehiculo?.cliente?.nombre || 'N/A',
        vehiculo: f.orden_de_trabajo?.vehiculo?.patente || 'N/A',
        subtotal: f.subtotal || 0,
        iva: f.iva || 0,
        total: f.total || 0,
        metodo: f.metodo_pago || 'N/A',
        estado: f.estado
      }));
      headers = ['ID', 'N√∫mero', 'Fecha', 'Cliente', 'Veh√≠culo', 'Subtotal', 'IVA', 'Total', 'M√©todo', 'Estado'];
      filename = `reporte-ventas-${new Date().toISOString().split('T')[0]}.csv`;
    } else if (reportType === 'inventario') {
      const res = await strapiGet('/api/repuestos?pagination[limit]=1000');
      data = (res.data || []).map((r: any) => ({
        id: r.id,
        nombre: r.nombre,
        sku: r.sku || 'N/A',
        stock: r.stock || 0,
        stock_minimo: r.stock_minimo || 0,
        precio: r.precio || 0,
        ubicacion: r.ubicacion || 'N/A',
        estado: (r.stock || 0) <= (r.stock_minimo || 5) ? 'BAJO' : 'OK'
      }));
      headers = ['ID', 'Nombre', 'SKU', 'Stock', 'M√≠nimo', 'Precio', 'Ubicaci√≥n', 'Estado'];
      filename = `reporte-inventario-${new Date().toISOString().split('T')[0]}.csv`;
    } else if (reportType === 'ordenes') {
      const res = await strapiGet('/api/orden-de-trabajos?populate[vehiculo][populate]=cliente&populate=mecanico&pagination[limit]=1000');
      data = (res.data || []).map((o: any) => ({
        id: o.id,
        fecha_ingreso: o.fecha_ingreso,
        cliente: o.vehiculo?.cliente ? `${o.vehiculo.cliente.nombre} ${o.vehiculo.cliente.apellido || ''}` : 'N/A',
        vehiculo: o.vehiculo ? `${o.vehiculo.marca} ${o.vehiculo.modelo}` : 'N/A',
        patente: o.vehiculo?.patente || 'N/A',
        mecanico: o.mecanico ? `${o.mecanico.nombre} ${o.mecanico.apellido || ''}` : 'Sin asignar',
        estado: o.estado,
        prioridad: o.prioridad || 'normal'
      }));
      headers = ['ID', 'Fecha Ingreso', 'Cliente', 'Veh√≠culo', 'Patente', 'Mec√°nico', 'Estado', 'Prioridad'];
      filename = `reporte-ordenes-${new Date().toISOString().split('T')[0]}.csv`;
    } else if (reportType === 'mecanicos') {
      const res = await strapiGet('/api/mecenicos?populate[orden_de_trabajos][populate]=factura');
      data = (res.data || []).map((m: any) => {
        const ordenes = m.orden_de_trabajos || [];
        const completadas = ordenes.filter((o: any) => o.estado === 'entregado').length;
        const activas = ordenes.filter((o: any) => !['entregado', 'facturado'].includes(o.estado)).length;
        const ingresos = ordenes.reduce((sum: number, o: any) => sum + (o.factura?.total || 0), 0);
        return {
          id: m.id,
          nombre: `${m.nombre} ${m.apellido || ''}`,
          especialidad: m.especialidad || 'General',
          estado: m.estado || 'N/A',
          ordenes_completadas: completadas,
          ordenes_activas: activas,
          ingresos_generados: ingresos
        };
      });
      headers = ['ID', 'Nombre', 'Especialidad', 'Estado', 'Completadas', 'Activas', 'Ingresos'];
      filename = `reporte-mecanicos-${new Date().toISOString().split('T')[0]}.csv`;
    }

    // Convert to CSV
    const csvContent = [
      headers.join(','),
      ...data.map((row: any) => Object.values(row).map(v => `"${v}"`).join(','))
    ].join('\n');

    return new Response(csvContent, {
      status: 200,
      headers: {
        'Content-Type': 'text/csv; charset=utf-8',
        'Content-Disposition': `attachment; filename="${filename}"`
      }
    });

  } catch (e) {
    console.error('Error generating report:', e);
  }
}

// Fechas
const today = new Date();
const startOfMonth = new Date(today.getFullYear(), today.getMonth(), 1).toISOString().split('T')[0];
const endOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0).toISOString().split('T')[0];
const startOfLastMonth = new Date(today.getFullYear(), today.getMonth() - 1, 1).toISOString().split('T')[0];
const endOfLastMonth = new Date(today.getFullYear(), today.getMonth(), 0).toISOString().split('T')[0];

interface Stats {
  ordenesCompletadas: number;
  ordenesActivas: number;
  ingresosMes: number;
  ingresosUltimoMes: number;
  ticketPromedio: number;
  mecanicosActivos: number;
  clientesNuevos: number;
  tiempoPromedio: number;
}

interface MecanicoRendimiento {
  id: number;
  nombre: string;
  apellido: string;
  ordenesCompletadas: number;
  ordenesActivas: number;
  ingresos: number;
  eficiencia: number;
}

interface OrdenReciente {
  id: number;
  documentId: string;
  estado: string;
  total: number;
  cliente: string;
  vehiculo: string;
  fecha: string;
}

let stats: Stats = {
  ordenesCompletadas: 0,
  ordenesActivas: 0,
  ingresosMes: 0,
  ingresosUltimoMes: 0,
  ticketPromedio: 0,
  mecanicosActivos: 0,
  clientesNuevos: 0,
  tiempoPromedio: 0
};

let mecanicosRendimiento: MecanicoRendimiento[] = [];
let ordenesRecientes: OrdenReciente[] = [];
let estadoDistribucion: Record<string, number> = {};
let serviciosPopulares: { nombre: string; cantidad: number }[] = [];

try {
  const [
    completadasRes,
    completadasLastMonthRes,
    activasRes,
    facturasRes,
    facturasLastMonthRes,
    mecanicosRes,
    clientesRes,
    todasOrdenesRes,
    ordenesFacturadas,
    serviciosRes
  ] = await Promise.all([
    strapiGet(`/api/orden-de-trabajos?filters[estado][$eq]=entregado&filters[updatedAt][$gte]=${startOfMonth}`),
    strapiGet(`/api/orden-de-trabajos?filters[estado][$eq]=entregado&filters[updatedAt][$gte]=${startOfLastMonth}&filters[updatedAt][$lte]=${endOfLastMonth}`),
    strapiGet('/api/orden-de-trabajos?filters[estado][$notIn][0]=entregado&filters[estado][$notIn][1]=facturado'),
    strapiGet(`/api/facturas?filters[fecha_emision][$gte]=${startOfMonth}&filters[fecha_emision][$lte]=${endOfMonth}`),
    strapiGet(`/api/facturas?filters[fecha_emision][$gte]=${startOfLastMonth}&filters[fecha_emision][$lte]=${endOfLastMonth}`),
    strapiGet('/api/mecenicos?populate[orden_de_trabajos][populate]=factura'),
    strapiGet(`/api/clientes?filters[createdAt][$gte]=${startOfMonth}`),
    strapiGet('/api/orden-de-trabajos?pagination[limit]=1000'),
    strapiGet('/api/orden-de-trabajos?filters[estado][$in][0]=facturado&filters[estado][$in][1]=entregado&populate[vehiculo][populate]=cliente&populate=factura&sort=updatedAt:desc&pagination[limit]=10'),
    strapiGet('/api/servicios?populate[orden_de_trabajos][fields][0]=id')
  ]);

  stats.ordenesCompletadas = completadasRes.meta?.pagination?.total || 0;
  const completadasLastMonth = completadasLastMonthRes.meta?.pagination?.total || 0;
  stats.ordenesActivas = activasRes.meta?.pagination?.total || 0;
  
  const facturas = facturasRes.data || [];
  const facturasLastMonth = facturasLastMonthRes.data || [];
  stats.ingresosMes = facturas.reduce((sum: number, f: any) => sum + (f.total || 0), 0);
  stats.ingresosUltimoMes = facturasLastMonth.reduce((sum: number, f: any) => sum + (f.total || 0), 0);
  stats.ticketPromedio = facturas.length > 0 ? Math.round(stats.ingresosMes / facturas.length) : 0;

  const mecanicos = mecanicosRes.data || [];
  stats.mecanicosActivos = mecanicos.filter((m: any) => {
    const activas = (m.orden_de_trabajos || []).filter((o: any) => !['entregado', 'facturado'].includes(o.estado)).length;
    return activas > 0;
  }).length;

  mecanicosRendimiento = mecanicos.map((m: any) => {
    const ordenes = m.orden_de_trabajos || [];
    const completadas = ordenes.filter((o: any) => o.estado === 'entregado').length;
    const activas = ordenes.filter((o: any) => !['entregado', 'facturado'].includes(o.estado)).length;
    const ingresos = ordenes.reduce((sum: number, o: any) => sum + (o.factura?.total || 0), 0);
    const total = completadas + activas;
    return {
      id: m.id,
      nombre: m.nombre,
      apellido: m.apellido || '',
      ordenesCompletadas: completadas,
      ordenesActivas: activas,
      ingresos: ingresos,
      eficiencia: total > 0 ? Math.round((completadas / total) * 100) : 0
    };
  }).sort((a, b) => b.ordenesCompletadas - a.ordenesCompletadas);

  stats.clientesNuevos = clientesRes.meta?.pagination?.total || 0;

  const todasOrdenes = todasOrdenesRes.data || [];
  estadoDistribucion = todasOrdenes.reduce((acc: Record<string, number>, o: any) => {
    acc[o.estado] = (acc[o.estado] || 0) + 1;
    return acc;
  }, {});

  ordenesRecientes = (ordenesFacturadas.data || []).map((o: any) => ({
    id: o.id,
    documentId: o.documentId,
    estado: o.estado,
    total: o.factura?.total || 0,
    cliente: o.vehiculo?.cliente ? `${o.vehiculo.cliente.nombre} ${o.vehiculo.cliente.apellido || ''}` : 'N/A',
    vehiculo: o.vehiculo ? `${o.vehiculo.marca} ${o.vehiculo.modelo}` : 'N/A',
    fecha: o.updatedAt
  }));

  // Servicios populares
  serviciosPopulares = (serviciosRes.data || [])
    .map((s: any) => ({
      nombre: s.nombre,
      cantidad: s.orden_de_trabajos?.length || 0
    }))
    .sort((a: any, b: any) => b.cantidad - a.cantidad)
    .slice(0, 5);

} catch (e) {
  console.error('Error fetching report data:', e);
}

const estadoLabels: Record<string, string> = {
  'ingresado': 'Ingresado',
  'en_diagnostico': 'En Diagn√≥stico',
  'en_reparacion': 'En Reparaci√≥n',
  'finalizado': 'Finalizado',
  'facturado': 'Facturado',
  'entregado': 'Entregado'
};

const estadoColors: Record<string, string> = {
  'ingresado': 'from-red-500 to-rose-600',
  'en_diagnostico': 'from-purple-500 to-indigo-600',
  'en_reparacion': 'from-amber-500 to-orange-500',
  'finalizado': 'from-blue-500 to-cyan-600',
  'facturado': 'from-green-500 to-emerald-600',
  'entregado': 'from-gray-500 to-gray-600'
};

const formatCurrency = (amount: number) => new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(amount);
const formatDate = (dateString: string) => new Date(dateString).toLocaleDateString('es-CL', { day: '2-digit', month: 'short', year: 'numeric' });

const totalOrdenes = Object.values(estadoDistribucion).reduce((a, b) => a + b, 0);
const cambioIngresos = stats.ingresosUltimoMes > 0 ? Math.round(((stats.ingresosMes - stats.ingresosUltimoMes) / stats.ingresosUltimoMes) * 100) : 0;
