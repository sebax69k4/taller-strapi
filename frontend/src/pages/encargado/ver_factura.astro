---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import { strapiGet } from '../../lib/strapi';

const facturaId = Astro.url.searchParams.get('id');
let factura: any = null;
let error = '';

if (facturaId) {
  try {
    const response = await strapiGet(`/api/facturas/${facturaId}?populate[orden_de_trabajo][populate][vehiculo][populate][cliente]=*&populate[orden_de_trabajo][populate][mecanico]=*&populate[orden_de_trabajo][populate][repuestos]=*`);
    factura = response.data;
  } catch (e: any) {
    error = e.message;
  }
}

const formatMoney = (amount: number) => `$${(amount || 0).toLocaleString('es-CL')}`;
const formatDate = (date: string) => date ? new Date(date).toLocaleDateString('es-CL') : '-';
---

<Layout title="Ver Factura">
  <div class="flex min-h-screen bg-background-light dark:bg-background-dark">
    <Sidebar role="encargado" currentPath="/encargado/ver_factura" />
    
    <main class="flex-1 p-8">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Ver Factura</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">Detalle completo de la factura</p>
          </div>
          {factura && (
            <button onclick="window.print()" class="btn-primary flex items-center gap-2">
              <span class="material-symbols-outlined">print</span>
              Imprimir
            </button>
          )}
        </div>

        {!facturaId && (
          <div class="card p-8">
            <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Buscar Factura</h2>
            <form class="flex gap-4">
              <input 
                type="text" 
                name="id"
                placeholder="ID de la factura..."
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              />
              <button type="submit" class="btn-primary">Buscar</button>
            </form>
          </div>
        )}

        {error && (
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            {error}
          </div>
        )}

        {factura && (
          <div class="card p-8 print:shadow-none" id="factura-print">
            <!-- Encabezado -->
            <div class="flex justify-between items-start border-b pb-6 mb-6">
              <div>
                <h2 class="text-3xl font-bold text-gray-800">FACTURA</h2>
                <p class="text-gray-600 mt-1">Taller Veloz</p>
                <p class="text-sm text-gray-500">Dirección del Taller #123</p>
                <p class="text-sm text-gray-500">Teléfono: +56 9 1234 5678</p>
              </div>
              <div class="text-right">
                <p class="text-4xl font-bold text-blue-600">#{factura.numero || factura.id}</p>
                <p class="text-gray-600 mt-2">Fecha: {formatDate(factura.fecha || factura.createdAt)}</p>
                <span class={`inline-block mt-2 px-3 py-1 rounded-full text-sm font-bold ${
                  factura.estado === 'pagado' ? 'bg-green-100 text-green-800' :
                  factura.estado === 'anulado' ? 'bg-red-100 text-red-800' :
                  'bg-yellow-100 text-yellow-800'
                }`}>
                  {(factura.estado || 'pendiente').toUpperCase()}
                </span>
              </div>
            </div>

            <!-- Datos del cliente -->
            <div class="grid grid-cols-2 gap-8 mb-8">
              <div>
                <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Cliente</h3>
                <p class="font-bold text-gray-800 text-lg">
                  {factura.orden_de_trabajo?.vehiculo?.cliente?.nombre} {factura.orden_de_trabajo?.vehiculo?.cliente?.apellido}
                </p>
                <p class="text-gray-600">{factura.orden_de_trabajo?.vehiculo?.cliente?.rut || 'Sin RUT'}</p>
                <p class="text-gray-600">{factura.orden_de_trabajo?.vehiculo?.cliente?.email || ''}</p>
                <p class="text-gray-600">{factura.orden_de_trabajo?.vehiculo?.cliente?.telefono || ''}</p>
              </div>
              <div>
                <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Vehículo</h3>
                <p class="font-bold text-gray-800 text-lg">
                  {factura.orden_de_trabajo?.vehiculo?.patente}
                </p>
                <p class="text-gray-600">
                  {factura.orden_de_trabajo?.vehiculo?.marca} {factura.orden_de_trabajo?.vehiculo?.modelo}
                </p>
                <p class="text-gray-600">Año: {factura.orden_de_trabajo?.vehiculo?.anio || '-'}</p>
                <p class="text-gray-600">Orden: #{factura.orden_de_trabajo?.id}</p>
              </div>
            </div>

            <!-- Descripción del trabajo -->
            <div class="mb-8">
              <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Descripción del Trabajo</h3>
              <p class="text-gray-700 bg-gray-50 p-4 rounded-lg">
                {factura.orden_de_trabajo?.descripcion || 'Sin descripción'}
              </p>
            </div>

            <!-- Detalle de items -->
            <table class="w-full mb-8">
              <thead>
                <tr class="border-b-2 border-gray-200">
                  <th class="text-left py-3 text-gray-600 font-bold">Descripción</th>
                  <th class="text-center py-3 text-gray-600 font-bold">Cant.</th>
                  <th class="text-right py-3 text-gray-600 font-bold">Precio Unit.</th>
                  <th class="text-right py-3 text-gray-600 font-bold">Total</th>
                </tr>
              </thead>
              <tbody>
                <!-- Mano de obra -->
                <tr class="border-b border-gray-100">
                  <td class="py-3">
                    <p class="font-medium text-gray-800">Mano de Obra</p>
                    <p class="text-sm text-gray-500">Servicio técnico de reparación</p>
                  </td>
                  <td class="text-center py-3">1</td>
                  <td class="text-right py-3">{formatMoney(factura.mano_obra || 0)}</td>
                  <td class="text-right py-3 font-medium">{formatMoney(factura.mano_obra || 0)}</td>
                </tr>
                
                <!-- Repuestos -->
                {factura.orden_de_trabajo?.repuestos?.map((rep: any) => (
                  <tr class="border-b border-gray-100">
                    <td class="py-3">
                      <p class="font-medium text-gray-800">{rep.nombre}</p>
                      <p class="text-sm text-gray-500">SKU: {rep.sku}</p>
                    </td>
                    <td class="text-center py-3">1</td>
                    <td class="text-right py-3">{formatMoney(rep.precio_venta || rep.precio)}</td>
                    <td class="text-right py-3 font-medium">{formatMoney(rep.precio_venta || rep.precio)}</td>
                  </tr>
                ))}
              </tbody>
            </table>

            <!-- Totales -->
            <div class="flex justify-end">
              <div class="w-72">
                <div class="flex justify-between py-2 border-b">
                  <span class="text-gray-600">Subtotal</span>
                  <span class="font-medium">{formatMoney(factura.subtotal)}</span>
                </div>
                {factura.descuento > 0 && (
                  <div class="flex justify-between py-2 border-b text-red-600">
                    <span>Descuento</span>
                    <span>-{formatMoney(factura.descuento)}</span>
                  </div>
                )}
                <div class="flex justify-between py-2 border-b">
                  <span class="text-gray-600">IVA (19%)</span>
                  <span class="font-medium">{formatMoney(factura.iva)}</span>
                </div>
                <div class="flex justify-between py-3 text-xl font-bold">
                  <span>TOTAL</span>
                  <span class="text-green-600">{formatMoney(factura.total)}</span>
                </div>
              </div>
            </div>

            <!-- Info de pago -->
            {factura.estado === 'pagado' && (
              <div class="mt-8 p-4 bg-green-50 border border-green-200 rounded-lg">
                <h3 class="font-bold text-green-800 mb-2">✓ Pago Registrado</h3>
                <div class="grid grid-cols-3 gap-4 text-sm">
                  <div>
                    <p class="text-green-600">Método</p>
                    <p class="font-medium text-green-800">{factura.metodo_pago || '-'}</p>
                  </div>
                  <div>
                    <p class="text-green-600">Referencia</p>
                    <p class="font-medium text-green-800">{factura.referencia_pago || '-'}</p>
                  </div>
                  <div>
                    <p class="text-green-600">Fecha de pago</p>
                    <p class="font-medium text-green-800">{formatDate(factura.fecha_pago)}</p>
                  </div>
                </div>
              </div>
            )}

            <!-- Pie de factura -->
            <div class="mt-8 pt-6 border-t text-center text-sm text-gray-500">
              <p>Gracias por su preferencia</p>
              <p class="mt-1">Este documento es una representación impresa de la factura electrónica</p>
            </div>
          </div>
        )}
      </div>
    </main>
  </div>
</Layout>

<style>
  @media print {
    aside, button, .no-print {
      display: none !important;
    }
    main {
      padding: 0 !important;
    }
    .card {
      box-shadow: none !important;
      border: none !important;
    }
  }
</style>
