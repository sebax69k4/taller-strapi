---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  descripcion: string;
  fecha_ingreso: string;
  fecha_entrega: string | null;
  diagnostico: string | null;
  mecanico: {
    nombre: string;
    apellido: string;
  } | null;
  factura: {
    numero_factura: string;
    total: number;
  } | null;
}

interface Vehiculo {
  id: number;
  documentId: string;
  patente: string;
  marca: string;
  modelo: string;
  ano: number;
  numero_de_chasis: string;
  cliente: {
    nombre: string;
    apellido: string;
    telefono: string;
    email: string;
  } | null;
}

let vehiculo: Vehiculo | null = null;
let ordenes: Order[] = [];
let error = '';
let searchPerformed = false;

const searchQuery = Astro.url.searchParams.get('patente') || '';
const vehiculoId = Astro.url.searchParams.get('id') || '';

if (vehiculoId) {
  searchPerformed = true;
  try {
    // Obtener veh√≠culo
    const vehData = await strapiGet(`/api/vehiculos/${vehiculoId}?populate[cliente][fields][0]=nombre&populate[cliente][fields][1]=apellido&populate[cliente][fields][2]=telefono&populate[cliente][fields][3]=email`);
    vehiculo = vehData.data;
    
    if (vehiculo) {
      // Obtener √≥rdenes del veh√≠culo
      const ordenesData = await strapiGet(`/api/orden-de-trabajos?filters[vehiculo][documentId][$eq]=${vehiculoId}&populate[mecanico][fields][0]=nombre&populate[mecanico][fields][1]=apellido&populate[factura][fields][0]=numero_factura&populate[factura][fields][1]=total&sort[0]=fecha_ingreso:desc`);
      ordenes = ordenesData.data || [];
    }
  } catch (e: any) {
    console.error('Error fetching vehicle:', e);
    error = 'Error al obtener el veh√≠culo';
  }
} else if (searchQuery) {
  searchPerformed = true;
  try {
    // Buscar veh√≠culo por patente
    const vehData = await strapiGet(`/api/vehiculos?filters[patente][$containsi]=${searchQuery}&populate[cliente][fields][0]=nombre&populate[cliente][fields][1]=apellido&populate[cliente][fields][2]=telefono&populate[cliente][fields][3]=email&pagination[limit]=1`);
    
    if (vehData.data && vehData.data.length > 0) {
      vehiculo = vehData.data[0];
      
      // Obtener √≥rdenes del veh√≠culo
      const ordenesData = await strapiGet(`/api/orden-de-trabajos?filters[vehiculo][documentId][$eq]=${vehiculo!.documentId}&populate[mecanico][fields][0]=nombre&populate[mecanico][fields][1]=apellido&populate[factura][fields][0]=numero_factura&populate[factura][fields][1]=total&sort[0]=fecha_ingreso:desc`);
      ordenes = ordenesData.data || [];
    }
  } catch (e: any) {
    console.error('Error searching vehicle:', e);
    error = 'Error al buscar el veh√≠culo';
  }
}

const getEstadoColor = (estado: string) => {
  const colors: Record<string, string> = {
    ingresado: 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300',
    en_diagnostico: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300',
    en_reparacion: 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300',
    finalizado: 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300',
    facturado: 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300',
    entregado: 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300'
  };
  return colors[estado] || 'bg-gray-100 text-gray-800';
};

const formatEstado = (estado: string) => {
  const labels: Record<string, string> = {
    ingresado: 'Ingresado',
    en_diagnostico: 'En Diagn√≥stico',
    en_reparacion: 'En Reparaci√≥n',
    finalizado: 'Finalizado',
    facturado: 'Facturado',
    entregado: 'Entregado'
  };
  return labels[estado] || estado;
};

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};

// Calcular estad√≠sticas
const totalOrdenes = ordenes.length;
const ordenesCompletadas = ordenes.filter(o => o.estado === 'entregado').length;
const totalGastado = ordenes.reduce((sum, o) => sum + (o.factura?.total || 0), 0);
