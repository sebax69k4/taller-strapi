                <span class="material-symbols-outlined text-4xl">directions_car</span>
              </div>
              <div class="flex-1">
                <p class="text-sm opacity-75 mb-1">Patente</p>
                <h2 class="text-3xl font-bold font-mono">{vehiculo.patente}</h2>
                <p class="text-lg mt-1">{vehiculo.marca} {vehiculo.modelo} ({vehiculo.ano})</p>
              </div>
