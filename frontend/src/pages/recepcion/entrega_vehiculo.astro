---
export const prerender = false;
import { strapiGet, strapiPut } from '../../lib/strapi';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Button from '../../components/ui/Button.astro';

const userRole = Astro.cookies.get('user_role')?.value as 'recepcionista' | 'encargado' | 'mecanico' | undefined;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  cliente: { nombre: string; apellido: string };
  vehiculo: { marca: string; modelo: string; patente: string };
  factura?: { total: number; numero_factura: string };
}

let readyOrders: Order[] = [];
let successMessage = '';
let errorMessage = '';

try {
  // Handle POST request to mark as delivered
  if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    const orderId = formData.get('orderId');

    if (action === 'confirmDelivery' && orderId) {
        try {
            await strapiPut(`/api/orden-de-trabajos/${orderId}`, {
                estado: 'entregado'
            });
            successMessage = 'Vehículo entregado exitosamente. Orden cerrada.';
        } catch (err: any) {
            console.error('Error updating order:', err);
            errorMessage = 'Error al procesar la entrega.';
        }
    }
  }

  // Fetch orders with status 'facturado' - cliente viene anidado en vehiculo
  const data = await strapiGet('/api/orden-de-trabajos?filters[estado][$eq]=facturado&populate[vehiculo][populate][cliente][fields][0]=nombre&populate[vehiculo][populate][cliente][fields][1]=apellido&populate[factura][fields][0]=total&populate[factura][fields][1]=numero_factura&sort[0]=updatedAt:desc');
  // Mapear para tener cliente accesible directamente
  readyOrders = (data.data || []).map((order: any) => ({
    ...order,
    cliente: order.vehiculo?.cliente || { nombre: 'N/A', apellido: '' },
    vehiculo: order.vehiculo || { marca: 'N/A', modelo: '', patente: '' },
    factura: order.factura
  }));
} catch (e) {
  console.error('Error fetching orders:', e);
  errorMessage = 'Error al cargar las órdenes.';
}
---

<DashboardLayout title="Entrega de Vehículos" role={userRole} currentPath="/recepcion/entrega_vehiculo">
    <div class="max-w-5xl mx-auto">
        <div class="flex flex-col gap-2 mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Entrega de Vehículos</h1>
            <p class="text-gray-500 dark:text-gray-400">Gestione la entrega final de vehículos facturados.</p>
        </div>
        
        {successMessage && <div class="p-4 mb-6 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800 flex items-center gap-2" role="alert"><span class="material-symbols-outlined">check_circle</span>{successMessage}</div>}
        {errorMessage && <div class="p-4 mb-6 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800 flex items-center gap-2" role="alert"><span class="material-symbols-outlined">error</span>{errorMessage}</div>}

        <div class="grid gap-6">
            {readyOrders.map((order: Order) => (
                <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 flex flex-col md:flex-row justify-between items-center gap-6">
                    <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                            <h3 class="font-bold text-xl text-gray-900 dark:text-white">Orden #{order.documentId.slice(0, 6)}</h3>
                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300 border border-green-200 dark:border-green-800">
                                Facturado
                            </span>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-2 text-sm">
                            <div>
                                <p class="text-gray-500 dark:text-gray-400">Cliente</p>
                                <p class="font-medium text-gray-900 dark:text-white">{order.cliente.nombre} {order.cliente.apellido}</p>
                            </div>
                            <div>
                                <p class="text-gray-500 dark:text-gray-400">Vehículo</p>
                                <p class="font-medium text-gray-900 dark:text-white">{order.vehiculo.marca} {order.vehiculo.modelo} <span class="text-gray-500">({order.vehiculo.patente})</span></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-4">
                        <div class="text-right mr-4 hidden md:block">
                            <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Total a Pagar</p>
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">
                                {order.factura?.total 
                                    ? new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(order.factura.total)
                                    : 'Por calcular'}
                            </p>
                            {order.factura?.numero_factura && (
                                <p class="text-xs text-gray-500 dark:text-gray-400">{order.factura.numero_factura}</p>
                            )}
                        </div>

                        <form method="POST" onsubmit="return confirm('¿Confirmar que el cliente ha pagado y se entrega el vehículo?');">
                            <input type="hidden" name="orderId" value={order.documentId} />
                            <input type="hidden" name="action" value="confirmDelivery" />
                            <button type="submit" class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors flex items-center gap-2 font-medium shadow-sm hover:shadow-md">
                                <span class="material-symbols-outlined">key</span>
                                Confirmar Entrega
                            </button>
                        </form>
                    </div>
                </div>
            ))}

            {readyOrders.length === 0 && (
                <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 border-dashed">
                    <div class="w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-3xl text-gray-400">no_crash</span>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">No hay vehículos para entrega</h3>
                    <p class="text-gray-500 dark:text-gray-400 mt-1">Las órdenes facturadas por el encargado aparecerán aquí.</p>
                </div>
            )}
        </div>
    </div>
</DashboardLayout>
