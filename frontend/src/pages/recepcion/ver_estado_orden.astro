---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Badge from '../../components/ui/Badge.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  descripcion: string;
  fecha_ingreso: string;
  fecha_estimada: string | null;
  diagnostico: string | null;
  prioridad?: string;
  vehiculo: {
    marca: string;
    modelo: string;
    patente: string;
    cliente: {
      nombre: string;
      apellido: string;
      telefono: string;
    } | null;
  } | null;
  mecanico: {
    nombre: string;
    apellido: string;
  } | null;
  createdAt: string;
  updatedAt: string;
}

let orders: Order[] = [];
let recentOrders: Order[] = [];
let error = '';
let searchPerformed = false;

const searchQuery = Astro.url.searchParams.get('q') || '';
const searchType = Astro.url.searchParams.get('type') || 'patente';

// Siempre cargar Ã³rdenes recientes
try {
  const recentData = await strapiGet('/api/orden-de-trabajos?sort=updatedAt:desc&pagination[limit]=6&populate[vehiculo][populate]=cliente&populate=mecanico&filters[estado][$notIn][0]=entregado');
  recentOrders = recentData.data || [];
} catch (e) {
  console.error('Error loading recent orders:', e);
}

if (searchQuery) {
  searchPerformed = true;
  try {
    let queryUrl = '/api/orden-de-trabajos?';
    
    if (searchType === 'patente') {
      queryUrl += `filters[vehiculo][patente][$containsi]=${searchQuery}`;
    } else if (searchType === 'orden') {
      queryUrl += `filters[id][$eq]=${searchQuery}`;
    } else if (searchType === 'cliente') {
      queryUrl += `filters[$or][0][vehiculo][cliente][nombre][$containsi]=${searchQuery}`;
      queryUrl += `&filters[$or][1][vehiculo][cliente][apellido][$containsi]=${searchQuery}`;
    }
    
    queryUrl += '&populate[vehiculo][populate]=cliente';
    queryUrl += '&populate=mecanico';
    queryUrl += '&sort=updatedAt:desc';
    queryUrl += '&pagination[limit]=10';
    
    const data = await strapiGet(queryUrl);
    orders = data.data || [];
  } catch (e: any) {
    console.error('Error searching order:', e);
    error = 'Error al buscar la orden';
  }
}

const estadoSteps: Record<string, number> = {
  ingresado: 1,
  en_diagnostico: 2,
  en_reparacion: 3,
  finalizado: 4,
  facturado: 5,
  entregado: 6
};

const getEstadoInfo = (estado: string) => {
  const estados: Record<string, { label: string; color: string; bgColor: string; icon: string }> = {
    ingresado: { 
      label: 'Ingresado', 
      color: 'text-gray-700 dark:text-gray-300',
      bgColor: 'bg-gray-100 dark:bg-gray-700',
      icon: 'login'
    },
    en_diagnostico: { 
      label: 'En DiagnÃ³stico', 
      color: 'text-amber-700 dark:text-amber-300',
      bgColor: 'bg-amber-100 dark:bg-amber-900/30',
      icon: 'search'
    },
    en_reparacion: { 
      label: 'En ReparaciÃ³n', 
      color: 'text-blue-700 dark:text-blue-300',
      bgColor: 'bg-blue-100 dark:bg-blue-900/30',
      icon: 'build'
    },
    finalizado: { 
      label: 'Finalizado', 
      color: 'text-purple-700 dark:text-purple-300',
      bgColor: 'bg-purple-100 dark:bg-purple-900/30',
      icon: 'check_circle'
    },
    facturado: { 
      label: 'Listo para Entrega', 
      color: 'text-green-700 dark:text-green-300',
      bgColor: 'bg-green-100 dark:bg-green-900/30',
      icon: 'key'
    },
    entregado: { 
      label: 'Entregado', 
      color: 'text-emerald-700 dark:text-emerald-300',
      bgColor: 'bg-emerald-100 dark:bg-emerald-900/30',
      icon: 'task_alt'
    }
  };
  return estados[estado] || { label: estado, color: 'text-gray-700', bgColor: 'bg-gray-100', icon: 'help' };
};

const getPrioridadInfo = (prioridad: string) => {
  const prioridades: Record<string, { label: string; color: string; icon: string }> = {
    urgente: { label: 'Urgente', color: 'text-red-600 bg-red-100 dark:bg-red-900/30', icon: 'ðŸ”´' },
    alta: { label: 'Alta', color: 'text-orange-600 bg-orange-100 dark:bg-orange-900/30', icon: 'ðŸŸ ' },
    normal: { label: 'Normal', color: 'text-yellow-600 bg-yellow-100 dark:bg-yellow-900/30', icon: 'ðŸŸ¡' },
    baja: { label: 'Baja', color: 'text-green-600 bg-green-100 dark:bg-green-900/30', icon: 'ðŸŸ¢' }
  };
  return prioridades[prioridad] || prioridades.normal;
};

const formatTimeAgo = (dateStr: string) => {
  const date = new Date(dateStr);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);
  const diffDays = Math.floor(diffMs / 86400000);
  
  if (diffMins < 60) return `hace ${diffMins} min`;
  if (diffHours < 24) return `hace ${diffHours}h`;
  if (diffDays === 1) return 'ayer';
  return `hace ${diffDays} dÃ­as`;
};

// Helper to check if step is completed
const isStepCompleted = (orderEstado: string, stepKey: string) => {
  return estadoSteps[stepKey] < estadoSteps[orderEstado] || stepKey === orderEstado;
};

const isStepCurrent = (orderEstado: string, stepKey: string) => {
  return stepKey === orderEstado;
};
