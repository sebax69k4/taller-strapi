---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { fetchStrapi, strapiGet, strapiPost, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

// TypeScript Interfaces
interface ClienteAttributes {
  nombre: string;
  apellido: string;
  rut: string;
}

interface Cliente {
  id: number;
  attributes: ClienteAttributes;
}

interface VehiculoAttributes {
  patente: string;
  marca: string;
  modelo: string;
  cliente: {
    data: Cliente | null;
  };
}

interface Vehiculo {
  id: number;
  attributes: VehiculoAttributes;
}

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

let message = Astro.url.searchParams.get('message');
let messageType = Astro.url.searchParams.get('type');
let clientes: Cliente[] = [];
let vehiculos: Vehiculo[] = [];

try {
  const [clientesResponse, vehiculosResponse] = await Promise.all([
    strapiGet('/api/clientes?sort=nombre:asc'),
    strapiGet('/api/vehiculos?populate=cliente&sort=marca:asc')
  ]);

  clientes = clientesResponse.data || [];
  vehiculos = vehiculosResponse.data || [];

} catch (error: any) {
  console.error('Error fetching data:', error);
  message = error.message;
  messageType = 'error';
}

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const clienteId = formData.get('cliente');
    const vehiculoId = formData.get('vehiculo');
    const fechaEntrada = formData.get('fecha_entrada');
    const descripcion = formData.get('descripcion');

    if (!clienteId || !vehiculoId || !fechaEntrada || !descripcion) {
        return Astro.redirect(`/recepcion/crear_orden?message=${encodeURIComponent('Todos los campos son obligatorios.')}&type=error`);
    }

    const result = await strapiPost('/api/orden-de-trabajos', {
      cliente: parseInt(clienteId as string, 10),
      vehiculo: parseInt(vehiculoId as string, 10),
      fecha_entrada: fechaEntrada,
      descripcion: descripcion,
      estado: 'Pendiente'
    });

    return Astro.redirect(`/recepcion/dash_recep?message=${encodeURIComponent('Orden creada exitosamente.')}&type=success`);

  } catch (error: any) {
    console.error('Error creating order:', error);
    message = 'Error al crear la orden. ' + error.message;
    messageType = 'error';
  }
}
---

<DashboardLayout title="Crear Orden de Trabajo" role="recepcionista" currentPath="/recepcion/crear_orden">
    <div class="max-w-4xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Nueva Orden de Trabajo</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Registra un nuevo vehículo para servicio</p>
        </div>

        <!-- Alert Messages -->
        {message && (
            <div class={`p-4 mb-6 rounded-lg border flex items-center gap-3 ${messageType === 'success' ? 'bg-green-50 border-green-200 text-green-800 dark:bg-green-900/30 dark:border-green-800 dark:text-green-300' : 'bg-red-50 border-red-200 text-red-800 dark:bg-red-900/30 dark:border-red-800 dark:text-red-300'}`}>
                <span class="material-symbols-outlined">{messageType === 'success' ? 'check_circle' : 'error'}</span>
                <p class="text-sm font-medium">{message}</p>
            </div>
        )}

        <Card>
            <form method="POST" class="space-y-8" x-data={`formController({ allVehiculos: ${JSON.stringify(vehiculos)} })`}>
                
                <!-- Client and Vehicle Selection -->
                <div>
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                        <span class="flex items-center justify-center w-6 h-6 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-xs">1</span>
                        Información de Cliente y Vehículo
                    </h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300" for="cliente">Cliente</label>
                            <select name="cliente" id="cliente" @change="filterVehiculos($event.target.value)" class="form-select w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:border-primary-500 focus:ring-primary-500 dark:text-gray-200" required>
                                <option value="" disabled selected>Seleccione un cliente...</option>
                                {clientes.map((cliente: any) => (
                                    <option value={cliente.id}>{cliente.nombre} {cliente.apellido}</option>
                                ))}
                            </select>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300" for="vehiculo">Vehículo</label>
                            <select name="vehiculo" id="vehiculo" class="form-select w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:border-primary-500 focus:ring-primary-500 dark:text-gray-200" required :disabled="filteredVehiculos.length === 0">
                                <option value="" disabled selected>Seleccione un vehículo...</option>
                                <template x-for="vehiculo in filteredVehiculos" :key="vehiculo.id">
                                    <option :value="vehiculo.id" x-text="`${vehiculo.marca} ${vehiculo.modelo} (${vehiculo.patente})`"></option>
                                </template>
                            </select>
                            <p x-show="selectedClientId && filteredVehiculos.length === 0" class="text-xs text-amber-600 dark:text-amber-400 mt-1 flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">warning</span>
                                Este cliente no tiene vehículos. <a href="/recepcion/crear_vehiculo" class="font-medium hover:underline">Añadir uno</a>.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="border-t border-gray-100 dark:border-gray-800"></div>

                <!-- Service Details -->
                <div>
                    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
                        <span class="flex items-center justify-center w-6 h-6 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 text-xs">2</span>
                        Detalles del Servicio
                    </h2>
                    <div class="grid grid-cols-1 gap-6">
                        <div class="flex flex-col sm:max-w-xs gap-2">
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300" for="fecha_entrada">Fecha de Entrada</label>
                            <input name="fecha_entrada" id="fecha_entrada" x-init="$el.value = new Date().toISOString().split('T')[0]" class="form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:border-primary-500 focus:ring-primary-500 dark:text-gray-200" type="date" required/>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-medium text-gray-700 dark:text-gray-300" for="descripcion">Descripción del Problema / Tareas</label>
                            <textarea name="descripcion" id="descripcion" class="form-textarea w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:border-primary-500 focus:ring-primary-500 dark:text-gray-200 placeholder:text-gray-400" placeholder="Ej: Ruido en el motor al acelerar, revisar frenos, cambio de aceite..." rows="5" required></textarea>
                        </div>
                    </div>
                </div>

                <div class="border-t border-gray-100 dark:border-gray-800"></div>

                <!-- Action Area -->
                <div class="flex justify-end gap-3 pt-2">
                    <a href="/recepcion/dash_recep">
                        <Button type="button" variant="secondary">
                            Cancelar
                        </Button>
                    </a>
                    <Button type="submit" icon="add_task">
                        Crear Orden
                    </Button>
                </div>
            </form>
        </Card>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('formController', ({ allVehiculos }) => ({
                message: new URLSearchParams(window.location.search).get('message'),
                messageType: new URLSearchParams(window.location.search).get('type'),
                selectedClientId: null,
                allVehiculos: allVehiculos,
                filteredVehiculos: [],
                filterVehiculos(clientId) {
                    this.selectedClientId = clientId;
                    if (!clientId) {
                        this.filteredVehiculos = [];
                        return;
                    }
                    this.filteredVehiculos = this.allVehiculos.filter(
                        (vehiculo) => vehiculo.cliente && vehiculo.cliente.id == clientId
                    );
                }
            }));
        });
    </script>
</DashboardLayout>