---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  descripcion: string;
  fecha_ingreso: string;
  fecha_entrega: string | null;
  prioridad?: string;
  kilometraje_ingreso?: number;
  nivel_combustible?: string;
  vehiculo: {
    marca: string;
    modelo: string;
    patente: string;
    ano?: number;
    color?: string;
    cliente: {
      nombre: string;
      apellido: string;
      rut?: string;
      telefono: string;
      email: string;
      direccion?: string;
      comuna?: string;
    } | null;
  } | null;
  mecanico: {
    nombre: string;
    apellido: string;
  } | null;
  factura: {
    numero_factura: string;
    total: number;
    fecha_emision: string;
  } | null;
  servicios?: Array<{
    nombre: string;
    precio_base: number;
  }>;
  createdAt: string;
}

const orderId = Astro.url.searchParams.get('id');
const tipoComprobante = Astro.url.searchParams.get('tipo') || 'auto';
let order: Order | null = null;
let recentOrders: Order[] = [];
let error = '';

// Cargar √≥rdenes recientes para mostrar cuando no hay b√∫squeda
try {
  const recentData = await strapiGet('/api/orden-de-trabajos?sort=updatedAt:desc&pagination[limit]=8&populate[vehiculo][populate]=cliente&populate=mecanico&populate=factura');
  recentOrders = recentData.data || [];
} catch (e) {
  console.error('Error loading recent orders:', e);
}

if (orderId) {
  try {
    const data = await strapiGet(`/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate]=cliente&populate=mecanico&populate=factura&populate=servicios`);
    order = data.data;
  } catch (e: any) {
    console.error('Error fetching order:', e);
    error = 'Error al obtener la orden. Verifica el ID ingresado.';
  }
}

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const formatDateTime = (dateString: string) => {
  return new Date(dateString).toLocaleString('es-CL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};

const getComprobanteType = () => {
  if (tipoComprobante !== 'auto') return tipoComprobante;
  if (!order) return 'recepcion';
  if (order.estado === 'entregado' || order.estado === 'facturado') return 'entrega';
  return 'recepcion';
};

const comprobanteType = getComprobanteType();

const getNivelCombustibleLabel = (nivel: string) => {
  const niveles: Record<string, string> = {
    vacio: 'Vac√≠o (E)',
    cuarto: '1/4',
    medio: '1/2',
    tres_cuartos: '3/4',
    lleno: 'Lleno (F)'
  };
  return niveles[nivel] || nivel;
};

const getEstadoInfo = (estado: string) => {
  const estados: Record<string, { label: string; color: string; bgColor: string }> = {
    ingresado: { label: 'Ingresado', color: 'text-gray-700', bgColor: 'bg-gray-100' },
    en_diagnostico: { label: 'En Diagn√≥stico', color: 'text-amber-700', bgColor: 'bg-amber-100' },
    en_reparacion: { label: 'En Reparaci√≥n', color: 'text-blue-700', bgColor: 'bg-blue-100' },
    finalizado: { label: 'Finalizado', color: 'text-purple-700', bgColor: 'bg-purple-100' },
    facturado: { label: 'Facturado', color: 'text-green-700', bgColor: 'bg-green-100' },
    entregado: { label: 'Entregado', color: 'text-emerald-700', bgColor: 'bg-emerald-100' }
  };
  return estados[estado] || { label: estado, color: 'text-gray-700', bgColor: 'bg-gray-100' };
};
