---
export const prerender = false;

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import '../../styles/global.css';
import { strapiGet } from '../../lib/strapi';

// Verificar sesión
const userRole = Astro.cookies.get('user_role')?.value;
const userName = Astro.cookies.get('user_name')?.value || 'Usuario';

if (!userRole) {
  return Astro.redirect('/login');
}

// --- DATA FETCHING & STATE ---
let activeOrdersCount = 0;
let vehiclesCount = 0;
let pendingOrdersCount = 0;
let recentOrders: any[] = [];
let error = '';

try {
    const [activeOrdersData, vehiclesData, pendingOrdersData, recentOrdersData] = await Promise.all([
        strapiGet('/api/orden-de-trabajos?filters[estado][$ne]=Entregado&pagination[pageSize]=1'),
        strapiGet('/api/vehiculos?pagination[pageSize]=1'),
        strapiGet('/api/orden-de-trabajos?filters[estado][$eq]=Pendiente&pagination[pageSize]=1'),
        strapiGet('/api/orden-de-trabajos?sort[0]=createdAt:desc&pagination[limit]=5&populate=vehiculo')
    ]);

    activeOrdersCount = activeOrdersData.meta?.pagination?.total || 0;
    vehiclesCount = vehiclesData.meta?.pagination?.total || 0;

    pendingOrdersCount = pendingOrdersData.meta?.pagination?.total || 0;
    recentOrders = recentOrdersData.data || [];

} catch (e: any) {
    console.error('Error fetching dashboard data:', e);
    error = e.message;
}
---

<DashboardLayout title="Dashboard Recepción" role="recepcionista" currentPath={Astro.url.pathname}>
    {error && (
        <div class="p-4 text-sm text-red-700 bg-red-50 rounded-lg border border-red-100 flex items-center gap-2" role="alert">
            <span class="material-symbols-outlined text-lg">error</span>
            <span>Error cargando datos: {error}</span>
        </div>
    )}
    
    <div class="flex flex-col gap-1">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">¡Bienvenido, {userName}!</h1>
        <p class="text-gray-500 dark:text-gray-400">Aquí tienes un resumen de la actividad y accesos rápidos.</p>
    </div>

    <section>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-600">rocket_launch</span>
            Accesos Rápidos
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
            <a href="/recepcion/crear_cliente" class="group">
                <Card class="h-full hover:border-primary-500 hover:shadow-md transition-all duration-200 group-hover:-translate-y-1">
                    <div class="flex flex-col gap-3">
                        <div class="w-10 h-10 rounded-lg bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">person_add</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-blue-600 transition-colors">Crear Cliente</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Registra una nueva persona</p>
                        </div>
                    </div>
                </Card>
            </a>
            <a href="/recepcion/crear_vehiculo" class="group">
                <Card class="h-full hover:border-primary-500 hover:shadow-md transition-all duration-200 group-hover:-translate-y-1">
                    <div class="flex flex-col gap-3">
                        <div class="w-10 h-10 rounded-lg bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 flex items-center justify-center group-hover:bg-purple-600 group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">directions_car</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-purple-600 transition-colors">Crear Vehículo</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Añade un vehículo a un cliente</p>
                        </div>
                    </div>
                </Card>
            </a>
            <a href="/recepcion/crear_orden" class="group">
                <Card class="h-full hover:border-primary-500 hover:shadow-md transition-all duration-200 group-hover:-translate-y-1">
                    <div class="flex flex-col gap-3">
                        <div class="w-10 h-10 rounded-lg bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 flex items-center justify-center group-hover:bg-orange-600 group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">post_add</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-orange-600 transition-colors">Crear Orden</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Abre una orden de reparación</p>
                        </div>
                    </div>
                </Card>
            </a>
            <a href="/recepcion/list_c_y_v" class="group">
                <Card class="h-full hover:border-primary-500 hover:shadow-md transition-all duration-200 group-hover:-translate-y-1">
                    <div class="flex flex-col gap-3">
                        <div class="w-10 h-10 rounded-lg bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 flex items-center justify-center group-hover:bg-green-600 group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined">manage_search</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-green-600 transition-colors">Ver Registros</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Busca clientes y vehículos</p>
                        </div>
                    </div>
                </Card>
            </a>
        </div>
    </section>

    <section>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-600">analytics</span>
            Resumen General
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <Card class="relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <span class="material-symbols-outlined text-8xl text-blue-600">build_circle</span>
                </div>
                <div class="flex flex-col gap-1 relative z-10">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Órdenes Activas</span>
                    <p class="text-4xl font-black text-gray-900 dark:text-white font-display">{activeOrdersCount}</p>
                </div>
            </Card>
            <Card class="relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <span class="material-symbols-outlined text-8xl text-purple-600">garage</span>
                </div>
                <div class="flex flex-col gap-1 relative z-10">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Vehículos</span>
                    <p class="text-4xl font-black text-gray-900 dark:text-white font-display">{vehiclesCount}</p>
                </div>
            </Card>
            <Card class="relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <span class="material-symbols-outlined text-8xl text-orange-600">pending_actions</span>
                </div>
                <div class="flex flex-col gap-1 relative z-10">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Pendientes</span>
                    <p class="text-4xl font-black text-gray-900 dark:text-white font-display">{pendingOrdersCount}</p>
                </div>
            </Card>
        </div>
    </section>

    <section>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary-600">history</span>
            Actividad Reciente
        </h2>
        <Card noPadding class="overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead class="bg-gray-50 dark:bg-gray-800/50 border-b border-gray-200 dark:border-gray-800">
                        <tr>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Acción</th>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Detalle</th>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Fecha</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                        {recentOrders.map((order: any) => (
                          <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center gap-2 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">
                                    Nueva Orden
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-medium text-gray-900 dark:text-white">OT-{order.id}</span>
                                    <span class="text-xs text-gray-500 dark:text-gray-400">
                                        {order.vehiculo ? `${order.vehiculo.marca} ${order.vehiculo.modelo}` : 'Vehículo no asignado'}
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                              {new Date(order.createdAt).toLocaleString('es-ES', { dateStyle: 'medium', timeStyle: 'short' })}
                            </td>
                          </tr>
                        ))}
                        {recentOrders.length === 0 && (
                          <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                                <div class="flex flex-col items-center gap-2">
                                    <span class="material-symbols-outlined text-4xl text-gray-300">inbox</span>
                                    <p>No hay actividad reciente.</p>
                                </div>
                            </td>
                          </tr>
                        )}
                    </tbody>
                </table>
            </div>
        </Card>
    </section>
</DashboardLayout>