---
export const prerender = false;

import '../../styles/global.css';
import { strapiGet } from '../../lib/strapi';

// Verificar sesión
const userRole = Astro.cookies.get('user_role')?.value;
const userName = Astro.cookies.get('user_name')?.value || 'Usuario';

if (!userRole) {
  return Astro.redirect('/login');
}

// --- DATA FETCHING & STATE ---
let activeOrdersCount = 0;
let vehiclesCount = 0;
let pendingOrdersCount = 0;
let recentOrders: any[] = [];
let error = '';

try {
    const [activeOrdersData, vehiclesData, pendingOrdersData, recentOrdersData] = await Promise.all([
        strapiGet('/api/orden-de-trabajos?filters[estado][$ne]=Entregado&pagination[pageSize]=1'),
        strapiGet('/api/vehiculos?pagination[pageSize]=1'),
        strapiGet('/api/orden-de-trabajos?filters[estado][$eq]=Pendiente&pagination[pageSize]=1'),
        strapiGet('/api/orden-de-trabajos?sort[0]=createdAt:desc&pagination[limit]=5&populate=vehiculo')
    ]);

    activeOrdersCount = activeOrdersData.meta?.pagination?.total || 0;
    vehiclesCount = vehiclesData.meta?.pagination?.total || 0;

    pendingOrdersCount = pendingOrdersData.meta?.pagination?.total || 0;
    recentOrders = recentOrdersData.data || [];

} catch (e: any) {
    console.error('Error fetching dashboard data:', e);
    error = e.message;
}
---
<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Dashboard - Taller Veloz</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
