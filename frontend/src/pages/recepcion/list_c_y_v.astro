---
export const prerender = false;

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import Input from '../../components/ui/Input.astro';
import '../../styles/global.css';
import { strapiGet } from '../../lib/strapi';

const userRole = Astro.cookies.get('user_role')?.value;

if (!userRole) {
  return Astro.redirect('/login');
}

let clientes = [];
let error = '';

try {
  const response = await strapiGet('/api/clientes?populate=vehiculos');
  // Extraer data de la respuesta de Strapi
  const rawData = response.data || [];
  clientes = rawData.map((item: any) => ({
    id: item.id,
    documentId: item.documentId,
    nombre: item.nombre,
    apellido: item.apellido,
    telefono: item.telefono,
    email: item.email,
    rut: item.rut,
    vehiculos: item.vehiculos || []
  }));
} catch (e) {
  console.error(e);
  error = 'Error al cargar clientes';
}
---

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

<script define:vars={{ clientes }}>
    document.addEventListener('alpine:init', () => {
        Alpine.data('clientListController', () => ({
            searchQuery: '',
            clients: clientes,
            expandedRows: {},
            get filteredClients() {
                if (!this.searchQuery) return this.clients;
                const query = this.searchQuery.toLowerCase();
                return this.clients.filter(c => 
                    c.nombre.toLowerCase().includes(query) || 
                    c.apellido.toLowerCase().includes(query) ||
                    c.rut.toLowerCase().includes(query) ||
                    c.vehiculos.some(v => v.patente.toLowerCase().includes(query))
                );
            },
            toggleRow(id) {
                this.expandedRows[id] = !this.expandedRows[id];
            }
        }));
    });
</script>

<DashboardLayout title="Listado de Clientes y Vehículos" role="recepcionista" currentPath="/recepcion/list_c_y_v">
    <div class="w-full max-w-7xl mx-auto" x-data="clientListController">
        <!-- PageHeading -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Gestión de Clientes y Vehículos</h1>
                <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Consulta y administra clientes y sus vehículos registrados</p>
            </div>
            <a href="/recepcion/crear_cliente">
                <Button icon="add">
                    Nuevo Cliente
                </Button>
            </a>
        </div>

        <!-- Toolbar: Search and Filters -->
        <div class="bg-white dark:bg-gray-800 rounded-xl p-4 mb-6 shadow-sm border border-gray-100 dark:border-gray-700">
            <div class="flex flex-col md:flex-row gap-4 items-center">
                <!-- SearchBar -->
                <div class="flex-grow w-full">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="material-symbols-outlined text-gray-400">search</span>
                        </div>
                        <input 
                            x-model="searchQuery" 
                            class="block w-full pl-10 pr-3 py-2.5 border border-gray-200 dark:border-gray-700 rounded-lg leading-5 bg-gray-50 dark:bg-gray-900/50 text-gray-900 dark:text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition duration-150 ease-in-out" 
                            placeholder="Buscar por nombre, teléfono, email, patente, marca..." 
                            type="text"
                        />
                    </div>
                </div>
                <!-- Result count -->
                <div class="flex items-center px-2 whitespace-nowrap">
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      <span x-text="filteredClients.length" class="font-semibold text-gray-900 dark:text-white"></span> clientes encontrados
                    </p>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 dark:text-gray-300 uppercase bg-gray-50 dark:bg-gray-900/50">
                        <tr>
                            <th class="p-4 w-4" scope="col"></th>
                            <th class="px-6 py-4 text-left font-semibold text-gray-900 dark:text-white" scope="col">Cliente</th>
                            <th class="px-6 py-4 text-left font-semibold text-gray-900 dark:text-white" scope="col">Contacto</th>
                            <th class="px-6 py-4 text-left font-semibold text-gray-900 dark:text-white" scope="col">Vehículos</th>
                            <th class="px-6 py-4 text-right font-semibold text-gray-900 dark:text-white" scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        <template x-for="client in filteredClients" :key="client.id">
                            <!-- Alpine x-for requires a single root element if not using template, but template can contain multiple elements? 
                                 Actually, x-for on a template tag allows multiple elements inside. -->
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                                    <td class="p-4">
                                        <button @click="toggleRow(client.id)" class="p-1 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                                            <span class="material-symbols-outlined text-gray-500" x-text="expandedRows[client.id] ? 'expand_less' : 'expand_more'"></span>
                                        </button>
                                    </td>
                                    <td class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
                                        <div x-text="`${client.nombre} ${client.apellido}`"></div>
                                        <div class="text-xs text-gray-500" x-text="client.rut"></div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="material-symbols-outlined text-xs text-gray-400">phone</span>
                                            <span x-text="client.telefono"></span>
                                        </div>
                                        <div class="flex items-center gap-2 mt-1">
                                            <span class="material-symbols-outlined text-xs text-gray-400">mail</span>
                                            <span x-text="client.email"></span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                            <span x-text="client.vehiculos.length"></span> vehículos
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a :href="`/recepcion/editar_cliente?id=${client.documentId}`" class="font-medium text-primary-600 dark:text-primary-400 hover:underline">Editar</a>
                                    </td>
                                </tr>
                                <tr x-show="expandedRows[client.id]" class="bg-gray-50 dark:bg-gray-900/30">
                                    <td colspan="5" class="px-6 py-4">
                                        <div class="ml-8">
                                            <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Vehículos Registrados</h4>
                                            <template x-if="client.vehiculos.length > 0">
                                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                                    <template x-for="vehiculo in client.vehiculos" :key="vehiculo.id">
                                                        <div class="bg-white dark:bg-gray-800 p-3 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm">
                                                            <div class="flex justify-between items-start">
                                                                <div>
                                                                    <p class="font-bold text-gray-900 dark:text-white" x-text="`${vehiculo.marca} ${vehiculo.modelo}`"></p>
                                                                    <p class="text-sm text-gray-500" x-text="vehiculo.patente"></p>
                                                                </div>
                                                                <span class="material-symbols-outlined text-gray-400">directions_car</span>
                                                            </div>
                                                            <div class="mt-2 text-xs text-gray-500">
                                                                Año: <span x-text="vehiculo.anio"></span>
                                                            </div>
                                                        </div>
                                                    </template>
                                                </div>
                                            </template>
                                            <template x-if="client.vehiculos.length === 0">
                                                <p class="text-sm text-gray-500 italic">No hay vehículos registrados para este cliente.</p>
                                            </template>
                                        </div>
                                    </td>
                                </tr>
                        </template>
                        <template x-if="filteredClients.length === 0">
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                                    <span class="material-symbols-outlined text-4xl mb-2 opacity-50">search_off</span>
                                    <p>No se encontraron clientes.</p>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</DashboardLayout>