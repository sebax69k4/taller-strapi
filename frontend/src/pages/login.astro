export const prerender = false;

import '../styles/global.css';

let errorMessage = '';

// Usuarios hardcodeados (temporal - sin JWT)
const USERS = [
  { email: 'recepcionista@taller.com', password: 'Recepcion123', role: 'recepcionista', name: 'Recepcionista' },
  { email: 'encargado@taller.com', password: 'Encargado123', role: 'encargado', name: 'Encargado' },
  { email: 'mecanico@taller.com', password: 'Mecanico123', role: 'mecanico', name: 'Mec√°nico' },
];

if (Astro.request.method === 'POST') {
  try {
    const body = await Astro.request.text();
    const params = new URLSearchParams(body);
    const email = params.get('email') || '';
    const password = params.get('password') || '';

    if (!email || !password) {
      throw new Error('Por favor, ingresa tu correo y contrase√±a.');
    }

    // Buscar usuario
    const user = USERS.find(u => u.email === email && u.password === password);

    if (!user) {
      throw new Error('Credenciales inv√°lidas');
    }

    // Guardar datos b√°sicos en cookies (sin JWT)
    Astro.cookies.set('user_email', user.email, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8 // 8 horas
    });

    Astro.cookies.set('user_role', user.role, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8
    });

    Astro.cookies.set('user_name', user.name, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8
    });

    // Redirigir seg√∫n el rol
    const roleRedirects: Record<string, string> = {
      'recepcionista': '/recepcion/dash_recep',
      'encargado': '/encargado/dash_enc',
      'mecanico': '/mecanico/dash_mec',
    };

    const redirectUrl = roleRedirects[user.role];
    console.log('üîÑ Redirigiendo a:', redirectUrl, 'con rol:', user.role);
    
    if (redirectUrl) {
      return Astro.redirect(redirectUrl);
    } else {
      throw new Error('Rol no reconocido');
    }

  } catch (error: any) {
    errorMessage = error instanceof Error ? error.message : 'Error inesperado';
    Astro.cookies.delete('user_email', { path: '/' });
    Astro.cookies.delete('user_role', { path: '/' });
    Astro.cookies.delete('user_name', { path: '/' });
  }
}
