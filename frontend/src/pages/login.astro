export const prerender = false;

import '../styles/global.css';
import { strapiGet } from '../lib/strapi';
import Button from '../components/ui/Button.astro';
import Input from '../components/ui/Input.astro';
import Card from '../components/ui/Card.astro';

let errorMessage = '';

// Usuarios hardcodeados (temporal - sin JWT)
const USERS = [
  { email: 'recepcionista@taller.com', password: 'Recepcion123', role: 'recepcionista', name: 'Recepcionista' },
  { email: 'encargado@taller.com', password: 'Encargado123', role: 'encargado', name: 'Encargado' },
  { email: 'mecanico@taller.com', password: 'Mecanico123', role: 'mecanico', name: 'Mec√°nico' },
  { email: 'admin@taller.com', password: 'Admin123', role: 'admin', name: 'Administrador' },
];

if (Astro.request.method === 'POST') {
  try {
    const body = await Astro.request.text();
    const params = new URLSearchParams(body);
    const email = params.get('email') || '';
    const password = params.get('password') || '';

    if (!email || !password) {
      throw new Error('Por favor, ingresa tu correo y contrase√±a.');
    }

    // Buscar usuario
    const user = USERS.find(u => u.email === email && u.password === password);

    if (!user) {
      throw new Error('Credenciales inv√°lidas');
    }

    // Si el usuario es un mec√°nico, busca su ID en Strapi
    if (user.role === 'mecanico') {
        try {
            // Primero intentar buscar por email exacto
            let mecResponse = await strapiGet(`/api/mecenicos?filters[email][$eq]=${user.email}`);
            
            // Si no encuentra por email, obtener el primer mec√°nico disponible
            if (!mecResponse.data || mecResponse.data.length === 0) {
                console.log('No se encontr√≥ mec√°nico por email, buscando primer mec√°nico disponible...');
                mecResponse = await strapiGet('/api/mecenicos?pagination[limit]=1');
            }
            
            if (mecResponse.data && mecResponse.data.length > 0) {
                const mecanico = mecResponse.data[0];
                const mecanicoId = mecanico.id;
                const mecanicoName = `${mecanico.nombre || ''} ${mecanico.apellido || ''}`.trim() || 'Mec√°nico';
                
                Astro.cookies.set('mecanico_id', String(mecanicoId), {
                    path: '/',
                    httpOnly: false,
                    secure: false,
                    sameSite: 'lax',
                    maxAge: 60 * 60 * 8 // 8 horas
                });
                
                // Actualizar el nombre del usuario con el nombre real del mec√°nico
                user.name = mecanicoName;
                console.log(`‚úÖ Mec√°nico asignado: ${mecanicoName} (ID: ${mecanicoId})`);
            } else {
                console.warn('‚ö†Ô∏è No hay mec√°nicos registrados en Strapi');
            }
        } catch (strapiError) {
            console.error('Error al buscar el ID del mec√°nico en Strapi:', strapiError);
        }
    }

    // Guardar datos b√°sicos en cookies (sin JWT)
    Astro.cookies.set('user_email', user.email, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8 // 8 horas
    });

    Astro.cookies.set('user_role', user.role, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8
    });

    Astro.cookies.set('user_name', user.name, {
      path: '/',
      httpOnly: false,
      secure: false,
      sameSite: 'lax',
      maxAge: 60 * 60 * 8
    });

    // Redirigir seg√∫n el rol
    const roleRedirects: Record<string, string> = {
      'recepcionista': '/recepcion/dash_recep',
      'encargado': '/encargado/dash_enc',
      'mecanico': '/mecanico/dash_mec',
      'admin': '/admin',
    };

    const redirectUrl = roleRedirects[user.role];
    console.log('üîÑ Redirigiendo a:', redirectUrl, 'con rol:', user.role);
    
    if (redirectUrl) {
      return Astro.redirect(redirectUrl);
    } else {
      throw new Error('Rol no reconocido');
    }

  } catch (error: any) {
    errorMessage = error instanceof Error ? error.message : 'Error inesperado';
    Astro.cookies.delete('user_email', { path: '/' });
    Astro.cookies.delete('user_role', { path: '/' });
    Astro.cookies.delete('user_name', { path: '/' });
    Astro.cookies.delete('mecanico_id', { path: '/' });
  }
}
