---
export const prerender = false;
import DashboardLayout from '../../../../layouts/DashboardLayout.astro';
import { strapiGet, strapiPut } from '../../../../lib/strapi';

const id = Astro.params.id;
let mecanico: any = null;
let zonas: any[] = [];
let error = '';
let successMessage = '';

if (id) {
  try {
    const response = await strapiGet(`/api/mecenicos/${id}?populate=zona`);
    mecanico = response.data;
    
    const zonasRes = await strapiGet('/api/zonas');
    zonas = zonasRes.data || [];
  } catch (e: any) {
    error = e.message;
  }
}

// Handle POST
if (Astro.request.method === 'POST' && mecanico) {
  try {
    const formData = await Astro.request.formData();
    
    const data: any = {
      nombre: formData.get('nombre'),
      apellido: formData.get('apellido'),
      email: formData.get('email'),
      telefono: formData.get('telefono') || null,
      especialidad: formData.get('especialidad') || null,
      disponibilidad: formData.get('disponibilidad') === 'true',
    };
    
    const zonaId = formData.get('zona');
    if (zonaId) {
      data.zona = parseInt(zonaId as string);
    }

    await strapiPut(`/api/mecenicos/${id}`, data);
    return Astro.redirect('/admin/mecanicos?success=updated');
  } catch (e: any) {
    error = e.message;
  }
}
---

<DashboardLayout title={mecanico ? 'Editar Mecánico' : 'Mecánico no encontrado'} role="admin" currentPath="/admin/mecanicos">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="flex items-center mb-6">
      <a href="/admin/mecanicos" class="text-gray-600 hover:text-blue-600 mr-4 transition-colors">
        ← Volver
      </a>
      <h1 class="text-3xl font-bold text-gray-800">Editar Mecánico</h1>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    {!mecanico && !error && (
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
        Mecánico no encontrado
      </div>
    )}

    {mecanico && (
      <form method="POST" class="card p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre">
              Nombre *
            </label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              value={mecanico.nombre}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="apellido">
              Apellido *
            </label>
            <input
              type="text"
              id="apellido"
              name="apellido"
              required
              value={mecanico.apellido || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              value={mecanico.email || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="telefono">
              Teléfono
            </label>
            <input
              type="tel"
              id="telefono"
              name="telefono"
              value={mecanico.telefono || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="especialidad">
              Especialidad
            </label>
            <select
              id="especialidad"
              name="especialidad"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            >
              <option value="">Seleccione...</option>
              <option value="Mecánica General" selected={mecanico.especialidad === 'Mecánica General'}>Mecánica General</option>
              <option value="Electricidad" selected={mecanico.especialidad === 'Electricidad'}>Electricidad</option>
              <option value="Transmisión" selected={mecanico.especialidad === 'Transmisión'}>Transmisión</option>
              <option value="Suspensión" selected={mecanico.especialidad === 'Suspensión'}>Suspensión</option>
              <option value="Motor" selected={mecanico.especialidad === 'Motor'}>Motor</option>
              <option value="Frenos" selected={mecanico.especialidad === 'Frenos'}>Frenos</option>
              <option value="Pintura" selected={mecanico.especialidad === 'Pintura'}>Pintura</option>
              <option value="Chapa" selected={mecanico.especialidad === 'Chapa'}>Chapa</option>
            </select>
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="zona">
              Zona de Trabajo
            </label>
            <select
              id="zona"
              name="zona"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            >
              <option value="">Sin zona asignada</option>
              {zonas.map((zona: any) => (
                <option value={zona.id} selected={mecanico.zona?.id === zona.id}>
                  {zona.nombre}
                </option>
              ))}
            </select>
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2">
            Disponibilidad
          </label>
          <div class="flex gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="radio"
                name="disponibilidad"
                value="true"
                checked={mecanico.disponibilidad !== false}
                class="w-4 h-4 text-blue-600"
              />
              <span class="text-gray-700">Disponible</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="radio"
                name="disponibilidad"
                value="false"
                checked={mecanico.disponibilidad === false}
                class="w-4 h-4 text-blue-600"
              />
              <span class="text-gray-700">No disponible</span>
            </label>
          </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t">
          <button type="submit" class="btn-primary">
            Actualizar Mecánico
          </button>
          <a href="/admin/mecanicos" class="text-gray-600 hover:text-gray-800 font-medium">
            Cancelar
          </a>
        </div>
      </form>
    )}
  </div>
</DashboardLayout>
