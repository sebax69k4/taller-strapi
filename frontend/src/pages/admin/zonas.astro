---
import Layout from '../../layouts/Layout.astro';
import { zonas } from '../../lib/crud';

let zonasList: any[] = [];
let error = '';

try {
  const response = await zonas.getAll(['mecanicos', 'orden_de_trabajos']);
  zonasList = response.data || [];
} catch (e: unknown) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('Error fetching zones:', e);
}
---

<Layout title="Administración de Zonas">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Administración de Zonas</h1>
      <a href="/admin/zonas/crear" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">
        + Nueva Zona
      </a>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {zonasList.map((zona: any) => (
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl font-bold text-gray-900">{zona.nombre}</h2>
            <span class="text-sm text-gray-500">ID: {zona.id}</span>
          </div>
          
          <div class="space-y-3 mb-4">
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Mecánicos:</span>
              <span class="font-semibold">{zona.mecanicos?.length || 0}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Órdenes:</span>
              <span class="font-semibold">{zona.orden_de_trabajos?.length || 0}</span>
            </div>
          </div>

          {zona.mecanicos && zona.mecanicos.length > 0 && (
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2">Mecánicos asignados:</p>
              <ul class="text-sm space-y-1">
                {zona.mecanicos.slice(0, 3).map((mec: any) => (
                  <li class="text-gray-700">• {mec.nombre} {mec.apellido}</li>
                ))}
                {zona.mecanicos.length > 3 && (
                  <li class="text-gray-500">... y {zona.mecanicos.length - 3} más</li>
                )}
              </ul>
            </div>
          )}

          <div class="flex justify-between items-center pt-4 border-t">
            <a 
              href={`/admin/zonas/editar/${zona.id}`}
              class="text-blue-600 hover:text-blue-900 font-medium"
            >
              Editar
            </a>
            <button 
              onclick={`deleteZona(${zona.id})`}
              class="text-red-600 hover:text-red-900 font-medium"
            >
              Eliminar
            </button>
          </div>
        </div>
      ))}
    </div>

    {zonasList.length === 0 && !error && (
      <div class="text-center py-12 text-gray-500">
        No hay zonas registradas
      </div>
    )}
  </div>
</Layout>

<script>
  async function deleteZona(id: number) {
    if (!confirm('¿Estás seguro de eliminar esta zona? Los mecánicos y órdenes asociados quedarán sin zona.')) return;

    try {
      const response = await fetch(`http://localhost:1337/api/zonas/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert('Error al eliminar: ' + error.error.message);
      }
    } catch (e: unknown) {
      alert('Error al eliminar: ' + (e instanceof Error ? e.message : 'Error desconocido'));
    }
  }

  // @ts-ignore
  window.deleteZona = deleteZona;
</script>
