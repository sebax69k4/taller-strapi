---
export const prerender = false;
import DashboardLayout from '../../../../layouts/DashboardLayout.astro';
import { strapiGet, strapiPut } from '../../../../lib/strapi';

const id = Astro.params.id;
let repuesto: any = null;
let error = '';

if (id) {
  try {
    const response = await strapiGet(`/api/repuestos/${id}`);
    repuesto = response.data;
  } catch (e: any) {
    error = e.message;
  }
}

// Handle POST
if (Astro.request.method === 'POST' && repuesto) {
  try {
    const formData = await Astro.request.formData();
    
    const data = {
      nombre: formData.get('nombre'),
      sku: formData.get('sku'),
      descripcion: formData.get('descripcion') || null,
      precio: parseFloat(formData.get('precio') as string) || 0,
      precio_venta: parseFloat(formData.get('precio_venta') as string) || 0,
      stock: parseInt(formData.get('stock') as string) || 0,
      stock_minimo: parseInt(formData.get('stock_minimo') as string) || 5,
      categoria: formData.get('categoria') || null,
      marca: formData.get('marca_repuesto') || null,
      ubicacion: formData.get('ubicacion') || null,
    };

    await strapiPut(`/api/repuestos/${id}`, data);
    return Astro.redirect('/admin/repuestos?success=updated');
  } catch (e: any) {
    error = e.message;
  }
}
---

<DashboardLayout title={repuesto ? 'Editar Repuesto' : 'Repuesto no encontrado'} role="admin" currentPath="/admin/repuestos">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="flex items-center mb-6">
      <a href="/admin/repuestos" class="text-gray-600 hover:text-blue-600 mr-4 transition-colors">
        ← Volver
      </a>
      <h1 class="text-3xl font-bold text-gray-800">Editar Repuesto</h1>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    {!repuesto && !error && (
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
        Repuesto no encontrado
      </div>
    )}

    {repuesto && (
      <form method="POST" class="card p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre">
              Nombre *
            </label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              value={repuesto.nombre}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="sku">
              SKU / Código *
            </label>
            <input
              type="text"
              id="sku"
              name="sku"
              required
              value={repuesto.sku}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all uppercase"
            />
          </div>
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="descripcion">
            Descripción
          </label>
          <textarea
            id="descripcion"
            name="descripcion"
            rows="3"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
          >{repuesto.descripcion || ''}</textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="categoria">
              Categoría
            </label>
            <select
              id="categoria"
              name="categoria"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            >
              <option value="">Seleccione...</option>
              <option value="Motor" selected={repuesto.categoria === 'Motor'}>Motor</option>
              <option value="Frenos" selected={repuesto.categoria === 'Frenos'}>Frenos</option>
              <option value="Suspensión" selected={repuesto.categoria === 'Suspensión'}>Suspensión</option>
              <option value="Transmisión" selected={repuesto.categoria === 'Transmisión'}>Transmisión</option>
              <option value="Electricidad" selected={repuesto.categoria === 'Electricidad'}>Electricidad</option>
              <option value="Carrocería" selected={repuesto.categoria === 'Carrocería'}>Carrocería</option>
              <option value="Filtros" selected={repuesto.categoria === 'Filtros'}>Filtros</option>
              <option value="Aceites" selected={repuesto.categoria === 'Aceites'}>Aceites</option>
              <option value="Neumáticos" selected={repuesto.categoria === 'Neumáticos'}>Neumáticos</option>
              <option value="Otros" selected={repuesto.categoria === 'Otros'}>Otros</option>
            </select>
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="marca_repuesto">
              Marca del Repuesto
            </label>
            <input
              type="text"
              id="marca_repuesto"
              name="marca_repuesto"
              value={repuesto.marca || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="precio">
              Precio Costo *
            </label>
            <div class="relative">
              <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
              <input
                type="number"
                id="precio"
                name="precio"
                required
                min="0"
                step="1"
                value={repuesto.precio}
                class="w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
              />
            </div>
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="precio_venta">
              Precio Venta *
            </label>
            <div class="relative">
              <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
              <input
                type="number"
                id="precio_venta"
                name="precio_venta"
                required
                min="0"
                step="1"
                value={repuesto.precio_venta || repuesto.precio}
                class="w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
              />
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="stock">
              Stock Actual *
            </label>
            <input
              type="number"
              id="stock"
              name="stock"
              required
              min="0"
              value={repuesto.stock}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="stock_minimo">
              Stock Mínimo
            </label>
            <input
              type="number"
              id="stock_minimo"
              name="stock_minimo"
              min="0"
              value={repuesto.stock_minimo || 5}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="ubicacion">
              Ubicación
            </label>
            <input
              type="text"
              id="ubicacion"
              name="ubicacion"
              placeholder="Ej: Estante A-3"
              value={repuesto.ubicacion || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <!-- Stock Status -->
        <div class="mb-6 p-4 rounded-lg {repuesto.stock <= repuesto.stock_minimo ? 'bg-red-50 border border-red-200' : 'bg-green-50 border border-green-200'}">
          <p class="text-sm font-medium {repuesto.stock <= repuesto.stock_minimo ? 'text-red-700' : 'text-green-700'}">
            {repuesto.stock <= repuesto.stock_minimo 
              ? '⚠️ Stock bajo mínimo - Necesita reposición' 
              : '✓ Stock en nivel adecuado'}
          </p>
        </div>

        <div class="flex items-center justify-between pt-4 border-t">
          <button type="submit" class="btn-primary">
            Actualizar Repuesto
          </button>
          <a href="/admin/repuestos" class="text-gray-600 hover:text-gray-800 font-medium">
            Cancelar
          </a>
        </div>
      </form>
    )}
  </div>
</DashboardLayout>
