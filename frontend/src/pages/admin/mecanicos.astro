---
import Layout from '../../layouts/Layout.astro';
import { mecanicos } from '../../lib/crud';

let mecanicosList: any[] = [];
let error = '';

try {
  const response = await mecanicos.getAll(['zona']);
  mecanicosList = response.data || [];
} catch (e: unknown) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('Error fetching mechanics:', e);
}
---

<Layout title="Administración de Mecánicos">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Administración de Mecánicos</h1>
      <a href="/admin/mecanicos/crear" class="btn-primary">
        + Nuevo Mecánico
      </a>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    <div class="card overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Especialidad</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Zona</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Órdenes</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {mecanicosList.map((mecanico: any) => (
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{mecanico.id}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  {mecanico.nombre} {mecanico.apellido}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{mecanico.email || '-'}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{mecanico.especialidad || '-'}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {mecanico.zona ? mecanico.zona.nombre : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class={`badge ${
                  mecanico.estado === 'disponible' ? 'badge-success' :
                  mecanico.estado === 'ocupado' ? 'badge-warning' :
                  mecanico.estado === 'descanso' ? 'badge-info' :
                  'bg-gray-100 text-gray-800'
                }`}>
                  {mecanico.estado || 'Sin estado'}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {mecanico.ordenes_activas || 0}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href={`/admin/mecanicos/editar/${mecanico.id}`} class="text-blue-600 hover:text-blue-900 mr-3">Editar</a>
                <button onclick={`deleteMecanico(${mecanico.id})`} class="text-red-600 hover:text-red-900">Eliminar</button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>

      {mecanicosList.length === 0 && !error && (
        <div class="text-center py-12 text-gray-500">No hay mecánicos registrados</div>
      )}
    </div>
  </div>
</Layout>

<script>
  async function deleteMecanico(id: number) {
    if (!confirm('¿Estás seguro de eliminar este mecánico?')) return;

    try {
      const response = await fetch(`http://localhost:1337/api/mecenico/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert('Error al eliminar: ' + error.error.message);
      }
    } catch (e: unknown) {
      alert('Error al eliminar: ' + (e instanceof Error ? e.message : 'Error desconocido'));
    }
  }

  // @ts-ignore
  window.deleteMecanico = deleteMecanico;
</script>
