---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Panel de Administración">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Panel de Administración</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Clientes -->
      <a href="/admin/clientes" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Clientes</h2>
          <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar clientes del taller</p>
      </a>

      <!-- Vehículos -->
      <a href="/admin/vehiculos" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Vehículos</h2>
          <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar vehículos registrados</p>
      </a>

      <!-- Mecánicos -->
      <a href="/admin/mecanicos" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Mecánicos</h2>
          <svg class="w-12 h-12 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar equipo de mecánicos</p>
      </a>

      <!-- Repuestos -->
      <a href="/admin/repuestos" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Repuestos</h2>
          <svg class="w-12 h-12 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <p class="text-gray-600">Control de inventario y stock</p>
      </a>

      <!-- Zonas -->
      <a href="/admin/zonas" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Zonas</h2>
          <svg class="w-12 h-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar zonas de trabajo</p>
      </a>

      <!-- Órdenes de Trabajo -->
      <a href="/admin/ordenes" class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Órdenes</h2>
          <svg class="w-12 h-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
          </svg>
        </div>
        <p class="text-gray-600">Órdenes de trabajo del taller</p>
      </a>
    </div>

    <!-- Acceso rápido -->
    <div class="mt-12 bg-gray-50 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-4">Acceso Rápido</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/admin/ordenes/crear" class="bg-blue-500 hover:bg-blue-600 text-white text-center py-3 px-4 rounded-lg font-medium">
          + Nueva Orden
        </a>
        <a href="/admin/clientes/crear" class="bg-green-500 hover:bg-green-600 text-white text-center py-3 px-4 rounded-lg font-medium">
          + Nuevo Cliente
        </a>
        <a href="/admin/vehiculos/crear" class="bg-purple-500 hover:bg-purple-600 text-white text-center py-3 px-4 rounded-lg font-medium">
          + Nuevo Vehículo
        </a>
        <a href="/admin/repuestos/crear" class="bg-orange-500 hover:bg-orange-600 text-white text-center py-3 px-4 rounded-lg font-medium">
          + Nuevo Repuesto
        </a>
      </div>
    </div>
  </div>
</Layout>
