---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Panel de Administración" role="admin" currentPath="/admin">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Panel de Administración</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Clientes -->
      <a href="/admin/clientes" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Clientes</h2>
          <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar clientes del taller</p>
      </a>

      <!-- Vehículos -->
      <a href="/admin/vehiculos" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Vehículos</h2>
          <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar vehículos registrados</p>
      </a>

      <!-- Mecánicos -->
      <a href="/admin/mecanicos" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Mecánicos</h2>
          <svg class="w-12 h-12 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar equipo de mecánicos</p>
      </a>

      <!-- Repuestos -->
      <a href="/admin/repuestos" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Repuestos</h2>
          <svg class="w-12 h-12 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
        <p class="text-gray-600">Control de inventario y stock</p>
      </a>

      <!-- Zonas -->
      <a href="/admin/zonas" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Zonas</h2>
          <svg class="w-12 h-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar zonas de trabajo</p>
      </a>

      <!-- Órdenes de Trabajo -->
      <a href="/admin/ordenes" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Órdenes</h2>
          <svg class="w-12 h-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
          </svg>
        </div>
        <p class="text-gray-600">Órdenes de trabajo del taller</p>
      </a>

      <!-- Servicios -->
      <a href="/admin/servicios" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Servicios</h2>
          <svg class="w-12 h-12 text-teal-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Tipos de servicios y trabajos</p>
      </a>

      <!-- Usuarios -->
      <a href="/admin/usuarios" class="card p-6 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-bold text-gray-800">Usuarios</h2>
          <svg class="w-12 h-12 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <p class="text-gray-600">Gestionar usuarios del sistema</p>
      </a>
    </div>

    <!-- Acceso rápido -->
    <div class="mt-12 bg-gray-50 rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-4">Acceso Rápido</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <a href="/admin/ordenes/crear" class="btn-primary text-center">
          + Nueva Orden
        </a>
        <a href="/admin/clientes/crear" class="btn-primary text-center bg-green-600 hover:bg-green-700">
          + Nuevo Cliente
        </a>
        <a href="/admin/vehiculos/crear" class="btn-primary text-center bg-purple-600 hover:bg-purple-700">
          + Nuevo Vehículo
        </a>
        <a href="/admin/repuestos/crear" class="btn-primary text-center bg-orange-600 hover:bg-orange-700">
          + Nuevo Repuesto
        </a>
        <a href="/admin/servicios" class="btn-primary text-center bg-teal-600 hover:bg-teal-700">
          + Nuevo Servicio
        </a>
        <a href="/admin/usuarios" class="btn-primary text-center bg-indigo-600 hover:bg-indigo-700">
          + Nuevo Usuario
        </a>
      </div>
    </div>
  </div>
</DashboardLayout>
