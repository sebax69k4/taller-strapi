---
import Layout from '../../layouts/Layout.astro';
import { ordenDeTrabajo } from '../../lib/crud';

let ordenesList: any[] = [];
let error = '';

try {
  const response = await ordenDeTrabajo.getAll(['vehiculo', 'mecanico', 'zona', 'repuestos']);
  ordenesList = response.data || [];
} catch (e: unknown) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('Error fetching orders:', e);
}
---

<Layout title="Administración de Órdenes de Trabajo">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Administración de Órdenes de Trabajo</h1>
      <a href="/admin/ordenes/crear" class="btn-primary">
        + Nueva Orden
      </a>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    <!-- Filtros -->
    <div class="card p-4 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
          <select id="filterEstado" class="w-full border rounded px-3 py-2">
            <option value="">Todos</option>
            <option value="ingresado">Ingresado</option>
            <option value="en_diagnostico">En Diagnóstico</option>
            <option value="en_reparacion">En Reparación</option>
            <option value="finalizado">Finalizado</option>
            <option value="entregado">Entregado</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Búsqueda</label>
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Buscar por patente..."
            class="w-full border rounded px-3 py-2"
          />
        </div>
      </div>
    </div>

    <div class="card overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Ingreso</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehículo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mecánico</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Zona</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Est.</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" id="ordenesTableBody">
          {ordenesList.map((orden: any) => (
            <tr class="hover:bg-gray-50 orden-row" data-estado={orden.estado} data-patente={orden.vehiculo?.patente || ''}>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{orden.id}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                {new Date(orden.fecha_ingreso).toLocaleDateString('es-CL')}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  {orden.vehiculo ? orden.vehiculo.patente : '-'}
                </div>
                <div class="text-sm text-gray-500">
                  {orden.vehiculo ? `${orden.vehiculo.marca} ${orden.vehiculo.modelo}` : ''}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                {orden.mecanico ? `${orden.mecanico.nombre} ${orden.mecanico.apellido}` : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {orden.zona ? orden.zona.nombre : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class={`badge ${
                  orden.estado === 'ingresado' ? 'bg-gray-100 text-gray-800' :
                  orden.estado === 'en_diagnostico' ? 'badge-info' :
                  orden.estado === 'en_reparacion' ? 'badge-warning' :
                  orden.estado === 'finalizado' ? 'badge-success' :
                  orden.estado === 'entregado' ? 'bg-purple-100 text-purple-800' :
                  'bg-gray-100 text-gray-800'
                }`}>
                  {orden.estado?.replace('_', ' ') || 'Sin estado'}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {orden.fecha_estimada ? new Date(orden.fecha_estimada).toLocaleDateString('es-CL') : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href={`/admin/ordenes/ver/${orden.id}`} class="text-green-600 hover:text-green-900 mr-3">Ver</a>
                <a href={`/admin/ordenes/editar/${orden.id}`} class="text-blue-600 hover:text-blue-900 mr-3">Editar</a>
                <button onclick={`deleteOrden(${orden.id})`} class="text-red-600 hover:text-red-900">Eliminar</button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>

      {ordenesList.length === 0 && !error && (
        <div class="text-center py-12 text-gray-500">No hay órdenes de trabajo registradas</div>
      )}
    </div>
  </div>
</Layout>

<script>
  // Filtros
  const filterEstado = document.getElementById('filterEstado') as HTMLSelectElement;
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const rows = document.querySelectorAll('.orden-row');

  function applyFilters() {
    const estadoValue = filterEstado?.value.toLowerCase();
    const searchValue = searchInput?.value.toLowerCase();

    rows.forEach(row => {
      const estado = (row as HTMLElement).dataset.estado?.toLowerCase() || '';
      const patente = (row as HTMLElement).dataset.patente?.toLowerCase() || '';
      
      const matchEstado = !estadoValue || estado === estadoValue;
      const matchSearch = !searchValue || patente.includes(searchValue);

      if (matchEstado && matchSearch) {
        (row as HTMLElement).style.display = '';
      } else {
        (row as HTMLElement).style.display = 'none';
      }
    });
  }

  filterEstado?.addEventListener('change', applyFilters);
  searchInput?.addEventListener('input', applyFilters);

  async function deleteOrden(id: number) {
    if (!confirm('¿Estás seguro de eliminar esta orden de trabajo?')) return;

    try {
      const response = await fetch(`http://localhost:1337/api/orden-de-trabajos/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert('Error al eliminar: ' + error.error.message);
      }
    } catch (e: unknown) {
      alert('Error al eliminar: ' + (e instanceof Error ? e.message : 'Error desconocido'));
    }
  }

  // @ts-ignore
  window.deleteOrden = deleteOrden;
</script>
