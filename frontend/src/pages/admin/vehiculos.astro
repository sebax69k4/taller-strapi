---
import Layout from '../../layouts/Layout.astro';
import { vehiculos, clientes, mecanicos } from '../../lib/crud';

let vehiculosList: any[] = [];
let error = '';

try {
  const response = await vehiculos.getAll(['cliente', 'mecanico']);
  vehiculosList = response.data || [];
} catch (e: unknown) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('Error fetching vehicles:', e);
}
---

<Layout title="Administración de Vehículos">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Administración de Vehículos</h1>
      <a href="/admin/vehiculos/crear" class="btn-primary">
        + Nuevo Vehículo
      </a>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    <div class="card overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Marca/Modelo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Año</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mecánico</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {vehiculosList.map((vehiculo: any) => (
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{vehiculo.id}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">{vehiculo.patente}</div>
                <div class="text-sm text-gray-500">{vehiculo.numero_de_chasis || '-'}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                {vehiculo.marca} {vehiculo.modelo}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{vehiculo.ano || '-'}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {vehiculo.cliente ? `${vehiculo.cliente.nombre} ${vehiculo.cliente.apellido}` : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                {vehiculo.mecanico ? `${vehiculo.mecanico.nombre} ${vehiculo.mecanico.apellido}` : '-'}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href={`/admin/vehiculos/editar/${vehiculo.id}`} class="text-blue-600 hover:text-blue-900 mr-3">Editar</a>
                <button onclick={`deleteVehiculo(${vehiculo.id})`} class="text-red-600 hover:text-red-900">Eliminar</button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>

      {vehiculosList.length === 0 && !error && (
        <div class="text-center py-12 text-gray-500">No hay vehículos registrados</div>
      )}
    </div>
  </div>
</Layout>

<script>
  async function deleteVehiculo(id: number) {
    if (!confirm('¿Estás seguro de eliminar este vehículo?')) return;

    try {
      const response = await fetch(`http://localhost:1337/api/vehiculos/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert('Error al eliminar: ' + error.error.message);
      }
    } catch (e: unknown) {
      alert('Error al eliminar: ' + (e instanceof Error ? e.message : 'Error desconocido'));
    }
  }

  // @ts-ignore
  window.deleteVehiculo = deleteVehiculo;
</script>
