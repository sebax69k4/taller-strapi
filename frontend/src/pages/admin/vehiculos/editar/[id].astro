---
export const prerender = false;
import DashboardLayout from '../../../../layouts/DashboardLayout.astro';
import { strapiGet, strapiPut } from '../../../../lib/strapi';

const id = Astro.params.id;
let vehiculo: any = null;
let clientes: any[] = [];
let error = '';

if (id) {
  try {
    const response = await strapiGet(`/api/vehiculos/${id}?populate=cliente`);
    vehiculo = response.data;
    
    const clientesRes = await strapiGet('/api/clientes?sort[0]=nombre:asc');
    clientes = clientesRes.data || [];
  } catch (e: any) {
    error = e.message;
  }
}

// Handle POST
if (Astro.request.method === 'POST' && vehiculo) {
  try {
    const formData = await Astro.request.formData();
    
    const data: any = {
      patente: formData.get('patente'),
      marca: formData.get('marca'),
      modelo: formData.get('modelo'),
      ano: parseInt(formData.get('ano') as string) || null,
      color: formData.get('color') || null,
      numero_de_chasis: formData.get('numero_de_chasis') || null,
      kilometraje: parseInt(formData.get('kilometraje') as string) || null,
    };
    
    const clienteId = formData.get('cliente');
    if (clienteId) {
      data.cliente = parseInt(clienteId as string);
    }

    await strapiPut(`/api/vehiculos/${id}`, data);
    return Astro.redirect('/admin/vehiculos?success=updated');
  } catch (e: any) {
    error = e.message;
  }
}

const currentYear = new Date().getFullYear();
const years = Array.from({ length: 50 }, (_, i) => currentYear - i);
---

<DashboardLayout title={vehiculo ? 'Editar Vehículo' : 'Vehículo no encontrado'} role="admin" currentPath="/admin/vehiculos">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="flex items-center mb-6">
      <a href="/admin/vehiculos" class="text-gray-600 hover:text-blue-600 mr-4 transition-colors">
        ← Volver
      </a>
      <h1 class="text-3xl font-bold text-gray-800">Editar Vehículo</h1>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    {!vehiculo && !error && (
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
        Vehículo no encontrado
      </div>
    )}

    {vehiculo && (
      <form method="POST" class="card p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="patente">
              Patente *
            </label>
            <input
              type="text"
              id="patente"
              name="patente"
              required
              value={vehiculo.patente}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all uppercase"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="cliente">
              Propietario *
            </label>
            <select
              id="cliente"
              name="cliente"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            >
              <option value="">Seleccione...</option>
              {clientes.map((cliente: any) => (
                <option value={cliente.id} selected={vehiculo.cliente?.id === cliente.id}>
                  {cliente.nombre} {cliente.apellido} - {cliente.rut}
                </option>
              ))}
            </select>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="marca">
              Marca *
            </label>
            <input
              type="text"
              id="marca"
              name="marca"
              required
              value={vehiculo.marca}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="modelo">
              Modelo *
            </label>
            <input
              type="text"
              id="modelo"
              name="modelo"
              required
              value={vehiculo.modelo}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="ano">
              Año
            </label>
            <select
              id="ano"
              name="ano"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            >
              <option value="">Seleccione...</option>
              {years.map(year => (
                <option value={year} selected={vehiculo.ano === year}>{year}</option>
              ))}
            </select>
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="color">
              Color
            </label>
            <input
              type="text"
              id="color"
              name="color"
              value={vehiculo.color || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="kilometraje">
              Kilometraje
            </label>
            <input
              type="number"
              id="kilometraje"
              name="kilometraje"
              value={vehiculo.kilometraje || ''}
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
        </div>

        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="numero_de_chasis">
            Número de Chasis (VIN)
          </label>
          <input
            type="text"
            id="numero_de_chasis"
            name="numero_de_chasis"
            value={vehiculo.numero_de_chasis || ''}
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all uppercase"
          />
        </div>

        <div class="flex items-center justify-between pt-4 border-t">
          <button type="submit" class="btn-primary">
            Actualizar Vehículo
          </button>
          <a href="/admin/vehiculos" class="text-gray-600 hover:text-gray-800 font-medium">
            Cancelar
          </a>
        </div>
      </form>
    )}
  </div>
</DashboardLayout>
