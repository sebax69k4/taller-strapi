---
import Layout from '../../layouts/Layout.astro';
import { repuestos } from '../../lib/crud';

let repuestosList: any[] = [];
let error = '';

try {
  const response = await repuestos.getAll([]);
  repuestosList = response.data || [];
} catch (e: unknown) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('Error fetching parts:', e);
}
---

<Layout title="Administración de Repuestos">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Administración de Repuestos</h1>
      <a href="/admin/repuestos/crear" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">
        + Nuevo Repuesto
      </a>
    </div>

    {error && (
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        Error: {error}
      </div>
    )}

    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Mín.</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Proveedor</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {repuestosList.map((repuesto) => (
            <tr class={`hover:bg-gray-50 ${repuesto.stock <= repuesto.stock_minimo ? 'bg-red-50' : ''}`}>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{repuesto.id}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">{repuesto.nombre}</div>
                <div class="text-sm text-gray-500">{repuesto.descripcion?.substring(0, 50)}...</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{repuesto.sku}</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                  repuesto.stock <= repuesto.stock_minimo ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800'
                }`}>
                  {repuesto.stock}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{repuesto.stock_minimo}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${repuesto.precio}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{repuesto.proveedor || '-'}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href={`/admin/repuestos/editar/${repuesto.id}`} class="text-blue-600 hover:text-blue-900 mr-3">Editar</a>
                <button onclick={`deleteRepuesto(${repuesto.id})`} class="text-red-600 hover:text-red-900">Eliminar</button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>

      {repuestosList.length === 0 && !error && (
        <div class="text-center py-12 text-gray-500">No hay repuestos registrados</div>
      )}
    </div>
  </div>
</Layout>

<script>
  async function deleteRepuesto(id: number) {
    if (!confirm('¿Estás seguro de eliminar este repuesto?')) return;

    try {
      const response = await fetch(`http://localhost:1337/api/repuestos/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert('Error al eliminar: ' + error.error.message);
      }
    } catch (e: unknown) {
      alert('Error al eliminar: ' + (e instanceof Error ? e.message : 'Error desconocido'));
    }
  }

  // @ts-ignore
  window.deleteRepuesto = deleteRepuesto;
</script>
