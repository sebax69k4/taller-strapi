---
export const prerender = false;
import { strapiGet, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

// --- TYPE DEFINITIONS ---
interface Repuesto {
  id: number;
  nombre: string;
  stock: number;
  sku?: string;
}

interface RepuestoUtilizado {
  id: number;
  quantity: number;
  nombre?: string;
  sku?: string;
  stock_anterior?: number;
  stock_actual?: number;
  status?: 'Deducido' | 'Error' | 'Stock Bajo';
}

interface Bitacora {
  id: number;
  repuestos_utilizados: RepuestoUtilizado[];
  orden_de_trabajo: {
    data: {
      id: number;
      attributes: {
        vehiculo: {
          data: {
            attributes: {
              marca: string;
              modelo: string;
              patente: string;
            }
          }
        }
      }
    }
  };
  stock_deducido: boolean;
  updatedAt: string;
}

// --- STATE ---
let bitacora: Bitacora | null = null;
let summary: RepuestoUtilizado[] = [];
let error = '';
let success = '';

const url = new URL(Astro.request.url);
const bitacoraId = url.searchParams.get('bitacoraId');

if (!bitacoraId) {
  error = "No se ha especificado un ID de bitácora.";
} else {
  try {
    // --- FORM SUBMISSION (POST) ---
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const partsToDeductJSON = formData.get('partsToDeduct') as string;
      const partsToDeduct: RepuestoUtilizado[] = JSON.parse(partsToDeductJSON);
      
      const updatePromises = partsToDeduct.map(async (part) => {
        try {
          // Get current stock again to be safe from race conditions
          const partData = await strapiGet(`/api/repuestos/${part.id}`);
          const currentStock = partData.data[0]?.stock || 0;

          const newStock = currentStock - part.quantity;
          if (newStock < 0) throw new Error(`Stock insuficiente para ${part.nombre}`);

          // Update stock
          await strapiPut(`/api/repuestos/${part.id}`, { stock: newStock });
          
          return { ...part, stock_anterior: currentStock, stock_actual: newStock, status: newStock < 5 ? 'Stock Bajo' : 'Deducido' };
        } catch (e: any) {
          console.error(`Error processing part ${part.id}:`, e);
          return { ...part, status: 'Error' };
        }
      });

      summary = await Promise.all(updatePromises) as RepuestoUtilizado[];

      // Mark bitacora as stock deducted
      await strapiPut(`/api/bitacoras/${bitacoraId}`, { stock_deducido: true });
      
      success = "El stock ha sido actualizado correctamente.";
      
      // Fetch the final bitacora state to render the page
      const bitacoraData = await strapiGet(`/api/bitacoras/${bitacoraId}?populate[orden_de_trabajo][populate][0]=vehiculo`);
      bitacora = bitacoraData.data[0] || null;


    } else { // --- INITIAL DATA FETCHING (GET) ---
      const bitacoraData = await strapiGet(`/api/bitacoras/${bitacoraId}?populate[orden_de_trabajo][populate][0]=vehiculo`);
      bitacora = bitacoraData.data[0] || null;

      if (bitacora && bitacora.repuestos_utilizados) {
        const partDetailsPromises = bitacora.repuestos_utilizados.map(async (part) => {
          const partData = await strapiGet(`/api/repuestos/${part.id}`);
          const partInfo = partData.data[0];
          return {
            ...part,
            nombre: partInfo.nombre,
            sku: partInfo.sku,
            stock_anterior: partInfo.stock,
            stock_actual: partInfo.stock - part.quantity,
          };
        });
        summary = await Promise.all(partDetailsPromises);
      }
    }
  } catch (e: any) {
    console.error(e);
    error = e.message;
  }
}

const order = bitacora?.orden_de_trabajo?.data;
const vehicle = order?.attributes.vehiculo?.data?.attributes;
---

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Descontar Stock - Taller Veloz</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: { "primary": "#135bec", "background-light": "#f6f6f8", "background-dark": "#101622" },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display">
<div class="relative flex min-h-screen w-full">
    <!-- SideNavBar -->
    <aside class="flex w-64 flex-col bg-white dark:bg-gray-900 p-4 border-r border-gray-200 dark:border-gray-800">
        <div class="flex flex-col gap-4">
            <div class="flex items-center gap-3">
                <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" style='background-image: url("https://cdn.usegalileo.ai/stability/a4b1f6ac-1498-420f-bb19-91ee46e9ce70.png");'></div>
                <div class="flex flex-col">
                    <h1 class="text-gray-900 dark:text-white text-base font-medium leading-normal">Taller Veloz</h1>
                    <p class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal">Panel Mecánico</p>
                </div>
            </div>
            <nav class="flex flex-col gap-2 mt-4">
                 <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="/mecanico/dash_mec">
                    <span class="material-symbols-outlined">dashboard</span>
                    <p class="text-sm font-medium leading-normal">Mis Órdenes</p>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href={`/mecanico/detalle_orden_trabajo?id=${order?.id}`}>
                    <span class="material-symbols-outlined">build</span>
                    <p class="text-sm font-medium leading-normal">Detalle Orden</p>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href={`/mecanico/bitacora_repuestos?id=${order?.id}`}>
                    <span class="material-symbols-outlined">inventory</span>
                    <p class="text-sm font-medium leading-normal">Bitácora</p>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/10 text-primary" href="#">
                    <span class="material-symbols-outlined text-primary">check_circle</span>
                    <p class="text-sm font-medium leading-normal">Descontar Stock</p>
                </a>
            </nav>
        </div>
        <div class="mt-auto flex flex-col gap-2">
            <a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="/login">
                <span class="material-symbols-outlined">logout</span>
                <p class="text-sm font-medium leading-normal">Cerrar Sesión</p>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 lg:p-8">
        <div class="max-w-5xl mx-auto">
            {error && <p class="text-red-500 bg-red-100 p-4 rounded-lg mb-4">{error}</p>}
            {success && <p class="text-green-500 bg-green-100 p-4 rounded-lg mb-4">{success}</p>}

            {bitacora ? (
                <>
                    <!-- PageHeading -->
                    <div class="flex flex-wrap justify-between items-start gap-4 p-6 sm:p-8">
                        <div class="flex min-w-72 flex-col gap-2">
                            <p class="text-gray-900 dark:text-white text-3xl sm:text-4xl font-black leading-tight tracking-[-0.033em]">
                                {bitacora.stock_deducido ? 'Actualización de Stock Confirmada' : 'Confirmar Descuento de Stock'}
                            </p>
                            <p class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal">
                                {bitacora.stock_deducido ? 'Los siguientes repuestos han sido deducidos del inventario.' : 'Revisa los repuestos y confirma para descontar del inventario.'}
                            </p>
                        </div>
                    </div>

                    <!-- DescriptionList -->
                    <div class="px-6 sm:px-8 pb-4">
                        <div class="grid grid-cols-1 sm:grid-cols-2">
                            <div class="flex flex-col gap-1 border-t border-solid border-gray-200 dark:border-gray-700 py-4 pr-2">
                                <p class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal">Orden de Trabajo</p>
                                <p class="text-gray-900 dark:text-white text-sm font-medium leading-normal">#{order?.id}</p>
                            </div>
                            <div class="flex flex-col gap-1 border-t border-solid border-gray-200 dark:border-gray-700 py-4 sm:pl-2">
                                <p class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal">Vehículo</p>
                                <p class="text-gray-900 dark:text-white text-sm font-medium leading-normal">{vehicle ? `${vehicle.marca} ${vehicle.modelo} (${vehicle.patente})` : 'N/A'}</p>
                            </div>
                            <div class="flex flex-col gap-1 border-t border-solid border-gray-200 dark:border-gray-700 py-4 pr-2 col-span-1 sm:col-span-2 sm:pr-[50%]">
                                <p class="text-gray-500 dark:text-gray-400 text-sm font-normal leading-normal">Fecha de Actualización</p>
                                <p class="text-gray-900 dark:text-white text-sm font-medium leading-normal">{new Date(bitacora.updatedAt).toLocaleDateString()}</p>
                            </div>
                        </div>
                    </div>

                    <!-- SectionHeader -->
                    <h2 class="text-gray-900 dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em] px-6 sm:px-8 pb-3 pt-5">Resumen de Repuestos Utilizados</h2>
                    
                    <!-- Table -->
                    <div class="px-6 sm:px-8 py-3">
                        <div class="flex overflow-hidden rounded-lg border border-gray-200 dark:border-gray-700 bg-transparent">
                            <table class="w-full">
                                <thead class="bg-gray-50 dark:bg-white/5">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-gray-600 dark:text-gray-300 w-[40%] text-sm font-medium">Repuesto</th>
                                        <th class="px-4 py-3 text-left text-gray-600 dark:text-gray-300 w-[15%] text-sm font-medium">Utilizada</th>
                                        <th class="px-4 py-3 text-left text-gray-600 dark:text-gray-300 w-[15%] text-sm font-medium">Anterior</th>
                                        <th class="px-4 py-3 text-left text-gray-600 dark:text-gray-300 w-[15%] text-sm font-medium">Actual</th>
                                        <th class="px-4 py-3 text-left text-gray-600 dark:text-gray-300 w-[15%] text-sm font-medium">Estado</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                    {summary.map(part => (
                                        <tr class="dark:hover:bg-white/5">
                                            <td class="h-[72px] px-4 py-2 text-gray-900 dark:text-white">{part.nombre} ({part.sku || 'N/A'})</td>
                                            <td class="h-[72px] px-4 py-2 text-gray-500 dark:text-gray-400">{part.quantity}</td>
                                            <td class="h-[72px] px-4 py-2 text-gray-500 dark:text-gray-400">{part.stock_anterior}</td>
                                            <td class="h-[72px] px-4 py-2 text-gray-500 dark:text-gray-400">{part.stock_actual}</td>
                                            <td class="h-[72px] px-4 py-2 text-sm font-medium">
                                                {part.status === 'Deducido' && (
                                                    <div class="flex items-center gap-2 text-green-600 dark:text-green-400">
                                                        <span class="material-symbols-outlined text-base">check_circle</span>
                                                        <span>Deducido</span>
                                                    </div>
                                                )}
                                                {part.status === 'Stock Bajo' && (
                                                    <div class="flex items-center gap-2 text-orange-500 dark:text-orange-400">
                                                        <span class="material-symbols-outlined text-base">warning</span>
                                                        <span>Stock Bajo</span>
                                                    </div>
                                                )}
                                                {part.status === 'Error' && (
                                                    <div class="flex items-center gap-2 text-red-600 dark:text-red-400">
                                                        <span class="material-symbols-outlined text-base">error</span>
                                                        <span>Error</span>
                                                    </div>
                                                )}
                                                {!part.status && (
                                                    <div class="flex items-center gap-2 text-gray-500 dark:text-gray-400">
                                                        <span class="material-symbols-outlined text-base">pending</span>
                                                        <span>Pendiente</span>
                                                    </div>
                                                )}
                                            </td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- ButtonGroup -->
                    <div class="flex justify-end mt-4 px-6 sm:px-8 py-6 border-t border-gray-200 dark:border-gray-700">
                        {bitacora.stock_deducido ? (
                            <a href="/mecanico/dash_mec" class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-5 bg-primary text-white text-base font-bold hover:bg-primary/90">
                                <span class="truncate">Aceptar</span>
                            </a>
                        ) : (
                            <form method="POST">
                                <input type="hidden" name="partsToDeduct" value={JSON.stringify(summary)} />
                                <button type="submit" class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-5 bg-primary text-white text-base font-bold hover:bg-primary/90">
                                    <span class="truncate">Confirmar y Descontar Stock</span>
                                </button>
                            </form>
                        )}
                    </div>
                </>
            ) : (
                <div class="text-center py-20">
                    <p class="text-lg text-gray-500">{error || "Cargando resumen..."}</p>
                </div>
            )}
        </div>
    </main>
</div>
</body>
</html>