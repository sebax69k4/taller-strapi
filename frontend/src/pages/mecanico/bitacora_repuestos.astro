export const prerender = false;
import { fetchStrapi, strapiGet, strapiPost, strapiPut } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

// --- TYPE DEFINITIONS ---
interface Cliente {
  nombre: string;
  apellido: string;
}

interface Vehiculo {
  marca: string;
  modelo: string;
  anio: number;
  patente: string;
  cliente?: { data?: { attributes: Cliente } };
}

interface Repuesto {
  id: number;
  nombre: string;
  stock: number;
  precio: number;
}

interface OrdenDeTrabajo {
  id: number;
  descripcion_problema: string;
  vehiculo?: { data?: { attributes: Vehiculo } };
  repuestos?: { data: { id: number; attributes: Repuesto }[] };
}

// --- DATA FETCHING & STATE ---
let order: OrdenDeTrabajo | null = null;
let allParts: Repuesto[] = [];
let error = '';
let success = '';

const url = new URL(Astro.request.url);
const orderId = url.searchParams.get('id');

if (!orderId) {
  error = "No se ha especificado un ID de orden.";
} else {
  try {
    // --- FORM SUBMISSION (POST) ---
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const description = formData.get('description') as string;
      const timeSpent = formData.get('time_spent');
      const usedPartsData = formData.get('used_parts') as string;
      const usedParts = JSON.parse(usedPartsData); // [{ id: number, quantity: number }]

      const meRes = await fetchStrapi('/api/users/me?populate=mecanico');
      const meData = await meRes.json();
      const mechanicId = meData.mecanico?.id;

      if (!mechanicId) throw new Error("No se pudo identificar al mecánico.");

      // 1. Create Bitacora Entry
      const bitacoraRes = await fetch('http://localhost:1337/api/bitacoras', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          data: {
            descripcion: description,
            tiempo_invertido: timeSpent ? parseFloat(timeSpent.toString()) : 0,
            orden_de_trabajo: orderId,
            mecanico: mechanicId,
            repuestos_utilizados: usedParts, // Store used parts snapshot
          }
        })
      });

      if (!bitacoraRes.ok) throw new Error('Error al guardar la entrada en la bitácora.');

      // 2. Update Order with new parts
      const orderRes = await fetch(`http://localhost:1337/api/orden-de-trabajos/${orderId}?populate=repuestos`, { headers: {} });
      const currentOrderData = await orderRes.json();
      const existingPartIds = currentOrderData.data.attributes.repuestos.data.map((p: any) => p.id);
      const newPartIds = usedParts.map((p: { id: number }) => p.id);
      const allPartIds = [...new Set([...existingPartIds, ...newPartIds])];

      const updateOrderRes = await fetch(`http://localhost:1337/api/orden-de-trabajos/${orderId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ data: { repuestos: allPartIds } })
      });

      if (!updateOrderRes.ok) throw new Error('Error al actualizar los repuestos de la orden.');

      success = 'Entrada guardada y orden actualizada correctamente.';
      return Astro.redirect(`/mecanico/detalle_orden_trabajo?id=${orderId}&success=${encodeURIComponent(success)}`);
    }

    // --- INITIAL DATA FETCHING (GET) ---
    const [orderRes, partsRes] = await Promise.all([
      fetch(`http://localhost:1337/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][0]=cliente`, { headers: {} }),
      fetchStrapi('/api/repuestos')
    ]);

    if (!orderRes.ok) throw new Error('No se pudo cargar la orden de trabajo.');
    if (!partsRes.ok) throw new Error('No se pudieron cargar los repuestos.');

    const orderData = await orderRes.json();
    order = { id: orderData.data.id, ...orderData.data.attributes };

    const partsData = await partsRes.json();
    allParts = partsData.data.map((part: any) => ({ id: part.id, ...part.attributes }));

  } catch (e: any) {
    console.error(e);
    error = e.message;
  }
}

const vehicle = order?.vehiculo?.data?.attributes;
const client = vehicle?.cliente?.data?.attributes;
