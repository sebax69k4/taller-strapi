                <span class="material-symbols-outlined">logout</span>
                <p class="text-sm font-medium leading-normal">Cerrar Sesión</p>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 lg:p-8">
        {error && <p class="text-red-500 bg-red-100 p-4 rounded-lg mb-4">{error}</p>}
        {success && <p class="text-green-500 bg-green-100 p-4 rounded-lg mb-4">{success}</p>}

        {order ? (
            <div x-data={`partsManager(${JSON.stringify(allParts)})`}>
                <form method="POST">
                    <!-- PageHeading -->
                    <div class="flex flex-wrap justify-between gap-3 pt-4 mb-6">
                        <div class="flex min-w-72 flex-col gap-2">
                            <p class="text-[#0d121b] dark:text-gray-100 text-3xl sm:text-4xl font-black leading-tight tracking-[-0.033em]">Registrar Avance en Orden #{order.id}</p>
                            <p class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal">Añade una nueva entrada a la bitácora de servicio.</p>
                        </div>
                    </div>

                    <!-- Card -->
                    <div class="p-6 bg-white dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700 mb-8">
                        <div class="flex flex-col sm:flex-row items-start sm:items-stretch justify-between gap-6">
                            <div class="flex flex-col gap-3 flex-[2_2_0px]">
                                <p class="text-[#0d121b] dark:text-white text-xl font-bold leading-tight">{vehicle ? `${vehicle.marca} ${vehicle.modelo} ${vehicle.anio}` : 'Vehículo no especificado'} - {vehicle?.patente || 'S/P'}</p>
                                <div class="space-y-1.5">
                                    <p class="text-gray-600 dark:text-gray-300 text-sm font-normal leading-normal"><span class="font-medium text-gray-800 dark:text-gray-200">Cliente:</span> {client ? `${client.nombre} ${client.apellido}` : 'Cliente no especificado'}</p>
                                    <p class="text-gray-600 dark:text-gray-300 text-sm font-normal leading-normal"><span class="font-medium text-gray-800 dark:text-gray-200">Servicio:</span> {order.descripcion_problema}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-col gap-8 bg-white dark:bg-gray-800/50 p-6 rounded-xl border border-gray-200 dark:border-gray-700">
                        <h2 class="text-[#0d121b] dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em]">Detalles de la Tarea</h2>
                        <div class="flex flex-col md:flex-row gap-6">
                            <div class="flex flex-1">
                                <label class="flex flex-col w-full">
                                    <p class="text-[#0d121b] dark:text-gray-200 text-base font-medium leading-normal pb-2">Descripción de Acciones Realizadas</p>
                                    <textarea name="description" class="form-input flex w-full min-w-0 flex-1 resize-y overflow-hidden rounded-lg text-[#0d121b] dark:text-gray-100 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] dark:border-gray-600 bg-background-light dark:bg-background-dark focus:border-primary dark:focus:border-primary min-h-36 placeholder:text-gray-400 dark:placeholder:text-gray-500 p-[15px] text-base font-normal leading-normal" placeholder="Ej: Se desmontaron las pinzas de freno, se limpiaron y se instalaron nuevas pastillas..." required></textarea>
                                </label>
                            </div>
                            <div class="flex">
                                <label class="flex flex-col w-full md:w-48">
                                    <p class="text-[#0d121b] dark:text-gray-200 text-base font-medium leading-normal pb-2">Tiempo Invertido (hrs)</p>
                                    <input name="time_spent" class="form-input flex w-full min-w-0 flex-1 rounded-lg text-[#0d121b] dark:text-gray-100 focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] dark:border-gray-600 bg-background-light dark:bg-background-dark focus:border-primary dark:focus:border-primary h-12 placeholder:text-gray-400 dark:placeholder:text-gray-500 px-4 text-base font-normal leading-normal" min="0" placeholder="Ej: 2.5" step="0.1" type="number"/>
                                </label>
                            </div>
                        </div>

                        <h2 class="text-[#0d121b] dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em] pt-5 border-t border-gray-200 dark:border-gray-700">Repuestos Utilizados</h2>
                        <div class="flex flex-col gap-4">
                            <label class="flex flex-col w-full">
                                <p class="text-[#0d121b] dark:text-gray-200 text-base font-medium leading-normal pb-2">Buscar Repuestos</p>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500">search</span>
                                    <input type="search" x-model="search" @input.debounce.300ms="filterParts" class="form-input w-full rounded-lg pl-10" placeholder="Buscar por nombre o código..."/>
                                </div>
                            </label>
                            <!-- Search Results -->
                            <div x-show="search.length > 0 && filteredParts.length > 0" x-cloak class="border rounded-lg p-2 max-h-60 overflow-y-auto">
                                <template x-for="part in filteredParts" :key="part.id">
                                    <div @click="addPart(part)" class="cursor-pointer p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md flex justify-between">
                                        <span x-text="part.nombre"></span>
                                        <span class="text-sm text-gray-500" x-text="`Stock: ${part.stock}`"></span>
                                    </div>
                                </template>
                            </div>

                            <!-- Added parts list -->
                            <div class="mt-4 flow-root">
                                <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                            <thead>
                                                <tr>
                                                    <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-0">Repuesto</th>
                                                    <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Stock Disp.</th>
                                                    <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Cantidad a Usar</th>
                                                    <th class="relative py-3.5 pl-3 pr-4 sm:pr-0"></th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                                <template x-if="usedParts.length === 0">
                                                    <tr><td colspan="4" class="text-center py-4 text-gray-500">No se han agregado repuestos.</td></tr>
                                                </template>
                                                <template x-for="usedPart in usedParts" :key="usedPart.id">
                                                    <tr>
                                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 dark:text-white sm:pl-0" x-text="usedPart.nombre"></td>
                                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-300">
                                                            <span x-text="usedPart.stock" :class="{'text-red-500 font-bold': usedPart.stock < 5}"></span>
                                                        </td>
                                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-300">
                                                            <div class="flex items-center gap-2">
                                                                <button type="button" @click="decrementQuantity(usedPart.id)" class="flex items-center justify-center size-7 rounded-md border border-gray-300 dark:border-gray-600">-</button>
                                                                <span class="w-8 text-center font-medium text-gray-900 dark:text-white" x-text="usedPart.quantity"></span>
                                                                <button type="button" @click="incrementQuantity(usedPart.id)" class="flex items-center justify-center size-7 rounded-md border border-gray-300 dark:border-gray-600">+</button>
                                                            </div>
                                                        </td>
                                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                                            <button type="button" @click="removePart(usedPart.id)" class="text-red-600 hover:text-red-800 p-1">
                                                                <span class="material-symbols-outlined text-xl">delete</span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                </template>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden input to store used parts data for form submission -->
                    <input type="hidden" name="used_parts" :value="JSON.stringify(usedParts.map(p => ({ id: p.id, quantity: p.quantity })))">

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row items-center justify-end gap-3 pt-6 pb-8">
                        <a href={`/mecanico/detalle_orden_trabajo?id=${orderId}`} class="flex w-full sm:w-auto max-w-xs cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 bg-gray-200/80 dark:bg-gray-700/80 text-gray-800 dark:text-gray-200 hover:bg-gray-300/80 dark:hover:bg-gray-600/80 gap-2 text-base font-bold leading-normal tracking-[0.015em] min-w-0 px-6 text-center">Cancelar</a>
                        <button type="submit" class="flex w-full sm:w-auto max-w-xs cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 bg-primary text-white hover:bg-primary/90 gap-2 text-base font-bold leading-normal tracking-[0.015em] min-w-0 px-6">Guardar Entrada</button>
                    </div>
                </form>
            </div>
        ) : (
            <div class="text-center py-20">
                <p class="text-lg text-gray-500">{error || "Cargando datos..."}</p>
            </div>
        )}
    </main>
</div>

<script>
    /**
     * @typedef {object} Part
     * @property {number} id
     * @property {string} nombre
     * @property {number} stock
     * @property {number} [quantity]
     */

    /**
     * Manages the state and logic for searching, adding, and managing parts for a work order.
     * @param {Part[]} allParts - The initial list of all available parts.
     * @returns {import('alpinejs').AlpineComponent<{allParts: Part[], search: string, filteredParts: Part[], usedParts: (Part & {quantity: number})[]}>}
     */
    function partsManager(allParts: any[]) {
        return {
            allParts: allParts,
            search: '',
            filteredParts: [] as any[],
            usedParts: [] as any[], // Array of Part objects with an added 'quantity' property

            init() {
                console.log('Alpine parts manager initialized.');
            },

            filterParts() {
                if (this.search === '') {
                    this.filteredParts = [];
                    return;
                }
                this.filteredParts = this.allParts.filter((part: any) =>
                    part.nombre.toLowerCase().includes(this.search.toLowerCase()) &&
                    !this.usedParts.some((used: any) => used.id === part.id)
                );
            },

            /** @param {Part} part */
            addPart(part: any) {
                if (!this.usedParts.some((p: any) => p.id === part.id)) {
                    this.usedParts.push({ ...part, quantity: 1 });
                    this.search = '';
                    this.filteredParts = [];
                }
            },

            /** @param {number} partId */
            removePart(partId: number) {
                this.usedParts = this.usedParts.filter((p: any) => p.id !== partId);
            },

            /** @param {number} partId */
            incrementQuantity(partId: number) {
                const part = this.usedParts.find((p: any) => p.id === partId);
                if (part && part.quantity < part.stock) {
                    part.quantity++;
                }
            },

            /** @param {number} partId */
            decrementQuantity(partId: number) {
                const part = this.usedParts.find((p: any) => p.id === partId);
                if (part && part.quantity > 1) {
                    part.quantity--;
                }
            }
        }
    }
</script>

</body>
</html>