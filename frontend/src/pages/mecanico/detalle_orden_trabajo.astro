---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { strapiGet, strapiPost, strapiPut } from '../../lib/strapi';

const userRole = Astro.cookies.get('user_role')?.value as 'recepcionista' | 'encargado' | 'mecanico' | undefined;
if (!userRole) {
  return Astro.redirect('/login');
}

// Define interfaces for type safety
interface Cliente {
  nombre: string;
  apellido: string;
  telefono: string;
  email: string;
}

interface Vehiculo {
  marca: string;
  modelo: string;
  ano: number;
  patente: string;
  cliente?: Cliente;
}

interface Repuesto {
  nombre: string;
  sku: string;
  precio: number;
  stock: number;
}

interface Mecanico {
  nombre: string;
  apellido: string;
}

interface Bitacora {
  procedimientos: string;
  fecha: string;
  createdAt?: string;
  mecanico?: Mecanico;
}

interface Orden {
  id: number;
  documentId: string;
  descripcion: string;
  estado: string;
  kilometraje: number;
  fecha_estimada: string;
  fecha_ingreso?: string;
  mecanico?: Mecanico;
  vehiculo?: Vehiculo;
  cliente?: Cliente;
  repuestos?: Repuesto[];
  bitacoras?: Bitacora[];
}

let order: Orden | null = null;
let error = '';
let success = '';

const url = new URL(Astro.request.url);
const orderId = url.searchParams.get('id');

if (!orderId) {
  error = "No se ha especificado un ID de orden.";
} else {
  try {
    // Handle POST requests for status updates or new log entries
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const action = formData.get('action');

      if (action === 'updateStatus') {
        const newStatus = formData.get('status');
        await strapiPut(`/api/orden-de-trabajos/${orderId}`, {
          estado: newStatus
        });
        success = 'Estado actualizado correctamente.';
      }

      if (action === 'addLog') {
        const logNote = formData.get('comment');
        const mechanicId = null; 

        if (logNote) {
          const orderResponse = await strapiGet(`/api/orden-de-trabajos/${orderId}`);
          const orderNumericId = orderResponse.data?.id;
          
          await strapiPost('/api/bitacoras', {
            procedimientos: logNote,
            fecha: new Date().toISOString().split('T')[0],
            orden_de_trabajo: orderNumericId,
            mecanico: mechanicId,
          });
          success = 'Nota agregada a la bitácora.';
        }
      }
      return Astro.redirect(Astro.request.url);
    }

    // Fetch all order data
    const response = await strapiGet(`/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][0]=cliente&populate[mecanico]=true&populate[repuestos]=true&populate[bitacoras][populate][0]=mecanico`);

    if (!response.data) {
      throw new Error('No se pudo cargar la orden de trabajo.');
    }

    const fetchedOrder: Orden = response.data;
    
    if (fetchedOrder.vehiculo?.cliente) {
        fetchedOrder.cliente = fetchedOrder.vehiculo.cliente;
    }
    order = fetchedOrder;

  } catch (e: any) {
    console.error(e);
    error = e.message;
  }
}

// Cost calculation
const partsSubtotal = order?.repuestos?.reduce((sum: number, item: Repuesto) => sum + (item.precio || 0), 0) || 0;
const laborCost = 75000;
const taxRate = 0.19;
const tax = (partsSubtotal + laborCost) * taxRate;
const totalEstimated = partsSubtotal + laborCost + tax;

const formatCurrency = (amount: number) => new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(amount);
---

<DashboardLayout title="Detalle de Orden" role={userRole} currentPath={Astro.url.pathname}>
    {error && <div class="p-4 text-sm text-red-700 bg-red-50 rounded-lg border border-red-100 flex items-center gap-2" role="alert"><span class="material-symbols-outlined text-lg">error</span><span>{error}</span></div>}
    {success && <div class="p-4 text-sm text-green-700 bg-green-50 rounded-lg border border-green-100 flex items-center gap-2" role="alert"><span class="material-symbols-outlined text-lg">check_circle</span><span>{success}</span></div>}

    {order ? (
        <>
            <div class="flex flex-wrap items-start justify-between gap-4">
                <div class="flex min-w-72 flex-col gap-1">
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Orden: OT-{order.id}</h1>
                    <p class="text-gray-500 dark:text-gray-400 text-base">
                        Asignado a: <span class="font-medium text-gray-900 dark:text-white">{order.mecanico?.nombre || 'No asignado'}</span>
                    </p>
                </div>
                <div class="flex items-center gap-3 flex-wrap">
                    <form method="POST" class="flex items-center gap-3">
                        <input type="hidden" name="action" value="updateStatus" />
                        <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Estado:</span>
                        <select name="status" class="form-select h-10 rounded-lg bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white focus:ring-primary-500 focus:border-primary-500 text-sm" onchange="this.form.submit()">
                            <option value="ingresado" selected={order.estado === 'ingresado'}>Ingresado</option>
                            <option value="en_diagnostico" selected={order.estado === 'en_diagnostico'}>En Diagnóstico</option>
                            <option value="en_reparacion" selected={order.estado === 'en_reparacion'}>En Reparación</option>
                            <option value="finalizado" selected={order.estado === 'finalizado'}>Finalizado</option>
                            <option value="entregado" selected={order.estado === 'entregado'}>Entregado</option>
                        </select>
                    </form>
                    <Button variant="outline" onclick="window.print()" icon="print">
                        Imprimir
                    </Button>
                </div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-6">
                <div class="lg:col-span-1 flex flex-col gap-6">
                    <Card noPadding>
                        <h3 class="text-gray-900 dark:text-white text-lg font-bold px-5 py-4 border-b border-gray-100 dark:border-gray-800">Información General</h3>
                        <div class="p-5 grid grid-cols-1 gap-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Cliente</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{order.cliente?.nombre || 'N/A'}</p>
                                </div>
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Teléfono</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{order.cliente?.telefono || 'N/A'}</p>
                                </div>
                            </div>
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Vehículo</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{`${order.vehiculo?.marca || ''} ${order.vehiculo?.modelo || ''}`}</p>
                                </div>
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Año</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{order.vehiculo?.ano || 'N/A'}</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Matrícula</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{order.vehiculo?.patente || 'N/A'}</p>
                                </div>
                                <div class="flex flex-col gap-1">
                                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Kilometraje</p>
                                    <p class="text-gray-900 dark:text-white font-medium">{order.kilometraje ? `${order.kilometraje} km` : 'N/A'}</p>
                                </div>
                            </div>
                            
                            <div class="flex flex-col gap-1 pt-2 border-t border-gray-100 dark:border-gray-800">
                                <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Email</p>
                                <p class="text-gray-900 dark:text-white font-medium truncate">{order.cliente?.email || 'N/A'}</p>
                            </div>
                            
                            <div class="flex flex-col gap-1">
                                <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Fecha Entrega</p>
                                <p class="text-gray-900 dark:text-white font-medium">{order.fecha_estimada ? new Date(order.fecha_estimada).toLocaleDateString() : 'N/A'}</p>
                            </div>
                        </div>
                    </Card>
                    
                    <Card noPadding>
                        <h3 class="text-gray-900 dark:text-white text-lg font-bold px-5 py-4 border-b border-gray-100 dark:border-gray-800">Descripción del Problema</h3>
                        <p class="p-5 text-gray-600 dark:text-gray-300 text-sm leading-relaxed">{order.descripcion || 'No hay descripción.'}</p>
                    </Card>
                </div>
                
                <div class="lg:col-span-2 flex flex-col gap-6">
                    <Card noPadding>
                        <div class="border-b border-gray-200 dark:border-gray-700">
                            <nav aria-label="Tabs" class="-mb-px flex gap-6 px-5">
                                <a aria-current="page" class="shrink-0 border-b-2 border-primary-600 px-1 py-4 text-sm font-medium text-primary-600" href="#">Bitácora</a>
                                <a class="shrink-0 border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-gray-500 dark:hover:text-gray-200" href={`/mecanico/bitacora_repuestos?id=${orderId}`}>Repuestos</a>
                            </nav>
                        </div>
                        <div class="p-5">
                            <div class="flow-root">
                                <ul class="-mb-8" role="list">
                                    {order.bitacoras && order.bitacoras.length > 0 ? (
                                        order.bitacoras.map((log: Bitacora, index: number) => (
                                            <li>
                                                <div class="relative pb-8">
                                                    {order.bitacoras && index !== order.bitacoras.length - 1 && <span aria-hidden="true" class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-700"></span>}
                                                    <div class="relative flex space-x-3">
                                                        <div>
                                                            <span class="h-8 w-8 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center ring-8 ring-white dark:ring-gray-800">
                                                                <span class="material-symbols-outlined text-base text-blue-600 dark:text-blue-400">build</span>
                                                            </span>
                                                        </div>
                                                        <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                                                            <div>
                                                                <p class="text-sm text-gray-600 dark:text-gray-300">{log.procedimientos} <span class="font-medium text-gray-900 dark:text-white"> - {log.mecanico?.nombre || 'Sistema'}</span></p>
                                                            </div>
                                                            <div class="whitespace-nowrap text-right text-sm text-gray-500 dark:text-gray-400">
                                                                <time datetime={log.createdAt || ''}>{log.createdAt ? new Date(log.createdAt).toLocaleString() : 'N/A'}</time>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        ))
                                    ) : (
                                        <div class="text-center py-6">
                                            <p class="text-sm text-gray-500 dark:text-gray-400">No hay entradas en la bitácora.</p>
                                        </div>
                                    )}
                                </ul>
                            </div>
                            <form method="POST" class="mt-8 flex gap-3">
                                <input type="hidden" name="action" value="addLog" />
                                <div class="flex-1">
                                    <label class="sr-only" for="comment">Añadir nota</label>
                                    <textarea class="block w-full rounded-lg border-gray-300 dark:border-gray-600 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm dark:bg-gray-700 dark:text-white" id="comment" name="comment" placeholder="Añadir una nota a la bitácora..." rows="3"></textarea>
                                </div>
                                <div class="mt-2 flex justify-end">
                                    <Button type="submit">Agregar Nota</Button>
                                </div>
                            </form>
                        </div>
                    </Card>
                    
                    <Card noPadding>
                        <h3 class="text-gray-900 dark:text-white text-lg font-bold px-5 py-4 border-b border-gray-100 dark:border-gray-800">Resumen de Costos</h3>
                        <div class="p-5 space-y-3">
                            <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                                <span>Subtotal Repuestos</span>
                                <span>{formatCurrency(partsSubtotal)}</span>
                            </div>
                            <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                                <span>Mano de Obra (Estimado)</span>
                                <span>{formatCurrency(laborCost)}</span>
                            </div>
                            <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                                <span>IVA (19%)</span>
                                <span>{formatCurrency(tax)}</span>
                            </div>
                            <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>
                            <div class="flex justify-between text-base font-bold text-gray-900 dark:text-white">
                                <span>Total Estimado</span>
                                <span>{formatCurrency(totalEstimated)}</span>
                            </div>
                        </div>
                    </Card>
                </div>
            </div>
        </>
    ) : (
        <div class="text-center py-20">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600 mb-4"></div>
            <p class="text-lg text-gray-500">{error || "Cargando datos de la orden..."}</p>
        </div>
    )}
</DashboardLayout>
