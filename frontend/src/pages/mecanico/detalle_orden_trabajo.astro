---
import '../../styles/global.css';

const jwt = Astro.cookies.get('jwt')?.value;
if (!jwt) {
  return Astro.redirect('/login');
}

// Define interfaces for type safety
interface Vehiculo {
  marca: string;
  modelo: string;
  anio: number;
  patente: string;
  cliente?: {
    data?: {
      attributes: {
        nombre: string;
        apellido: string;
        telefono: string;
        email: string;
      }
    }
  }
}

interface Repuesto {
  nombre: string;
  sku: string;
  precio: number;
  stock: number;
}

interface Bitacora {
  descripcion: string;
  fecha: string;
  createdAt?: string;
  mecanico?: {
    data?: {
      attributes: {
        nombre: string;
        apellido: string;
      }
    }
  };
}

interface Orden {
  id: number;
  descripcion_problema: string;
  estado: string;
  kilometraje: number;
  fecha_entrega_estimada: string;
  mecanico?: { data?: { attributes: { nombre: string; apellido: string; } } };
  vehiculo?: { data?: { attributes: Vehiculo } };
  cliente?: { data?: { attributes: { nombre: string; apellido: string; telefono: string; email: string; } } };
  repuestos?: { data: { id: number; attributes: Repuesto }[] };
  bitacoras?: { data: { id: number; attributes: Bitacora }[] };
}

let order: Orden | null = null;
let error = '';
let success = '';

const url = new URL(Astro.request.url);
const orderId = url.searchParams.get('id');

if (!orderId) {
  error = "No se ha especificado un ID de orden.";
} else {
  try {
    // Handle POST requests for status updates or new log entries
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const action = formData.get('action');

      if (action === 'updateStatus') {
        const newStatus = formData.get('status');
        const res = await fetch(`http://localhost:1337/api/orden-de-trabajos/${orderId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${jwt}` },
          body: JSON.stringify({ data: { estado: newStatus } })
        });
        if (res.ok) success = 'Estado actualizado correctamente.';
        else throw new Error('No se pudo actualizar el estado.');
      }

      if (action === 'addLog') {
        const logNote = formData.get('comment');
        const meRes = await fetch('http://localhost:1337/api/users/me?populate=mecanico', { headers: { 'Authorization': `Bearer ${jwt}` } });
        const meData = await meRes.json();
        const mechanicId = meData.mecanico?.id;

        if (logNote && mechanicId) {
          const res = await fetch('http://localhost:1337/api/bitacoras', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${jwt}` },
            body: JSON.stringify({
              data: {
                descripcion: logNote,
                orden_de_trabajo: orderId,
                mecanico: mechanicId,
              }
            })
          });
          if (res.ok) success = 'Nota agregada a la bitácora.';
          else throw new Error('No se pudo agregar la nota.');
        }
      }
       // Redirect to the same page to show updated data
      return Astro.redirect(Astro.request.url);
    }

    // Fetch all order data
    const res = await fetch(`http://localhost:1337/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][0]=cliente&populate[mecanico]=true&populate[repuestos]=true&populate[bitacoras][populate][0]=mecanico`, {
      headers: { 'Authorization': `Bearer ${jwt}` }
    });

    if (!res.ok) {
      throw new Error('No se pudo cargar la orden de trabajo.');
    }

    const orderData = await res.json();
    const fetchedOrder: Orden = { id: orderData.data.id, ...orderData.data.attributes };
    
    // Extract client from the nested structure
    if (fetchedOrder.vehiculo?.data?.attributes.cliente) {
        fetchedOrder.cliente = fetchedOrder.vehiculo.data.attributes.cliente;
    }
    order = fetchedOrder;

  } catch (e: any) {
    console.error(e);
    error = e.message;
  }
}

// Cost calculation
const partsSubtotal = order?.repuestos?.data.reduce((sum, item) => sum + (item.attributes.precio || 0), 0) || 0;
const laborCost = 75.00; // Placeholder
const taxRate = 0.21;
const tax = (partsSubtotal + laborCost) * taxRate;
const totalEstimated = partsSubtotal + laborCost + tax;

const formatCurrency = (amount: number) => new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(amount);
