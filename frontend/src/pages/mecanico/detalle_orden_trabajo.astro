export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { strapiGet, strapiPost, strapiPut } from '../../lib/strapi';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

// Define interfaces for type safety
interface Vehiculo {
  marca: string;
  modelo: string;
  ano: number;
  patente: string;
  cliente?: {
    data?: {
      attributes: {
        nombre: string;
        apellido: string;
        telefono: string;
        email: string;
      }
    }
  }
}

interface Repuesto {
  nombre: string;
  sku: string;
  precio: number;
  stock: number;
}

interface Bitacora {
  descripcion: string;
  fecha: string;
  createdAt?: string;
  mecanico?: {
    data?: {
      attributes: {
        nombre: string;
        apellido: string;
      }
    }
  };
}

interface Orden {
  id: number;
  descripcion_problema: string;
  estado: string;
  kilometraje: number;
  fecha_entrega_estimada: string;
  mecanico?: { data?: { attributes: { nombre: string; apellido: string; } } };
  vehiculo?: { data?: { attributes: Vehiculo } };
  cliente?: { data?: { attributes: { nombre: string; apellido: string; telefono: string; email: string; } } };
  repuestos?: { data: { id: number; attributes: Repuesto }[] };
  bitacoras?: { data: { id: number; attributes: Bitacora }[] };
}

let order: Orden | null = null;
let error = '';
let success = '';

const url = new URL(Astro.request.url);
const orderId = url.searchParams.get('id');

if (!orderId) {
  error = "No se ha especificado un ID de orden.";
} else {
  try {
    // Handle POST requests for status updates or new log entries
    if (Astro.request.method === 'POST') {
      const formData = await Astro.request.formData();
      const action = formData.get('action');

      if (action === 'updateStatus') {
        const newStatus = formData.get('status');
        await strapiPut(`/api/orden-de-trabajos/${orderId}`, {
          estado: newStatus
        });
        success = 'Estado actualizado correctamente.';
      }

      if (action === 'addLog') {
        const logNote = formData.get('comment');
        const mechanicId = null; // Skip mechanic ID for now

        if (logNote) {
          await strapiPost('/api/bitacoras', {
            descripcion: logNote,
            orden_de_trabajo: orderId,
            mecanico: mechanicId,
          });
          success = 'Nota agregada a la bitácora.';
        }
      }
       // Redirect to the same page to show updated data
      return Astro.redirect(Astro.request.url);
    }

    // Fetch all order data
    const orderData = await strapiGet(`/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][0]=cliente&populate[mecanico]=true&populate[repuestos]=true&populate[bitacoras][populate][0]=mecanico`);

    if (!orderData.data || orderData.data.length === 0) {
      throw new Error('No se pudo cargar la orden de trabajo.');
    }

    const fetchedOrder: Orden = orderData.data[0];
    
    // Extract client from the nested structure
    if (fetchedOrder.vehiculo?.data?.attributes.cliente) {
        fetchedOrder.cliente = fetchedOrder.vehiculo.data.attributes.cliente;
    }
    order = fetchedOrder;

  } catch (e: any) {
    console.error(e);
    error = e.message;
  }
}

// Cost calculation
const partsSubtotal = order?.repuestos?.data.reduce((sum, item) => sum + (item.attributes.precio || 0), 0) || 0;
const laborCost = 75.00; // Placeholder
const taxRate = 0.21;
const tax = (partsSubtotal + laborCost) * taxRate;
const totalEstimated = partsSubtotal + laborCost + tax;

const formatCurrency = (amount: number) => new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(amount);
