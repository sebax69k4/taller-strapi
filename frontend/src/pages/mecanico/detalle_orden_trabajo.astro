<script define:vars={{ allParts }}>
  document.addEventListener('alpine:init', () => {
    Alpine.data('partsManager', () => ({
      showAddPart: false,
      search: '',
      selectedPart: null,
      allParts: allParts,
      
      get filteredParts() {
        if (this.search.length < 2) return [];
        return this.allParts.filter(p => 
          p.nombre.toLowerCase().includes(this.search.toLowerCase()) || 
          p.sku.toLowerCase().includes(this.search.toLowerCase())
        ).slice(0, 5);
      },
      
      selectPart(part) {
        this.selectedPart = part;
        this.search = '';
      }
    }));

    Alpine.data('timer', (startTime, status) => ({
        time: 0,
        interval: null,
        isRunning: false,
        formattedTime: '00:00:00',

        init() {
            if (status === 'en_diagnostico' || status === 'en_reparacion') {
                // Calculate elapsed time since last update (simplified)
                // In a real app, we would track cumulative time. 
                // Here we just show time since last status update as a demo.
                const start = new Date(startTime).getTime();
                this.isRunning = true;
                
                this.interval = setInterval(() => {
                    const now = new Date().getTime();
                    const diff = now - start;
                    
                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                    
                    this.formattedTime = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                }, 1000);
            }
        }
    }));
  });
</script>
