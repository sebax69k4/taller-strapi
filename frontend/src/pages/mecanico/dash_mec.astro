<p class="text-sm font-medium leading-normal">Descontar Stock</p>
</a>
</nav>
</div>
<div class="mt-auto flex flex-col gap-2">
<a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="/settings">
<span class="material-symbols-outlined">settings</span>
<p class="text-sm font-medium leading-normal">Configuración</p>
</a>
<a class="flex items-center gap-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg" href="/logout">
<span class="material-symbols-outlined">logout</span>
<p class="text-sm font-medium leading-normal">Cerrar Sesión</p>
</a>
</div>
</aside>
<!-- Main Content -->
<main class="flex-1 p-6 lg:p-8">
<div class="flex flex-wrap justify-between items-center gap-4 px-4 sm:px-10">
<div class="flex min-w-72 flex-col gap-2">
<p class="text-3xl lg:text-4xl font-black leading-tight tracking-[-0.033em] text-gray-900 dark:text-white">Mis Órdenes de Trabajo</p>
<p class="text-base font-normal leading-normal text-gray-500 dark:text-gray-400">Hola {mechanicName}, aquí tienes un resumen de tus órdenes asignadas.</p>
</div>
</div>

{error && <p class="text-red-500 px-4 sm:px-10 mt-4">{error}</p>}

<div class="flex gap-2 sm:gap-3 px-4 sm:px-10 overflow-x-auto py-4">
    <a href="/mecanico/dash_mec?status=Todas" class={`flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg px-4 text-sm font-medium leading-normal ${!statusFilter || statusFilter === 'Todas' ? 'bg-primary text-white' : 'bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 text-gray-900 dark:text-gray-200'}`}>Todas</a>
    {Object.keys(statusConfig).filter(s => s !== 'Entregado').map(status => (
        <a href={`/mecanico/dash_mec?status=${status}`} class={`flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-lg px-4 text-sm font-medium leading-normal ${statusFilter === status ? 'bg-primary text-white' : 'bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 text-gray-900 dark:text-gray-200'}`}>{status}</a>
    ))}
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-4 sm:px-10">
    {filteredOrders.length > 0 ? (
        filteredOrders.map((order: Order) => {
            const statusInfo = statusConfig[order.estado] || { color: '#6c757d', label: order.estado };
            const vehicleName = order.vehiculo ? `${order.vehiculo.marca} ${order.vehiculo.modelo}` : 'Vehículo no especificado';
            const imageUrl = order.vehiculo?.imagen_url || 'https://cdn.usegalileo.ai/stability/64938e55-2324-4692-a43a-99badb3a964a.png';

            return (
                <div class="flex flex-col items-stretch justify-start rounded-xl shadow-sm bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="w-full bg-center bg-no-repeat aspect-[16/9] bg-cover" style={`background-image: url("${imageUrl}");`}></div>
                    <div class="flex w-full grow flex-col items-stretch justify-center gap-3 p-4">
                        <div class="flex items-center gap-2">
                            <span class="inline-block h-2 w-2 rounded-full" style={`background-color: ${statusInfo.color}`}></span>
                            <p class="text-sm font-medium leading-normal" style={`color: ${statusInfo.color}`}>{statusInfo.label}</p>
                        </div>
                        <p class="text-lg font-bold leading-tight tracking-[-0.015em] text-gray-900 dark:text-white">OT-{order.id} - {vehicleName}</p>
                        <div class="flex flex-col gap-1">
                            <p class="text-base font-normal leading-normal text-gray-500 dark:text-gray-400">{order.descripcion || 'Sin descripción.'}</p>
                            <p class="text-sm font-normal leading-normal text-gray-400 dark:text-gray-500">
                                Asignada: {new Date(order.createdAt).toLocaleDateString()}
                            </p>
                        </div>
                        <a href={`/mecanico/detalle_orden_trabajo?id=${order.id}`} class="flex mt-2 w-full max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-medium leading-normal hover:bg-primary/90">
                            <span class="truncate">Ver Detalles</span>
                        </a>
                    </div>
                </div>
            )
        })
    ) : (
        <div class="col-span-full text-center py-10">
            <p class="text-gray-500 dark:text-gray-400">No tienes órdenes de trabajo asignadas con este estado.</p>
        </div>
    )}
</div>
</main>
</div>
</body></html>