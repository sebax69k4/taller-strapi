---
export const prerender = false;
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import { strapiGet } from '../../lib/strapi';
import '../../styles/global.css';

const userRole = Astro.cookies.get('user_role')?.value;
if (!userRole) {
  return Astro.redirect('/login');
}

interface Order {
  id: number;
  documentId: string;
  estado: string;
  descripcion: string;
  diagnostico: string | null;
  fecha_ingreso: string;
  fecha_entrega: string | null;
  mecanico: {
    nombre: string;
    apellido: string;
  } | null;
  repuestos: {
    nombre: string;
    precio: number;
  }[];
  bitacoras: {
    procedimientos: string;
    fecha: string;
    observaciones: string;
  }[];
}

interface Vehiculo {
  id: number;
  documentId: string;
  patente: string;
  marca: string;
  modelo: string;
  ano: number;
  numero_de_chasis: string;
  cliente: {
    nombre: string;
    apellido: string;
    telefono: string;
  } | null;
}

let vehiculo: Vehiculo | null = null;
let ordenes: Order[] = [];
let error = '';

const orderId = Astro.url.searchParams.get('ordenId');
const patente = Astro.url.searchParams.get('patente');

// Si viene de una orden, obtener el veh√≠culo de esa orden
if (orderId) {
  try {
    const orderData = await strapiGet(`/api/orden-de-trabajos/${orderId}?populate[vehiculo][populate][cliente][fields][0]=nombre&populate[vehiculo][populate][cliente][fields][1]=apellido&populate[vehiculo][populate][cliente][fields][2]=telefono`);
    
    if (orderData.data?.vehiculo) {
      vehiculo = orderData.data.vehiculo;
      
      // Obtener todas las √≥rdenes de este veh√≠culo
      const ordenesData = await strapiGet(`/api/orden-de-trabajos?filters[vehiculo][documentId][$eq]=${vehiculo!.documentId}&populate[mecanico][fields][0]=nombre&populate[mecanico][fields][1]=apellido&populate[repuestos][fields][0]=nombre&populate[repuestos][fields][1]=precio&populate[bitacoras][fields][0]=procedimientos&populate[bitacoras][fields][1]=fecha&populate[bitacoras][fields][2]=observaciones&sort[0]=fecha_ingreso:desc`);
      ordenes = ordenesData.data || [];
    }
  } catch (e: any) {
    console.error('Error:', e);
    error = 'Error al cargar datos del veh√≠culo';
  }
} else if (patente) {
  try {
    // Buscar veh√≠culo por patente
    const vehData = await strapiGet(`/api/vehiculos?filters[patente][$containsi]=${patente}&populate[cliente][fields][0]=nombre&populate[cliente][fields][1]=apellido&populate[cliente][fields][2]=telefono&pagination[limit]=1`);
    
    if (vehData.data && vehData.data.length > 0) {
      vehiculo = vehData.data[0];
      
      // Obtener √≥rdenes
      const ordenesData = await strapiGet(`/api/orden-de-trabajos?filters[vehiculo][documentId][$eq]=${vehiculo!.documentId}&populate[mecanico][fields][0]=nombre&populate[mecanico][fields][1]=apellido&populate[repuestos][fields][0]=nombre&populate[repuestos][fields][1]=precio&populate[bitacoras][fields][0]=procedimientos&populate[bitacoras][fields][1]=fecha&populate[bitacoras][fields][2]=observaciones&sort[0]=fecha_ingreso:desc`);
      ordenes = ordenesData.data || [];
    }
  } catch (e: any) {
    console.error('Error:', e);
    error = 'Error al buscar veh√≠culo';
  }
}

const getEstadoColor = (estado: string) => {
  const colors: Record<string, string> = {
    ingresado: 'bg-gray-100 text-gray-800',
    en_diagnostico: 'bg-yellow-100 text-yellow-800',
    en_reparacion: 'bg-blue-100 text-blue-800',
    finalizado: 'bg-green-100 text-green-800',
    facturado: 'bg-purple-100 text-purple-800',
    entregado: 'bg-emerald-100 text-emerald-800'
  };
  return colors[estado] || 'bg-gray-100 text-gray-800';
};

const formatEstado = (estado: string) => {
  const labels: Record<string, string> = {
    ingresado: 'Ingresado',
    en_diagnostico: 'En Diagn√≥stico',
    en_reparacion: 'En Reparaci√≥n',
    finalizado: 'Finalizado',
    facturado: 'Facturado',
    entregado: 'Entregado'
  };
  return labels[estado] || estado;
};

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};

// Calcular estad√≠sticas
const totalOrdenes = ordenes.length;
const trabajosRealizados = new Set(ordenes.flatMap(o => o.bitacoras?.map(b => b.procedimientos) || [])).size;
const repuestosUsados = ordenes.reduce((sum, o) => sum + (o.repuestos?.length || 0), 0);
---

<DashboardLayout title="Historial del Veh√≠culo" role="mecanico" currentPath="/mecanico/historial_vehiculo">
  <div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Historial T√©cnico del Veh√≠culo</h1>
      <p class="text-gray-500 dark:text-gray-400 mt-2">Consulta trabajos anteriores para un mejor diagn√≥stico.</p>
    </div>

    <!-- Search Form -->
    {!vehiculo && (
      <form method="GET" class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 mb-8">
        <div class="flex flex-col md:flex-row gap-4">
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Buscar por patente</label>
            <div class="relative">
              <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">directions_car</span>
              <input 
                type="text" 
                name="patente" 
                placeholder="Ej: ABC123"
                class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 font-mono text-lg uppercase"
                autofocus
              />
            </div>
          </div>
          <div class="flex items-end">
            <button type="submit" class="w-full md:w-auto px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <span class="material-symbols-outlined">search</span>
              Buscar
            </button>
          </div>
        </div>
      </form>
    )}

    {error && (
      <div class="p-4 mb-6 bg-red-100 dark:bg-red-900/30 border border-red-300 dark:border-red-700 rounded-lg text-red-800 dark:text-red-200 flex items-center gap-2">
        <span class="material-symbols-outlined">error</span>
        <p>{error}</p>
      </div>
    )}

    {(patente || orderId) && !vehiculo && !error && (
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-12 text-center">
        <span class="material-symbols-outlined text-5xl text-gray-300 dark:text-gray-600 mb-4">no_crash</span>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Veh√≠culo no encontrado</h3>
        <p class="text-gray-500 dark:text-gray-400">No se encontr√≥ informaci√≥n del veh√≠culo.</p>
      </div>
    )}

    {vehiculo && (
      <div class="space-y-6">
        <!-- Bot√≥n Volver -->
        <a 
          href={orderId ? `/mecanico/detalle_orden_trabajo?id=${orderId}` : '/mecanico/dash_mec'}
          class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary-600 transition-colors"
        >
          <span class="material-symbols-outlined">arrow_back</span>
          Volver
        </a>

        <!-- Vehicle Info Card -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl text-white p-6">
          <div class="flex items-center gap-6">
            <div class="w-20 h-20 rounded-xl bg-white/20 flex items-center justify-center">
              <span class="material-symbols-outlined text-4xl">directions_car</span>
            </div>
            <div class="flex-1">
              <p class="text-sm opacity-75 mb-1">Patente</p>
              <h2 class="text-3xl font-bold font-mono">{vehiculo.patente}</h2>
              <p class="text-lg mt-1">{vehiculo.marca} {vehiculo.modelo} ({vehiculo.ano})</p>
            </div>
            <div class="text-right">
              <p class="text-sm opacity-75">Propietario</p>
              <p class="font-bold">{vehiculo.cliente?.nombre} {vehiculo.cliente?.apellido}</p>
              {vehiculo.cliente?.telefono && (
                <p class="text-sm opacity-75 mt-1">üìû {vehiculo.cliente.telefono}</p>
              )}
            </div>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <Card>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">receipt_long</span>
              </div>
              <div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">{totalOrdenes}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Visitas al taller</p>
              </div>
            </div>
          </Card>
          
          <Card>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-green-600 dark:text-green-400">build</span>
              </div>
              <div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">{trabajosRealizados}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Procedimientos</p>
              </div>
            </div>
          </Card>
          
          <Card>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                <span class="material-symbols-outlined text-purple-600 dark:text-purple-400">inventory_2</span>
              </div>
              <div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">{repuestosUsados}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">Repuestos usados</p>
              </div>
            </div>
          </Card>
        </div>

        <!-- Timeline de √ìrdenes -->
        <Card noPadding>
          <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
              <span class="material-symbols-outlined">history</span>
              Historial de Trabajos
            </h3>
          </div>
          
          {ordenes.length > 0 ? (
            <div class="divide-y divide-gray-200 dark:divide-gray-700">
              {ordenes.map((orden, index) => (
                <div class="p-6">
                  <!-- Orden Header -->
                  <div class="flex items-start justify-between mb-4">
                    <div>
                      <div class="flex items-center gap-3 mb-1">
                        <span class="font-bold text-gray-900 dark:text-white text-lg">OT-{orden.id}</span>
                        <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${getEstadoColor(orden.estado)}`}>
                          {formatEstado(orden.estado)}
                        </span>
                      </div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">
                        {formatDate(orden.fecha_ingreso)}
                        {orden.mecanico && ` ‚Ä¢ ${orden.mecanico.nombre} ${orden.mecanico.apellido}`}
                      </p>
                    </div>
                  </div>
                  
                  <!-- Descripci√≥n -->
                  <div class="mb-4">
                    <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Motivo de ingreso:</p>
                    <p class="text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-900/50 p-3 rounded-lg text-sm">
                      {orden.descripcion}
                    </p>
                  </div>
                  
                  <!-- Diagn√≥stico si existe -->
                  {orden.diagnostico && (
                    <div class="mb-4">
                      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Diagn√≥stico:</p>
                      <p class="text-gray-600 dark:text-gray-400 bg-yellow-50 dark:bg-yellow-900/20 p-3 rounded-lg text-sm border-l-4 border-yellow-400">
                        {orden.diagnostico}
                      </p>
                    </div>
                  )}
                  
                  <!-- Trabajos Realizados -->
                  {orden.bitacoras && orden.bitacoras.length > 0 && (
                    <div class="mb-4">
                      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Trabajos realizados:</p>
                      <ul class="space-y-1">
                        {orden.bitacoras.map((bitacora) => (
                          <li class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
                            <span class="material-symbols-outlined text-green-500 text-sm mt-0.5">check_circle</span>
                            <span>{bitacora.procedimientos}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                  
                  <!-- Repuestos Utilizados -->
                  {orden.repuestos && orden.repuestos.length > 0 && (
                    <div>
                      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Repuestos utilizados:</p>
                      <div class="flex flex-wrap gap-2">
                        {orden.repuestos.map((repuesto) => (
                          <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded text-xs text-gray-700 dark:text-gray-300">
                            <span class="material-symbols-outlined text-sm">inventory_2</span>
                            {repuesto.nombre}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              ))}
            </div>
          ) : (
            <div class="p-12 text-center">
              <span class="material-symbols-outlined text-4xl text-gray-300 dark:text-gray-600 mb-4">folder_open</span>
              <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Sin historial</h4>
              <p class="text-gray-500 dark:text-gray-400">Este veh√≠culo no tiene trabajos registrados anteriormente.</p>
            </div>
          )}
        </Card>

        <!-- Tip Box -->
        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-200 dark:border-blue-800 p-4">
          <div class="flex gap-3">
            <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">lightbulb</span>
            <div>
              <p class="font-medium text-blue-800 dark:text-blue-200">Tip para el diagn√≥stico</p>
              <p class="text-sm text-blue-700 dark:text-blue-300 mt-1">
                Revisa los trabajos anteriores para identificar problemas recurrentes o verificar si hay garant√≠as vigentes.
              </p>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Help Text cuando no hay b√∫squeda -->
    {!vehiculo && !patente && !orderId && (
      <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-200 dark:border-blue-800 p-6">
        <div class="flex gap-4">
          <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-2xl">info</span>
          <div>
            <h3 class="font-bold text-blue-800 dark:text-blue-200 mb-2">¬øPara qu√© sirve el historial?</h3>
            <ul class="text-blue-700 dark:text-blue-300 text-sm space-y-1">
              <li>‚Ä¢ Ver trabajos realizados anteriormente en el veh√≠culo</li>
              <li>‚Ä¢ Identificar problemas recurrentes</li>
              <li>‚Ä¢ Verificar qu√© repuestos se han usado</li>
              <li>‚Ä¢ Consultar diagn√≥sticos previos</li>
              <li>‚Ä¢ Mejorar la calidad del servicio actual</li>
            </ul>
          </div>
        </div>
      </div>
    )}
  </div>
</DashboardLayout>
