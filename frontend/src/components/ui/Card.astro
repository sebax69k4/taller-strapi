---
interface Props {
  class?: string;
  noPadding?: boolean;
}

const { class: className, noPadding = false } = Astro.props;
---

<div class:list={[
  "bg-white rounded-xl shadow-card border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-lg",
  noPadding ? "" : "p-6",
  className
]}>
  <slot />
</div>
