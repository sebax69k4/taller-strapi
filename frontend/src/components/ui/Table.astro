---
interface Props {
  headers: string[];
  class?: string;
}

const { headers, class: className } = Astro.props;
---

<div class:list={["overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm", className]}>
  <div class="overflow-x-auto">
    <table class="w-full text-left text-sm text-gray-500">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          {headers.map((header) => (
            <th scope="col" class="px-6 py-3 font-semibold text-gray-900 uppercase tracking-wider text-xs">
              {header}
            </th>
          ))}
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        <slot />
      </tbody>
    </table>
  </div>
</div>
