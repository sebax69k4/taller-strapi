---
/**
 * PageHeader Component - Encabezado de p√°gina consistente
 */
interface Props {
  title: string;
  subtitle?: string;
  backHref?: string;
  backLabel?: string;
}

const { 
  title, 
  subtitle,
  backHref,
  backLabel = 'Volver'
} = Astro.props;
---

<div class="mb-8">
  {backHref && (
    <a 
      href={backHref}
      class="inline-flex items-center gap-1 text-gray-500 hover:text-blue-600 text-sm mb-3 transition-colors"
    >
      <span class="material-symbols-outlined text-lg">arrow_back</span>
      {backLabel}
    </a>
  )}
  
  <div class="flex items-start justify-between">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800">{title}</h1>
      {subtitle && (
        <p class="text-gray-500 mt-1">{subtitle}</p>
      )}
    </div>
    
    <!-- Slot para acciones -->
    <div class="flex items-center gap-3">
      <slot name="actions" />
    </div>
  </div>
</div>
