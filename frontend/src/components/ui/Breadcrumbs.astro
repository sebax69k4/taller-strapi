---
interface Props {
  items: {
    label: string;
    href?: string;
  }[];
}

const { items } = Astro.props;
---

<nav class="flex" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center space-x-2">
    <li>
      <div class="flex items-center">
        <a href="/" class="text-gray-400 hover:text-gray-500">
          <span class="material-symbols-outlined text-xl">home</span>
          <span class="sr-only">Home</span>
        </a>
      </div>
    </li>
    
    {items.map((item, index) => (
      <li>
        <div class="flex items-center">
          <span class="material-symbols-outlined text-gray-400 text-xl flex-shrink-0">chevron_right</span>
          {item.href ? (
            <a href={item.href} class="ml-2 text-sm font-medium text-gray-500 hover:text-gray-700">
              {item.label}
            </a>
          ) : (
            <span class="ml-2 text-sm font-medium text-gray-500" aria-current="page">
              {item.label}
            </span>
          )}
        </div>
      </li>
    ))}
  </ol>
</nav>
