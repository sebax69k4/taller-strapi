<aside 
  class="flex w-72 flex-col gap-4 p-5 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 h-screen sticky top-0 overflow-y-auto shadow-sm z-20"
  x-data={`{ openSections: ${JSON.stringify(initialOpen)} }`}
>
