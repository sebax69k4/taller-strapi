---
interface Props {
  role: 'recepcionista' | 'encargado' | 'mecanico';
  currentPath: string;
}

const { role, currentPath } = Astro.props;

const links = {
  recepcionista: [
    { href: '/recepcion/dash_recep', icon: 'dashboard', label: 'Dashboard' },
    { href: '/recepcion/crear_cliente', icon: 'person_add', label: 'Crear Cliente' },
    { href: '/recepcion/crear_vehiculo', icon: 'directions_car', label: 'Crear Vehículo' },
    { href: '/recepcion/crear_orden', icon: 'post_add', label: 'Crear Orden' },
    { href: '/recepcion/entrega_vehiculo', icon: 'key', label: 'Entrega Vehículo' },
    { href: '/recepcion/list_c_y_v', icon: 'group', label: 'Listar C y V' },
  ],
  encargado: [
    { href: '/encargado/dash_enc', icon: 'dashboard', label: 'Dashboard' },
    { href: '/encargado/inventario', icon: 'inventory', label: 'Inventario' },
    { href: '/encargado/alert_stock', icon: 'inventory_2', label: 'Alertas Stock' },
    { href: '/encargado/asig_orden', icon: 'assignment_ind', label: 'Asignar Orden' },
    { href: '/encargado/disp_mec', icon: 'calendar_view_week', label: 'Disponibilidad' },
    { href: '/encargado/trabajos_en_curso', icon: 'construction', label: 'Trabajos en Curso' },
    { href: '/encargado/gen_factura', icon: 'receipt_long', label: 'Aprobar Facturas' },
    { href: '/encargado/marc_orden', icon: 'flag', label: 'Marcar Orden' },
    { href: '/encargado/disp_mec_zonas', icon: 'view_quilt', label: 'Disp. Mec. Zonas' },
    { href: '/encargado/asignar_orden_zona', icon: 'add_road', label: 'Asignar Orden Zona' },
    { href: '/encargado/detalles_de_orden', icon: 'info', label: 'Detalles de Orden' },
  ],
  mecanico: [
    { href: '/mecanico/dash_mec', icon: 'dashboard', label: 'Mis Órdenes' },
    { href: '/mecanico/detalle_orden_trabajo', icon: 'build', label: 'Detalle Orden' },
    { href: '/mecanico/bitacora_repuestos', icon: 'inventory', label: 'Bitácora' },
    { href: '/mecanico/desc_stock', icon: 'check_circle', label: 'Descontar Stock' },
  ]
};

const currentLinks = links[role] || [];
---

<aside class="flex w-64 flex-col gap-4 p-4 bg-surface-light dark:bg-surface-dark border-r border-border-light dark:border-border-dark h-screen sticky top-0">
    <div class="flex gap-3 items-center px-2 py-2">
        <div class="bg-primary-600 text-white rounded-lg p-2 flex items-center justify-center">
             <span class="material-symbols-outlined">garage</span>
        </div>
        <div class="flex flex-col">
            <h1 class="text-text-light dark:text-text-dark text-base font-bold font-display">Taller Veloz</h1>
            <p class="text-text-muted-light dark:text-text-muted-dark text-xs capitalize">Panel {role}</p>
        </div>
    </div>
    
    <nav class="flex flex-col gap-1 mt-4 flex-1">
        {currentLinks.map(link => {
            const isActive = currentPath === link.href || currentPath.startsWith(link.href + '/');
            return (
                <a 
                    href={link.href} 
                    class:list={[
                        "flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-all duration-200",
                        isActive 
                            ? "bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300" 
                            : "text-text-secondary-light dark:text-text-secondary-dark hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-light dark:hover:text-text-dark"
                    ]}
                >
                    <span class:list={["material-symbols-outlined text-[20px]", isActive ? "text-primary-600 dark:text-primary-400" : "text-gray-400"]}>{link.icon}</span>
                    {link.label}
                </a>
            );
        })}
    </nav>

    <div class="mt-auto flex flex-col gap-1 pt-4 border-t border-border-light dark:border-border-dark">
        <a href="/settings" class="flex items-center gap-3 px-3 py-2.5 text-text-secondary-light dark:text-text-secondary-dark hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-light dark:hover:text-text-dark rounded-lg text-sm font-medium transition-colors">
            <span class="material-symbols-outlined text-[20px] text-gray-400">settings</span>
            Configuración
        </a>
        <a href="/logout" class="flex items-center gap-3 px-3 py-2.5 text-status-error hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg text-sm font-medium transition-colors">
            <span class="material-symbols-outlined text-[20px]">logout</span>
            Cerrar Sesión
        </a>
    </div>
</aside>
